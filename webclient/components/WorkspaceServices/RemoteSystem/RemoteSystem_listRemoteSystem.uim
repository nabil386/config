<!-- This page displays the list of target systems to the user.              -->
<PAGE
  HIDE_CONDITIONAL_LINKS="false"
  PAGE_ID="RemoteSystem_listRemoteSystem"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>

  <SERVER_INTERFACE CLASS="MaintainRemoteSystem" NAME="DISPLAY" OPERATION="listActiveRemoteSystems" PHASE="DISPLAY"/>

  <ACTION_SET BOTTOM="false">
    <ACTION_CONTROL LABEL="ActionControl.Label.New">
      <LINK OPEN_MODAL="true" PAGE_ID="RemoteSystem_createRemoteSystem"/>
    </ACTION_CONTROL>
  </ACTION_SET>

  <LIST>
  <ACTION_SET TYPE="LIST_ROW_MENU">
    <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
      <CONDITION>
        <IS_FALSE NAME="DISPLAY" PROPERTY="recordCanceledInd" />
      </CONDITION>
      <LINK OPEN_MODAL="true" PAGE_ID="RemoteSystem_modifyRemoteSystem">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="systemID"/>
          <TARGET NAME="PAGE" PROPERTY="systemID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <SEPARATOR/>
    <ACTION_CONTROL LABEL="ActionControl.Label.AddService">
      <CONDITION>
        <IS_FALSE NAME="DISPLAY" PROPERTY="recordCanceledInd" />
      </CONDITION>
      <LINK OPEN_MODAL="true" PAGE_ID="RemoteSystem_addService">
       <CONNECT>
         <SOURCE NAME="DISPLAY" PROPERTY="systemID"/>
         <TARGET NAME="PAGE" PROPERTY="remoteSystemID"/>
       </CONNECT>
       <CONNECT>
         <SOURCE NAME="DISPLAY" PROPERTY="targetSystemID"/>
         <TARGET NAME="PAGE" PROPERTY="targetSystemID"/>
       </CONNECT>
     </LINK>
   </ACTION_CONTROL>
   <SEPARATOR/>
    <ACTION_CONTROL LABEL="ActionControl.Label.Delete">
      <CONDITION>
        <IS_FALSE NAME="DISPLAY" PROPERTY="recordCanceledInd" />
      </CONDITION>
      <LINK OPEN_MODAL="true" PAGE_ID="RemoteSystem_cancelRemoteSystem">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="systemID"/>
          <TARGET NAME="PAGE" PROPERTY="systemID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    </ACTION_SET>

    <FIELD LABEL="Field.Label.SystemName" WIDTH="20">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="systemName"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.DisplayName" WIDTH="30">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="nameText"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.DisplayDescription" WIDTH="50">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="descriptionText"/>
      </CONNECT>
    </FIELD>

    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="RemoteSystem_remoteSystemDetails">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="systemID"/>
          <TARGET NAME="PAGE" PROPERTY="remoteSystemID"/>
        </CONNECT>
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="targetSystemID"/>
          <TARGET NAME="PAGE" PROPERTY="targetSystemID"/>
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>
  </LIST>
</PAGE>
