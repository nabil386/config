<PAGE PAGE_ID="LocalizableText_modifyRichTextTranslation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">
    <PAGE_TITLE>
        <CONNECT>
            <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1" />
        </CONNECT>
    </PAGE_TITLE>
    <SERVER_INTERFACE CLASS="LocalizableText" NAME="DISPLAY" OPERATION="readTextTranslation" />
    <SERVER_INTERFACE CLASS="LocalizableText" NAME="ACTION" OPERATION="modifyTextTranslation" PHASE="ACTION" />
    <PAGE_PARAMETER NAME="textTranslationID" />
    <ACTION_SET ALIGNMENT="CENTER" TOP="false">
        <ACTION_CONTROL LABEL="ActionControl.Label.Save" TYPE="SUBMIT" />
        <ACTION_CONTROL LABEL="ActionControl.Label.Cancel" />
    </ACTION_SET>
    <CONNECT>
        <SOURCE NAME="PAGE" PROPERTY="textTranslationID" />
        <TARGET NAME="DISPLAY" PROPERTY="key$textTranslationID" />
    </CONNECT>
    <CONNECT>
        <SOURCE NAME="PAGE" PROPERTY="textTranslationID" />
        <TARGET NAME="ACTION" PROPERTY="textTranslationID" />
    </CONNECT>
    <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="localizableTextID" />
        <TARGET NAME="ACTION" PROPERTY="localizableTextID" />
    </CONNECT>
    <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="localeCode" />
        <TARGET NAME="ACTION" PROPERTY="localeCode" />
    </CONNECT>
    <CLUSTER LABEL_WIDTH="20" TITLE="Cluster.Title.Details">
        <FIELD LABEL="Field.Title.Language" WIDTH="20" WIDTH_UNITS="CHARS">
            <CONNECT>
                <SOURCE NAME="DISPLAY" PROPERTY="localeCode" />
            </CONNECT>
        </FIELD>
    </CLUSTER>
    <CLUSTER SHOW_LABELS="false" TITLE="Field.Title.Text">
        <FIELD LABEL="Dummy.Label">
            <CONNECT>
                <SOURCE NAME="DISPLAY" PROPERTY="richText" />
            </CONNECT>
            <CONNECT>
                <TARGET NAME="ACTION" PROPERTY="richText" />
            </CONNECT>
        </FIELD>
    </CLUSTER>
</PAGE>
