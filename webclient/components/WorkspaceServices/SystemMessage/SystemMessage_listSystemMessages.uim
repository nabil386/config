<PAGE PAGE_ID="SystemMessage_listSystemMessages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd" 
     HIDE_CONDITIONAL_LINKS="false">
    
   <SERVER_INTERFACE CLASS="SystemMessage" NAME="DISPLAY" OPERATION="displaySystemMessages" />
    
    <ACTION_SET >
        <ACTION_CONTROL  LABEL="ActionControl.Label.New">        
            <LINK PAGE_ID="SystemMessage_newSystemMessage" OPEN_MODAL="true"/>
        </ACTION_CONTROL>
    </ACTION_SET>
    
    <LIST>
        <ACTION_SET TYPE="LIST_ROW_MENU">                        
            <ACTION_CONTROL LABEL="ActionControl.Label.editSystemMessage">
                <CONDITION>
                    <IS_TRUE NAME="DISPLAY" PROPERTY="displayEditOption"/>
                </CONDITION>
                <LINK OPEN_MODAL="true" PAGE_ID="SystemMessage_modifySystemMessageFromList">
                    <CONNECT>
                        <SOURCE NAME="DISPLAY" PROPERTY="systemMessageID"/>
                        <TARGET NAME="PAGE" PROPERTY="systemMessageID"/>
                    </CONNECT>                    
                </LINK>
            </ACTION_CONTROL>
            
            <ACTION_CONTROL LABEL="ActionControl.Label.publishSystemMessage">
                <CONDITION>
                    <IS_TRUE NAME="DISPLAY" PROPERTY="displayPublishOption"/>
                </CONDITION>                    
                <LINK OPEN_MODAL="true" PAGE_ID="SystemMessage_publishSystemMessage">
                    <CONNECT>
                        <SOURCE NAME="DISPLAY" PROPERTY="systemMessageID"/>
                        <TARGET NAME="PAGE" PROPERTY="systemMessageID"/>
                    </CONNECT>                    
                </LINK>                    
            </ACTION_CONTROL>                
            
             <SEPARATOR/>           
            <ACTION_CONTROL LABEL="ActionControl.Label.cancelSystemMessage">
                <CONDITION>
                    <IS_TRUE NAME="DISPLAY" PROPERTY="displayCancelOption"/>
                </CONDITION>
                <LINK OPEN_MODAL="true" PAGE_ID="SystemMessage_removeSystemMessage">
                    <CONNECT>
                        <SOURCE NAME="DISPLAY" PROPERTY="systemMessageID"/>
                        <TARGET NAME="PAGE" PROPERTY="systemMessageID"/>
                    </CONNECT>                    
                </LINK>
            </ACTION_CONTROL>
            
        </ACTION_SET>
        
        <DETAILS_ROW>
            <INLINE_PAGE PAGE_ID="SystemMessage_displaySystemMessageDescription">
                <CONNECT>
                    <SOURCE
                        NAME="DISPLAY"
                        PROPERTY="systemMessageID"
                    />
                    <TARGET
                        NAME="PAGE"
                        PROPERTY="systemMessageID"
                    />
                </CONNECT>
            </INLINE_PAGE>
        </DETAILS_ROW>
        
        <CONTAINER LABEL="Field.Title.MessageTitle">
            <FIELD> 
                <CONNECT>
                    <SOURCE NAME="DISPLAY" PROPERTY="titleDescription" />
                </CONNECT>
            </FIELD>
            <ACTION_CONTROL IMAGE="CALocalizableTextTranslation" LABEL="ActionControl.Label.Translations">
                <LINK PAGE_ID="LocalizableText_viewLocalizableText" OPEN_MODAL="true">
                    <CONNECT>
                        <SOURCE NAME="DISPLAY" PROPERTY="titleTextID" />
                        <TARGET NAME="PAGE" PROPERTY="localizableTextID" />
                    </CONNECT>
                </LINK>
            </ACTION_CONTROL>            
        </CONTAINER>
        <FIELD LABEL="Field.Title.Priority" WIDTH="7">
            <CONNECT>
                <SOURCE NAME="DISPLAY" PROPERTY="priorityInd" />
            </CONNECT>
        </FIELD>
        <FIELD LABEL="Field.Title.Visibility" WIDTH="15">
            <CONNECT>
                <SOURCE NAME="DISPLAY" PROPERTY="result$dtlsList$visibility" />
            </CONNECT>
        </FIELD>              
        <FIELD LABEL="Field.Title.EffectiveDate" WIDTH="10">
            <CONNECT>
                <SOURCE NAME="DISPLAY" PROPERTY="effectiveDateTime" />
            </CONNECT>
        </FIELD>
        <FIELD LABEL="Field.Title.ExpiryDate" WIDTH="10">
            <CONNECT>
                <SOURCE NAME="DISPLAY" PROPERTY="expiryDateTime" />
            </CONNECT>
        </FIELD>
        <FIELD LABEL="Field.Title.CreationDate" WIDTH="10">
            <CONNECT>
                <SOURCE NAME="DISPLAY" PROPERTY="creationDate" />
            </CONNECT>
        </FIELD>
        <CONTAINER LABEL="Field.Title.createdBy" WIDTH="10">
            <FIELD>
                <CONNECT>
                    <SOURCE NAME="DISPLAY" PROPERTY="createdBy" />
                </CONNECT>
                <LINK OPEN_MODAL="true" PAGE_ID="Organization_userHome">
                    <CONNECT>
                        <SOURCE NAME="DISPLAY" PROPERTY="createdBy" />
                        <TARGET NAME="PAGE" PROPERTY="userName" />
                    </CONNECT>
                </LINK>
            </FIELD>
        </CONTAINER>
        <FIELD LABEL="Field.Title.status" WIDTH="10">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="status" />
          </CONNECT>
        </FIELD>
    </LIST>
</PAGE>
