<PAGE
  PAGE_ID="SummaryView_addFieldToLinkedGroup"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="description"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="summaryViewGroupDefinitionID"/>
  <PAGE_PARAMETER NAME="ruleSetID"/>
  <PAGE_PARAMETER NAME="productID"/>


  <SERVER_INTERFACE
    CLASS="SummaryViewConfiguration"
    NAME="DISPLAY"
    OPERATION="getProductContextDescription"
    PHASE="DISPLAY"
  />
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="productID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="productID"
    />
  </CONNECT>
  <SERVER_INTERFACE
    CLASS="SummaryViewConfiguration"
    NAME="ACTION"
    OPERATION="addSummaryViewFieldForLinkedGroup"
    PHASE="ACTION"
  />
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="summaryViewGroupDefinitionID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="dtls$summaryViewGroupDefinitionID"
    />
  </CONNECT>


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >


    <ACTION_CONTROL
      IMAGE="SaveAndAddDataItemButton"
      LABEL="ActionControl.Label.SaveAndAddDataItem"
      TYPE="SUBMIT"
    >
      <LINK PAGE_ID="SummaryView_addDataItem">
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="result$dtls$summaryViewFieldDefinitionID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="summaryViewFieldDefinitionID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="result$rdoName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="rulesDataObjectID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="result$dtls$versionNo"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="versionNo"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="summaryViewGroupDefinitionID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="summaryViewGroupDefinitionID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="ruleSetID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="ruleSetID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="productID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="productID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL
      IMAGE="CloseButton"
      LABEL="ActionControl.Label.Close"
    >
      <LINK PAGE_ID="SummaryView_viewGroup">
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="summaryViewGroupDefinitionID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="summaryViewGroupDefinitionID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="ruleSetID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="ruleSetID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="productID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="productID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER
    LABEL_WIDTH="20"
    TITLE="Cluster.Title.Details"
  >
    <FIELD
      LABEL="Field.Label.FieldName"
      USE_BLANK="true"
      USE_DEFAULT="false"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="dtls$fieldName"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.RDOName">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="dtls$rdoName"
        />
      </CONNECT>
      <LINK>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="ruleSetID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="ruleSetID"
          />
        </CONNECT>
      </LINK>
    </FIELD>


  </CLUSTER>
</PAGE>