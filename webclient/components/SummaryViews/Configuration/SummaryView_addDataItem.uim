<PAGE
  PAGE_ID="SummaryView_addDataItem"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="description"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="summaryViewGroupDefinitionID"/>
  <PAGE_PARAMETER NAME="summaryViewFieldDefinitionID"/>
  <PAGE_PARAMETER NAME="versionNo"/>
  <PAGE_PARAMETER NAME="rulesDataObjectID"/>
  <PAGE_PARAMETER NAME="ruleSetID"/>
  <PAGE_PARAMETER NAME="productID"/>


  <SERVER_INTERFACE
    CLASS="SummaryViewConfiguration"
    NAME="DISPLAY"
    OPERATION="getProductContextDescription"
    PHASE="DISPLAY"
  />
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="productID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="productID"
    />
  </CONNECT>


  <SERVER_INTERFACE
    CLASS="SummaryViewConfiguration"
    NAME="DISPLAYDATAITEM"
    OPERATION="listDataObjectAttributesDetails"
    PHASE="DISPLAY"
  />
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="rulesDataObjectID"
    />
    <TARGET
      NAME="DISPLAYDATAITEM"
      PROPERTY="key$rulesDataObjectID"
    />
  </CONNECT>


  <SERVER_INTERFACE
    CLASS="SummaryViewConfiguration"
    NAME="ACTION"
    OPERATION="addSummaryViewFieldDataItem"
    PHASE="ACTION"
  />
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="summaryViewFieldDefinitionID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="dtls$key$summaryViewFieldDefinitionID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="versionNo"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="dtls$key$versionNo"
    />
  </CONNECT>


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    >
      <LINK PAGE_ID="SummaryView_viewGroup">
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="summaryViewGroupDefinitionID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="summaryViewGroupDefinitionID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="ruleSetID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="ruleSetID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="productID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="productID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <ACTION_CONTROL
      IMAGE="CloseButton"
      LABEL="ActionControl.Label.Close"
    />
  </ACTION_SET>
  <CLUSTER TITLE="Cluster.Title.Details">
    <LIST>


      <FIELD
        LABEL="Field.Label.DataItem"
        WIDTH="30"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAYDATAITEM"
            PROPERTY="result$dataObjectAttributeDtls$attributeID"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.DataType"
        WIDTH="20"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAYDATAITEM"
            PROPERTY="result$dataObjectAttributeDtls$attributeDomainName"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.DataDescription"
        WIDTH="40"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAYDATAITEM"
            PROPERTY="result$dataObjectAttributeDtls$attributeName"
          />
        </CONNECT>
      </FIELD>


      <CONTAINER
        ALIGNMENT="CENTER"
        LABEL="Container.Label.Select"
        WIDTH="10"
      >
        <WIDGET TYPE="SINGLESELECT">
          <WIDGET_PARAMETER NAME="SELECT_SOURCE">
            <CONNECT>
              <SOURCE
                NAME="DISPLAYDATAITEM"
                PROPERTY="result$dataObjectAttributeDtls$attributeID"
              />
            </CONNECT>
            <CONNECT>
              <SOURCE
                NAME="DISPLAYDATAITEM"
                PROPERTY="result$dataObjectAttributeDtls$attributeDomainName"
              />
            </CONNECT>
          </WIDGET_PARAMETER>


          <WIDGET_PARAMETER NAME="SELECT_TARGET">
            <CONNECT>
              <TARGET
                NAME="ACTION"
                PROPERTY="dtls$tabbedString"
              />
            </CONNECT>
          </WIDGET_PARAMETER>


        </WIDGET>
      </CONTAINER>
    </LIST>
  </CLUSTER>


</PAGE>