<PAGE PAGE_ID="CitizenWorkspaceAdmin_editLifeEventCategory" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
   WINDOW_OPTIONS="width=750,height=480">
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1"/>
    </CONNECT>
  </PAGE_TITLE>

  <PAGE_PARAMETER NAME="categoryID"/>

  <SERVER_INTERFACE PHASE="DISPLAY" CLASS="LifeEventAdmin" NAME="READ_DETAILS" OPERATION="getCategoryDetails"/>
  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="categoryID"/>
    <TARGET NAME="READ_DETAILS" PROPERTY="key$id"/>
  </CONNECT>
  
  <SERVER_INTERFACE PHASE="ACTION" CLASS="LifeEventAdmin" NAME="MODIFY_DETAILS" OPERATION="setCategoryDetails"/>
  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="categoryID"/>
    <TARGET NAME="MODIFY_DETAILS" PROPERTY="details$id"/>
  </CONNECT>

  <!-- These two interfaces return a list of all possible LifeEventTypes and a list of those that should initially be selected (i.e. are already associated): -->
  <SERVER_INTERFACE PHASE="DISPLAY" CLASS="LifeEventAdmin" NAME="GET_ALL_LIFE_EVENTS" OPERATION="getAllLifeEventTypes"/>
  
  <SERVER_INTERFACE PHASE="DISPLAY" CLASS="LifeEventAdmin" NAME="GET_INITIAL_SELECTION" OPERATION="getInitialLifeEventTypeSelection"/>
  
  
  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="categoryID"/>
    <TARGET NAME="GET_INITIAL_SELECTION" PROPERTY="key$id"/>
  </CONNECT>

  <!-- Display the fields: -->
  <CLUSTER NUM_COLS="1" LABEL_WIDTH="20">
    <FIELD LABEL="Field.Label.Name">
      <CONNECT>
        <SOURCE NAME="READ_DETAILS" PROPERTY="name"/>
      </CONNECT>
      <CONNECT>
        <TARGET NAME="MODIFY_DETAILS" PROPERTY="name"/>
      </CONNECT>
    </FIELD>
    
  </CLUSTER>

  <CLUSTER TITLE="Field.Label.Description" SHOW_LABELS="false">    
    <FIELD LABEL="Field.Label.Description" HEIGHT="200">
      <CONNECT>
        <SOURCE NAME="READ_DETAILS" PROPERTY="description"/>
      </CONNECT>
      <CONNECT>
        <TARGET NAME="MODIFY_DETAILS" PROPERTY="description"/>
      </CONNECT>
    </FIELD>
  </CLUSTER>
  
  <!-- Save and Cancel buttons -->
  <ACTION_SET>
    <ACTION_CONTROL IMAGE="SaveButton" LABEL="ActionControl.Label.Save" TYPE="SUBMIT"/>
    <ACTION_CONTROL IMAGE="CancelButton" LABEL="ActionControl.Label.Cancel"/>
  </ACTION_SET>

</PAGE>
