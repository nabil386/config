<dc:domains xmlns:dc="http://www.curamsoftware.com/curam/util/common/domain-config">

    <!-- these entries are duplicated from CEFWidgets / CEF -->
    <!-- this is for the my activies page. the converter lives in CEF so we copy it to the citizenaccount component. this mapping lives in CEF too so is duplicated here -->
    <dc:domain name="FREQUENCY_DURATION_STRING">
        <dc:plug-in class="curam.client.util.convert.FrequencyDurationStringConverter" name="converter"/>
    </dc:domain>
    <!-- this is for the my payments page, his mapping lives in CEF too so is duplicated here. -->
    <dc:domain name="CURAM_AMOUNT">
      <dc:plug-in name="converter" purpose="set-symbol"/>
    </dc:domain>
    <!-- end of duplicate CEF entries -->


    <dc:domain name="CITIZEN_ACCOUNT_LINK">
        <dc:plug-in name="view-renderer" purpose="link-style-adapter"/>
        <dc:plug-in class="curam.util.client.domain.marshal.SimpleXPathADCMarshal" name="marshal"/>
    </dc:domain>
    <dc:domain name="CITIZEN_ACCOUNT_SINGLE_LIST_XML">
        <dc:plug-in name="view-renderer" purpose="single-list-style-adapter"/>
        <dc:plug-in class="curam.util.client.domain.marshal.SimpleXPathADCMarshal" name="marshal"/>
    </dc:domain>
    
    <dc:domain name="CITIZEN_CASE_LIST_XML">
    <dc:plug-in class="citizenaccount.renderer.CitizenCaseListRenderer" name="view-renderer"/>
    <dc:plug-in class="curam.util.client.domain.marshal.SimpleXPathADCMarshal" name="marshal"/>
  </dc:domain>
    <dc:domain name="CITIZEN_ACCOUNT_HOME_PAGE_DATA">
        <dc:plug-in class="citizenaccount.renderer.CitizenHomePageRenderer" name="view-renderer"/>
        <dc:plug-in class="curam.util.client.domain.marshal.SimpleXPathADCMarshal" name="marshal"/>
    </dc:domain>
    <dc:domain name="CITIZEN_ACCOUNT_PROVIDER_FIELD_XML">
        <dc:plug-in class="citizenaccount.renderer.MyActivitiesProviderFieldRenderer" name="view-renderer"/>
        <dc:plug-in class="curam.util.client.domain.marshal.SimpleXPathADCMarshal" name="marshal"/>
    </dc:domain>
    <dc:domain name="CITIZEN_ACCOUNT_RICH_TEXT">
        <dc:plug-in class="citizenworkspace.renderer.RichTextViewRenderer" name="view-renderer"/>
        <dc:plug-in class="curam.util.client.domain.marshal.SimpleXPathADCMarshal" name="marshal"/>
    </dc:domain>
    <dc:domain name="SOCIAL_RECORD_EVIDENCE_SUMMARY_WIDGET">
      <dc:plug-in name="view-renderer" purpose="case-evidence-summary-widget" /> 
    </dc:domain>     
</dc:domains>
