<!-- This page displays the details of payment instructions for a  citizen. -->
<PAGE
  PAGE_ID="CitizenAccount_viewPaymentInstructionDetails"
  WINDOW_OPTIONS="width=700"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
  >
  
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1" />
    </CONNECT>
  </PAGE_TITLE>
  
  <SERVER_INTERFACE
    CLASS="CitizenAccount"
    NAME="DISPLAY"
    OPERATION="readPaymentInstructionByInstrumentID"
  />
  
  <PAGE_PARAMETER NAME="pmtInstrumentID"/>
  
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="pmtInstrumentID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$pmtInstrumentID"
    />
  </CONNECT>
  
  <!-- Conditionally Display the appropriate delivery method details. -->
  <CLUSTER
    NUM_COLS="2"
    LABEL_WIDTH="31"
    >
    <CONDITION>
      <IS_TRUE
        NAME="DISPLAY"
        PROPERTY="deliveryMethodDtls$chequeInd"
      />
    </CONDITION>
    
    <INCLUDE FILE_NAME="CitizenAccount_deliveryMethodChequeView.vim"/>
  </CLUSTER>
  
  <CLUSTER
    NUM_COLS="2"
    LABEL_WIDTH="31"
    >
    <CONDITION>
      <IS_TRUE
        NAME="DISPLAY"
        PROPERTY="deliveryMethodDtls$EFTInd"
      />
    </CONDITION>
    
    <INCLUDE FILE_NAME="CitizenAccount_deliveryMethodEFTView.vim"/>
  </CLUSTER>
  
  <CLUSTER
    NUM_COLS="2"
    LABEL_WIDTH="31"
    >
    <CONDITION>
      <IS_TRUE
        NAME="DISPLAY"
        PROPERTY="deliveryMethodDtls$cashInd"
      />
    </CONDITION>
    
    <INCLUDE FILE_NAME="CitizenAccount_deliveryMethodCashView.vim"/>
  </CLUSTER>
  
  <CLUSTER
    NUM_COLS="2"
    LABEL_WIDTH="31"
    >
    <CONDITION>
      <IS_TRUE
        NAME="DISPLAY"
        PROPERTY="deliveryMethodDtls$voucherInd"
      />
    </CONDITION>
    
    <INCLUDE FILE_NAME="CitizenAccount_deliveryMethodVoucherView.vim"/>
  </CLUSTER>
  
  <CLUSTER
    NUM_COLS="2"
    LABEL_WIDTH="31"
    >
    <CONDITION>
      <IS_TRUE
        NAME="DISPLAY"
        PROPERTY="deliveryMethodDtls$otherDeliveryMethodInd"
      />
    </CONDITION>
    
    <INCLUDE FILE_NAME="CitizenAccount_deliveryMethodAllView.vim"/>
  </CLUSTER>
  
  <LIST>
    <FIELD
      LABEL="Field.Label.CaseReference"
      WIDTH="23"
      >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="paymentsDtls$caseReference"
        />
      </CONNECT>
    </FIELD>
    
    <FIELD
      LABEL="Field.Label.Component"
      WIDTH="25"
      >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="paymentsDtls$lineItemTypeDescription"
        />
      </CONNECT>
    </FIELD>
    
    <FIELD
      LABEL="Field.Label.CoversPeriod"
      WIDTH="20"
      >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="paymentsDtls$coversPeriod"
        />
      </CONNECT>
    </FIELD>
    
    <FIELD
      ALIGNMENT="RIGHT"
      LABEL="Field.Label.Debit"
      WIDTH="16"
      >
      
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="paymentsDtls$citizenDebitAmount"
        />
      </CONNECT>
    </FIELD>
    
    <FIELD
      ALIGNMENT="RIGHT"
      LABEL="Field.Label.Credit"
      WIDTH="16"
      >
      
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="paymentsDtls$citizenCreditAmount"
        />
      </CONNECT>
    </FIELD>
    
  </LIST>
  
  <ACTION_SET ALIGNMENT="RIGHT">
    <ACTION_CONTROL
      IMAGE="CloseButton"
      LABEL="ActionControl.Label.Close"
    />
  </ACTION_SET>
  
</PAGE>
