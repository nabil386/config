<!-- This Page lists all financials for a particular Citizen                -->
<PAGE PAGE_ID="CitizenAccount_listPayments" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">

  <PAGE_TITLE ICON="CitizenAccount_listPayments.Page.Icon">
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1"/>
    </CONNECT>
  </PAGE_TITLE>

  <SERVER_INTERFACE CLASS="CitizenAccount" NAME="DISPLAY" OPERATION="listCitizenPayments"/>

  <CLUSTER SHOW_LABELS="false">

    <LIST SUMMARY="Table.Summary">
  
      <FIELD LABEL="Field.Label.EffectiveDate" WIDTH="20">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="pmtInstrumentDtls$participantDtls$effectiveDate"/>
        </CONNECT>
      </FIELD>
    <FIELD LABEL="Field.Label.Agency" WIDTH="20">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="pmtInstrumentDtls$agency"/>
      </CONNECT>
    </FIELD>      
      <FIELD LABEL="Field.Label.PaymentMethod" WIDTH="20">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="pmtInstrumentDtls$participantDtls$deliveryMethodType"/>
        </CONNECT>
      </FIELD>
      <FIELD LABEL="Field.Label.Status" WIDTH="20">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="pmtInstrumentDtls$participantDtls$reconcilStatusCode"/>
        </CONNECT>
      </FIELD>
      <FIELD ALIGNMENT="RIGHT" LABEL="Field.Label.Amount" WIDTH="20">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="pmtInstrumentDtls$participantDtls$amount"/>
        </CONNECT>
      </FIELD>
      
      <DETAILS_ROW>
        
        <INLINE_PAGE PAGE_ID="CitizenAccount_viewPaymentInstructionView">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="pmtInstrumentDtls$pmtInstructionIndDtls$pmtInstructionID"/>
            <TARGET NAME="PAGE" PROPERTY="paymentInstructionID"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="pmtInstrumentDtls$isExternalPayment"/>
            <TARGET NAME="PAGE" PROPERTY="isExternalPayment"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="externalPaymentID"/>
            <TARGET NAME="PAGE" PROPERTY="externalPaymentID"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="pmtInstrumentDtls$participantDtls$deliveryMethodType"/>
            <TARGET NAME="PAGE" PROPERTY="deliveryMethod"/>
          </CONNECT>
        </INLINE_PAGE>
        
      </DETAILS_ROW>
      
    </LIST>
  </CLUSTER>

</PAGE>
