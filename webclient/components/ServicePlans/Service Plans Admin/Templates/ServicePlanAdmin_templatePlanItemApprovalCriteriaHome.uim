<!-- Page to view the details of a template plan item approval criteria     -->
<PAGE
  PAGE_ID="ServicePlanAdmin_templatePlanItemApprovalCriteriaHome"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>


    <CONNECT>


      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
