          PAGE_ID="ServicePlanAdmin_removeTemplatePlanItemApprovalCriteria">
          <!-- END, CR00236498 -->
          <CONNECT>


            <SOURCE
              NAME="PAGE"
              PROPERTY="planTemplatePlanItemApprCritID"
