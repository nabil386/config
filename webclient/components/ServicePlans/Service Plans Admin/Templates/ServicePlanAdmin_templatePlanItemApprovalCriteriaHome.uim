      <ACTION_CONTROL
        IMAGE="Edit"
        LABEL="Field.Label.Edit"
      >


        <LINK
          OPEN_MODAL="true"
          PAGE_ID="ServicePlanAdmin_modifyTemplatePlanItemApprovalCriteria"
