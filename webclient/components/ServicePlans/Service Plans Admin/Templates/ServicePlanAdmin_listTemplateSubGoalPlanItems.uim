<!-- Page to list plan template plan items for plan template sub goal.         -->
<PAGE PAGE_ID="ServicePlanAdmin_listTemplateSubGoalPlanItems" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText"/>
    </CONNECT>
  </PAGE_TITLE>
  <SERVER_INTERFACE CLASS="ServicePlan" NAME="DISPLAY" OPERATION="listPlanTemplateSubGoalPlanItems" PHASE="DISPLAY"/>
  <PAGE_PARAMETER NAME="planTemplateSubGoalID"/>
  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="planTemplateSubGoalID"/>
    <TARGET NAME="DISPLAY" PROPERTY="planTemplateSubGoalID"/>
  </CONNECT>
  <ACTION_SET ALIGNMENT="LEFT" BOTTOM="false" TOP="true">
    <ACTION_CONTROL IMAGE="NewButton" LABEL="ActionControl.Label.New">
      <LINK OPEN_MODAL="true" PAGE_ID="ServicePlanAdmin_addTemplatePlanItem">
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="planTemplateSubGoalID"/>
          <TARGET NAME="PAGE" PROPERTY="planTemplateSubGoalID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>
  <LIST>
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
        <LINK OPEN_MODAL="true" PAGE_ID="ServicePlanAdmin_modifyTemplatePlanItem">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="planTemplatePlanItemID"/>
            <TARGET NAME="PAGE" PROPERTY="planTemplatePlanItemID"/>
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL IMAGE="Delete" LABEL="ActionControl.Label.Delete">
        <LINK OPEN_MODAL="true" PAGE_ID="ServicePlanAdmin_removeTemplatePlanItem" WINDOW_OPTIONS="width=400,height=150">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="planTemplatePlanItemID"/>
            <TARGET NAME="PAGE" PROPERTY="planTemplatePlanItemID"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="planTemplateSubGoalID"/>
            <TARGET NAME="PAGE" PROPERTY="planTemplateSubGoalID"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="contextDescription"/>
            <TARGET NAME="PAGE" PROPERTY="pageDescription"/>
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>
    <FIELD LABEL="Field.Title.Name">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="name"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.StartAfterPlanStart">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="startDay"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Duration">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="duration"/>
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="ServicePlanAdmin_templatePlanItemHome">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="planTemplatePlanItemID"/>
          <TARGET NAME="PAGE" PROPERTY="planTemplatePlanItemID"/>
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>
  </LIST>
</PAGE>