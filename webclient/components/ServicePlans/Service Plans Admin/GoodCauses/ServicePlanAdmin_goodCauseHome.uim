<!-- This page allows the user to see the good cause details.               -->
<PAGE
  PAGE_ID="ServicePlanAdmin_goodCauseHome"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="ServicePlan"
    NAME="DISPLAY"
    OPERATION="readGoodCause"
    PHASE="DISPLAY"
  />
  <PAGE_PARAMETER NAME="goodCauseID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="goodCauseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$goodCauseKey$goodCauseKey$goodCauseID"
    />
  </CONNECT>


  <CLUSTER
    LABEL_WIDTH="30"
    NUM_COLS="2"
  >
    <FIELD LABEL="Field.Label.GoodCauseReference">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="goodCauseReference"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <CLUSTER
    SHOW_LABELS="false"
    TITLE="Cluster.Title.Description"
  >
    <!-- BEGIN, CR00234442, GP -->
    <CONTAINER>
      <!-- END, CR00234442 -->
      <FIELD HEIGHT="4">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="description"
          />
        </CONNECT>
      </FIELD>
      <!-- BEGIN, CR00234442, GP -->
      <ACTION_CONTROL
        IMAGE="LocalizableTextTranslation"
        LABEL="ActionControl.Label.TextTranslation"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="ServicePlanAdmin_listLocalizableServicePlanGoodCauseDescriptionText"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="descriptionTextID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="localizableTextID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="key$goodCauseKey$goodCauseKey$goodCauseID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="goodCauseID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="versionNo"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="versionNo"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>
    <!-- END, CR00234442  -->


  </CLUSTER>


</PAGE>
