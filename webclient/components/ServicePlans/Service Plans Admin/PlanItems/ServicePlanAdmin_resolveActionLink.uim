<!-- This scriplet determines the page that needs to be opened to carry out -->
<!-- the action associated with a task. The server is called to get the     -->
<!-- name of the page and parameter.                                         -->
<PAGE
  PAGE_ID="ServicePlanAdmin_resolveActionLink"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    

      curam.omega3.request.RequestHandler 
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);


      StringBuffer context = new StringBuffer();
      context.append(request.getContextPath());
      context.append("/");
      context.append(curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale());
      context.append("/");
      String plannedItemID = request.getParameter("plannedItemID");
      
      
      StringBuffer url = new StringBuffer();
  
       curam.interfaces.ProcessTaskPlanItemWFPkg.ProcessTaskPlanItemWF_readTaskConfigurationDetails_TH
        th = new curam.interfaces.ProcessTaskPlanItemWFPkg.ProcessTaskPlanItemWF_readTaskConfigurationDetails_TH();
        
      th.setFieldValue(th.planItemKey$plannedItemIDKey$plannedItemIDKey$plannedItemID_idx, plannedItemID);

      th.callServer();
     
      String actionPageName=th.getFieldValue(th.result$taskConfigDtls$actionLink_idx);

      String actionPageIDParam=th.getFieldValue(th.result$actionPageIDParam_idx);
 
  if (actionPageName.equals("")) {
        url.append(context);
        url.append("ServicePlanAdmin_planItemErrorhome");
        url.append("Page.do");
          
      }
      
      if (actionPageName.equals("TCAL1")) {
        url.append(context);
        url.append("ICSample_home");
        url.append("Page.do");
        url.append("?");
        url.append("caseID");
        url.append("=");
        url.append(Long.parseLong(actionPageIDParam));
        url.append("&amp;");
        url.append("ruleSetType");
        url.append("=");
        url.append("null");
        url.append("&amp;"); 
        url.append(rh.getSystemParameters());
  
      }
     if (actionPageName.equals("TCAL2")) {
          url.append(context);
          url.append("ServicePlanDelivery_home1");
          url.append("Page.do");
          url.append("?");
          url.append("caseID"); 
          url.append("=");
          url.append(Long.parseLong(actionPageIDParam));
        url.append("&amp;");
        url.append(rh.getSystemParameters());
      }
    if (actionPageName.equals("TCAL3")) {
    
          url.append(context);
          url.append("ServicePlanDelivery_resolveViewPlanItemPage");
          url.append("Page.do");
          url.append("?");
          url.append("description");
          url.append("=");
          url.append("null");
          url.append("&amp;");
          url.append("plannedItemID");
          url.append( "=");
          url.append(Long.parseLong(actionPageIDParam));
          url.append("&amp;");
          url.append(rh.getSystemParameters());
      }
        
      response.sendRedirect(response.encodeRedirectURL(url.toString()));
      
    
  </JSP_SCRIPTLET>
</PAGE>
