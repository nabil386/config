<PAGE
  PAGE_ID="VerificationAdmin_listVerificationGroups"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>


  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="MaintainVerificationGroup"
    NAME="DISPLAY"
    OPERATION="listVerificationGroups"
  />


  <PAGE_PARAMETER NAME="verifiableDataItemID"/>
  <PAGE_PARAMETER NAME="verificationCategoryID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="verifiableDataItemID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="verifiableDataItemKey$dtls$verifiableDataItemID"
    />
  </CONNECT>


  <!-- An action set containing the single new button. -->
  <ACTION_SET BOTTOM="false">


    <ACTION_CONTROL
      IMAGE="NewButton"
      LABEL="ActionControl.Label.New"
    >

<!-- BEGIN, CR00350224, SSK -->
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="VerificationAdmin_createVerificationGroup"
        >
        <CONNECT>
          <SOURCE
            NAME="CONSTANT"
            PROPERTY="verification.wizardID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="wizardID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="verifiableDataItemID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verifiableDataItemID"
          />
        </CONNECT>        
      </LINK>
<!-- END, CR00350224 -->
    </ACTION_CONTROL>


  </ACTION_SET>


  <LIST>
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
        <CONDITION>
          <IS_FALSE
            NAME="DISPLAY"
            PROPERTY="isRecordCancelled"
          />
        </CONDITION>
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="VerificationAdmin_modifyVerificationGroup"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="verificationGroupID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="verificationGroupID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL
        IMAGE="Delete"
        LABEL="ActionControl.Label.Delete"
      >
        <CONDITION>
          <IS_FALSE
            NAME="DISPLAY"
            PROPERTY="isRecordCancelled"
          />
        </CONDITION>
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="VerificationAdmin_deleteVerificationGroup"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="verificationGroupID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="verificationGroupID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL
        IMAGE="Delete"
        LABEL="ActionControl.Label.Add"
      >
        <CONDITION>
          <IS_FALSE
            NAME="DISPLAY"
            PROPERTY="isRecordCancelled"
          />
        </CONDITION>
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="VerificationAdmin_addVerificationItemToGroup"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="verificationGroupID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="verificationGroupID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


    </ACTION_SET>


    <FIELD
      LABEL="Field.Label.Name"
      WIDTH="50"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="name"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.Level"
      WIDTH="20"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="verificationLevel"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Status"
      WIDTH="30"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="recordStatus"
        />
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="VerificationAdmin_listVerificationGroupItems">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="verificationGroupID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verificationGroupID"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>
  </LIST>


</PAGE>
