<!-- This process allows the user to view a list of Verification Requirements -->
<PAGE
  PAGE_ID="VerificationAdmin_listVerificationRequirements"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>


  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="VerificationAdministration"
    NAME="DISPLAY"
    OPERATION="listVerificationRequirement"
  />


  <PAGE_PARAMETER NAME="verifiableDataItemID"/>
  <PAGE_PARAMETER NAME="verificationCategoryID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="verifiableDataItemID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$dtls$verifiableDataItemID"
    />
  </CONNECT>


  <!-- An action set containing the single new button. -->
  <ACTION_SET BOTTOM="false">


    <ACTION_CONTROL
      IMAGE="NewButton"
      LABEL="ActionControl.Label.New"
    >


      <LINK
        OPEN_MODAL="true"
        PAGE_ID="VerificationAdmin_newVerificationRequirement"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="verifiableDataItemID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verifiableDataItemID"
          />
        </CONNECT>


      </LINK>


    </ACTION_CONTROL>


  </ACTION_SET>


  <LIST>
    <!-- Container with two action controls to view and edit each row. -->
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
        <!-- Link to page displaying editable details of the  -->
        <!-- Verification Requirement -->
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="VerificationAdmin_updateVerificationRequirement"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="verificationRequirementID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="verificationRequirementID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL
        IMAGE="AddRequirementUsage"
        LABEL="ActionControl.Label.Apply"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="VerificationAdmin_createVerificationRequirementUsage"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="verificationRequirementID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="verificationRequirementID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL
        IMAGE="Delete"
        LABEL="ActionControl.Label.Delete"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="VerificationAdmin_deleteVerificationRequirement"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="verificationRequirementID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="verificationRequirementID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="key$dtls$verifiableDataItemID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="verifiableDataItemID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>


    <FIELD
      LABEL="Field.Label.Name"
      WIDTH="60"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="name"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.Status"
      WIDTH="40"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="recordStatus"
        />
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="VerificationAdmin_viewVerificationRequirementFromList">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="verificationRequirementID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verificationRequirementID"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


</PAGE>
