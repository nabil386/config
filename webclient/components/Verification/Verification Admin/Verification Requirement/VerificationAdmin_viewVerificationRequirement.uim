<!-- This page allows the user to view a Verification Requirement record.   -->
<PAGE
  PAGE_ID="VerificationAdmin_viewVerificationRequirement"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <INCLUDE FILE_NAME="VerificationAdmin_readVerificationRequirementView.vim"/>


  <ACTION_SET>


    <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="VerificationAdmin_updateVerificationRequirement"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="verificationRequirementID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verificationRequirementID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="ActionControl.Label.ApplyTo">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="VerificationAdmin_createVerificationRequirementUsage"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="verificationRequirementID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verificationRequirementID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <ACTION_CONTROL LABEL="ActionControl.Label.Delete">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="VerificationAdmin_deleteVerificationRequirement"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="verificationRequirementID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verificationRequirementID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="verifiableDataItemID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verifiableDataItemID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="recordStatus"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="recordStatus"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="versionNo"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="versionNo"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


</PAGE>
