<!-- This page allows the user to create a Verifiable Data Item record.     -->
<PAGE
  PAGE_ID="VerificationAdmin_createVerifiableDataItem"
  WINDOW_OPTIONS="width=525"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="VerificationAdministration"
    NAME="ACTION"
    OPERATION="createVerifiableDataItem"
    PHASE="ACTION"
  />


  <PAGE_PARAMETER NAME="verificationCategoryID"/>
  <PAGE_PARAMETER NAME="verifiableDataItemID"/>


  <!-- Map verificationCategoryID parameter to createVerifiableDataItem action-phase bean -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="verificationCategoryID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="details$dtls$createDtls$verificationCategoryID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="verifiableDataItemID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="result$dtls$verifiableDataItemID"
    />
  </CONNECT>


  <ACTION_SET ALIGNMENT="CENTER">
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    
    <ACTION_CONTROL
      IMAGE="SaveAndNewButton"
      LABEL="ActionControl.Label.SaveAndNew"
      TYPE="SUBMIT"
    >
      <!-- BEGIN,CR00050935,GSP -->
      <!-- BEGIN,HARP 61263,SRK -->
      <LINK PAGE_ID="VerificationAdmin_resolveCreateVerifiableDataItem">
        <!-- END,HARP 61263 -->
        <!-- END,CR00050935 -->
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="verificationCategoryID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verificationCategoryID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="result$dtls$verifiableDataItemID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="verifiableDataItemID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    
    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />
  </ACTION_SET>


  <CLUSTER LABEL_WIDTH="35">
    <CLUSTER LABEL_WIDTH="35">
      <FIELD LABEL="Field.Label.Name">
        <CONNECT>
          <TARGET
            NAME="ACTION"
            PROPERTY="name"
          />
        </CONNECT>
      </FIELD>
    </CLUSTER>
    <CLUSTER LABEL_WIDTH="35">
      <FIELD LABEL="Field.Label.EvidenceType">
        <CONNECT>
          <TARGET
            NAME="ACTION"
            PROPERTY="evidenceType"
          />
        </CONNECT>
      </FIELD>
      <FIELD LABEL="Field.Label.ViewRights">
        <CONNECT>
          <TARGET
            NAME="ACTION"
            PROPERTY="viewSID"
          />
        </CONNECT>
      </FIELD>
      <FIELD LABEL="Field.Label.DataItem">
        <CONNECT>
          <TARGET
            NAME="ACTION"
            PROPERTY="dataItem"
          />
        </CONNECT>
      </FIELD>
    </CLUSTER>
  </CLUSTER>


</PAGE>
