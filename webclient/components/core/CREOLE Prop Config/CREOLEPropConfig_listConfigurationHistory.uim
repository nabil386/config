<!-- Lists snapshots of a configuration.                                    -->
<PAGE
  PAGE_ID="CREOLEPropConfig_listConfigurationHistory"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <!-- Declare the 'display' server bean -->
  <SERVER_INTERFACE
    CLASS="RuleObjectPropagatorConfiguration"
    NAME="DISPLAY"
    OPERATION="listConfigurationHistory"
    PHASE="DISPLAY"
  />


  <!-- Page parameters to this page -->
  <PAGE_PARAMETER NAME="configID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="configID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$ruleObjectPropagatorConfigID"
    />
  </CONNECT>


  <!-- List fields on this page -->
  <LIST TITLE="List.Title.ChangeHistory">
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.View">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="CREOLEPropConfig_viewSnapshotConfiguration"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$dtls$dtls$snapshotID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="snapshotID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="ActionControl.Label.CreateCopy">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="CREOLEPropConfig_createSandboxFromSnapshot"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$dtls$dtls$snapshotID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="snapshotID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>


    <!--
    <FIELD
      LABEL="field.label.snapshotID"
    >
      <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="result$dtls$dtls$snapshotID"
      />
      </CONNECT>
    </FIELD>
    -->
    <FIELD
      LABEL="field.label.configName"
      WIDTH="25"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$dtls$configName"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="field.label.actionType"
      WIDTH="15"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$dtls$dtls$actionType"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="field.label.actionDateTime"
      WIDTH="15"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$dtls$dtls$actionDateTime"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="field.label.successionID"
      WIDTH="15"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$dtls$dtls$successionID"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="field.label.userName"
      WIDTH="30"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$dtls$userFullName"
        />
      </CONNECT>
      <LINK PAGE_ID="Organization_userHome">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$dtls$dtls$userName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="userName"
          />
        </CONNECT>
      </LINK>
    </FIELD>
  </LIST>
</PAGE>
