<!-- This page allows the user to search for available tasks.                        -->
<PAGE
  PAGE_ID="Inbox_availableTaskSearch"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="Inbox"
    NAME="DISPLAY"
    OPERATION="searchAvailableTasks"
  />


  <SERVER_INTERFACE
    ACTION_ID_PROPERTY="criteria$actionIDProperty"
    CLASS="Inbox"
    NAME="ACTION"
    OPERATION="manageAvailableTaskResults"
    PHASE="ACTION"
  />


  <INFORMATIONAL>
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="informationMsgTxt"
      />
    </CONNECT>
  </INFORMATIONAL>


  <CLUSTER SHOW_LABELS="FALSE">


    <FIELD
      LABEL="Field.Label.FilterData"
      WIDTH="100"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$criteriaText"
        />
      </CONNECT>
    </FIELD>


  </CLUSTER>


  <CLUSTER
    NUM_COLS="1"
    SHOW_LABELS="TRUE"
    TITLE="Cluster.Title.SearchCriteria"
  >
    <ACTION_SET
      ALIGNMENT="CENTER"
      TOP="false"
    >
      <ACTION_CONTROL
        ACTION_ID="SAVE_QUERY"
        DEFAULT="true"
        LABEL="ActionControl.Label.Search"
        TYPE="SUBMIT"
      >
        <LINK
          PAGE_ID="THIS"
          SAVE_LINK="false"
        />
      </ACTION_CONTROL>
    </ACTION_SET>


    <CLUSTER
      NUM_COLS="3"
      STYLE="cluster-cpr-no-border"
    >


      <CLUSTER
        BEHAVIOR="NONE"
        NUM_COLS="1"
        SHOW_LABELS="false"
        TITLE="Cluster.Title.AssignedTo"
      >
        <FIELD
          ALIGNMENT="LEFT"
          CONTROL="CHECKBOXED_LIST"
          HEIGHT="7"
        >
          <CONNECT>
            <INITIAL
              HIDDEN_PROPERTY="result$orgObjectList$dtls$value"
              NAME="DISPLAY"
              PROPERTY="result$orgObjectList$dtls$name"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$orgObjectList$selectedValues"
            />
          </CONNECT>
          <CONNECT>
            <TARGET
              NAME="ACTION"
              PROPERTY="criteria$selectedOrgObjects"
            />
          </CONNECT>
        </FIELD>
      </CLUSTER>


      <CLUSTER
        BEHAVIOR="NONE"
        NUM_COLS="1"
        SHOW_LABELS="false"
        TITLE="Cluster.Title.Priority"
      >
        <FIELD
          ALIGNMENT="LEFT"
          CONTROL="CHECKBOXED_LIST"
          HEIGHT="7"
        >
          <CONNECT>
            <INITIAL
              HIDDEN_PROPERTY="result$priorityList$dtls$code"
              NAME="DISPLAY"
              PROPERTY="result$priorityList$dtls$code"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$priorityList$selectedCodes"
            />
          </CONNECT>
          <CONNECT>
            <TARGET
              NAME="ACTION"
              PROPERTY="criteria$selectedPriorities"
            />
          </CONNECT>
        </FIELD>
      </CLUSTER>


      <CLUSTER
        BEHAVIOR="NONE"
        NUM_COLS="1"
        SHOW_LABELS="false"
        TITLE="Cluster.Title.Deadline"
      >
        <FIELD
          ALIGNMENT="LEFT"
          CONTROL="CHECKBOXED_LIST"
          HEIGHT="7"
        >
          <CONNECT>
            <INITIAL
              HIDDEN_PROPERTY="result$dueList$dtls$code"
              NAME="DISPLAY"
              PROPERTY="result$dueList$dtls$code"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$dueList$selectedCodes"
            />
          </CONNECT>
          <CONNECT>
            <TARGET
              NAME="ACTION"
              PROPERTY="criteria$selectedDeadline"
            />
          </CONNECT>
        </FIELD>
      </CLUSTER>


    </CLUSTER>


  </CLUSTER>


  <LIST TITLE="List.Title.SearchResults">


    <ACTION_SET TYPE="LIST_ROW_MENU">


      <ACTION_CONTROL LABEL="ActionControl.Label.AddComment">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="TaskManagement_addComment"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$resultList$taskDetailsList$taskID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="taskID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL LABEL="ActionControl.Label.AddToMyTasks">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="TaskManagement_ReserveTask"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$resultList$taskDetailsList$taskID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="taskID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="versionNo"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="versionNo"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


    </ACTION_SET>


    <FIELD WIDTH="5">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="taskDetailsList$isOverdue"
        />
      </CONNECT>
    </FIELD>


    <CONTAINER
      ALIGNMENT="CENTER"
      WIDTH="5"
    >


      <WIDGET
        LABEL="Field.Label.Select"
        TYPE="MULTISELECT"
      >


        <WIDGET_PARAMETER NAME="MULTI_SELECT_SOURCE">
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$resultList$taskDetailsList$taskID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$resultList$taskDetailsList$versionNo"
            />
          </CONNECT>
        </WIDGET_PARAMETER>
        <WIDGET_PARAMETER NAME="MULTI_SELECT_TARGET">
          <CONNECT>
            <TARGET
              NAME="ACTION"
              PROPERTY="criteria$selectedTasks"
            />
          </CONNECT>
        </WIDGET_PARAMETER>


      </WIDGET>
    </CONTAINER>


    <FIELD
      LABEL="Field.Label.Subject"
      WIDTH="45"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$resultList$taskDetailsList$subject"
        />
      </CONNECT>
      <LINK PAGE_ID="TaskManagement_taskHome">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$resultList$taskDetailsList$taskID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="taskID"
          />
        </CONNECT>
      </LINK>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Priority"
      WIDTH="15"
    >
      <!-- BEGIN, CR00161962, KY -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$resultList$taskDetailsList$priority"
        />
      </CONNECT>
      <!-- END, CR00161962 -->
    </FIELD>


    <FIELD
      LABEL="Field.Label.Deadline"
      WIDTH="15"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$resultList$taskDetailsList$deadlineDateTime"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.Status">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$resultList$taskDetailsList$status"
        />
      </CONNECT>
    </FIELD>


    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="TaskManagement_taskHomeInline">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$resultList$taskDetailsList$taskID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="taskID"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


  <ACTION_SET
    ALIGNMENT="LEFT"
    TOP="false"
  >
    <ACTION_CONTROL
      ACTION_ID=""
      LABEL="ActionControl.Label.ReserveMultipleTasks"
      TYPE="SUBMIT"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="TaskManagement_reserveMultipleTasks"
      >
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="criteria$selectedTasks"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="selectedTasks"
          />
        </CONNECT>
      </LINK>


    </ACTION_CONTROL>
  </ACTION_SET>


</PAGE>
