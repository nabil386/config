<!-- This page creates a new Workflow Allocation CER rule set.              -->
<PAGE
  PAGE_ID="WorkflowAllocation_createNew"
  WINDOW_OPTIONS="width=450"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="WorkflowCERAllocationAdmin"
    NAME="ACTION"
    OPERATION="createNewRuleSet"
    PHASE="ACTION"
  />


  <CONNECT>
    <SOURCE
      NAME="CONSTANT"
      PROPERTY="Constant.CREOLERuleSetCategory.id"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="selectedCategories"
    />
  </CONNECT>


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >
    <ACTION_CONTROL
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    >
      <!-- BEGIN, CR00269190, MC -->
      <LINK
        DISMISS_MODAL="true"
        PAGE_ID="WorkflowAllocation_listCERRuleSets"
      />
      <!-- END, CR00269190 -->


    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="ActionControl.Label.Cancel"/>
  </ACTION_SET>


  <CLUSTER
    LABEL_WIDTH="40"
    NUM_COLS="1"
  >


    <FIELD LABEL="Field.Label.RuleSetName">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="name"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.RuleSetDescription">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="description"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
</PAGE>
