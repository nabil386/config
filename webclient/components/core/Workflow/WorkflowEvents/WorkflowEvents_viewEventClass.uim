<!-- Views an Event Class and its associated Event Types                    -->
<PAGE
  PAGE_ID="WorkflowEvents_viewEventClass"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title.StaticText"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="eventClassParam"/>


  <SERVER_INTERFACE
    CLASS="WorkflowEvents"
    NAME="DISPLAY"
    OPERATION="listEventTypeByClass"
    PHASE="DISPLAY"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="eventClassParam"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$eventClass"
    />
  </CONNECT>


  <LIST TITLE="List.Title.EventTypes">
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="Link.NewProcessEnactment">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="WorkflowEvents_searchProcesses"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="eventClassParam"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="eventClassParam"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$dtls$eventType"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="eventTypeParam"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL
        IMAGE="PublishButton"
        LABEL="ActionControl.Label.Publish"
        TYPE="ACTION"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="WorkflowEvents_publishChanges"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$dtls$eventType"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="eventTypeParam"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL
        IMAGE="DeleteButton"
        LABEL="ActionControl.Label.Delete"
        TYPE="ACTION"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="WorkflowEvents_deleteEventType"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="eventClassParam"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="eventClassParam"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$dtls$eventType"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="eventTypeParam"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


    </ACTION_SET>
    <FIELD
      LABEL="Field.Label.EventType"
      WIDTH="100"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$dtls$eventType"
        />
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="WorkflowEvents_viewEventType">
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="eventClassParam"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="eventClassParam"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$dtls$eventType"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="eventTypeParam"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>
</PAGE>
