<!-- This page allow a user to modify a previously defined task query.      -->
<PAGE
  PAGE_ID="TaskQuery_modifyQuery"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="TaskQuery"
    NAME="DISPLAYORGOBJECTS"
    OPERATION="getUserOrgObjects"
    PHASE="DISPLAY"
  />


  <SERVER_INTERFACE
    CLASS="TaskQuery"
    NAME="DISPLAY"
    OPERATION="read"
    PHASE="DISPLAY"
  />


  <SERVER_INTERFACE
    CLASS="TaskQuery"
    NAME="ACTION"
    OPERATION="modify"
    PHASE="ACTION"
  />


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >


    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />


    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />


  </ACTION_SET>


  <PAGE_PARAMETER NAME="queryID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="queryID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$queryID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="queryID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="key$queryDtls$queryID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="DISPLAY"
      PROPERTY="result$queryDtls$versionNo"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="key$queryDtls$versionNo"
    />
  </CONNECT>


  <CLUSTER
    LABEL_WIDTH="27.5"
    NUM_COLS="1"
  >
    <FIELD
      LABEL="Field.Label.QueryName"
      WIDTH="50"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$criteria$queryName"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="key$criteria$queryName"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <CLUSTER TITLE="Cluster.Title.QueryCriteria">
    <CLUSTER
      LABEL_WIDTH="27.5"
      NUM_COLS="1"
      STYLE="cluster-cpr-no-border"
    >


      <FIELD LABEL="Field.Label.MyTasksListOnly">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$searchMyTasksOnly"
