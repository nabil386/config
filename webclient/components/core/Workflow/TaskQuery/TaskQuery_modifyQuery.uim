            <INITIAL
              NAME="DISPLAY"
              PROPERTY="result$criteria$businessObjectName"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$criteria$businessObjectID"
            />
          </CONNECT>
          <CONNECT>
            <TARGET
              NAME="ACTION"
              PROPERTY="key$criteria$businessObjectID"
            />
          </CONNECT>
        </FIELD>
      </CONTAINER>


