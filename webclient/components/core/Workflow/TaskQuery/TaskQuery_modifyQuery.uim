          ALIGNMENT="LEFT"
          CONTROL="CHECKBOXED_LIST"
          HEIGHT="5"
          USE_BLANK="false"
        >
          <CONNECT>
            <INITIAL
              HIDDEN_PROPERTY="result$dtls$value"
              NAME="DISPLAYORGOBJECTS"
              PROPERTY="result$dtls$name"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$criteria$selectedOrgObjects"
            />
          </CONNECT>
          <CONNECT>
            <TARGET
              NAME="ACTION"
              PROPERTY="key$criteria$selectedOrgObjects"
            />
          </CONNECT>
        </FIELD>
      </CONTAINER>


