<!-- This page displays the task history and comments.                      -->
<PAGE
  PAGE_ID="TaskManagement_viewHistoryTextInline"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <MENU MODE="IN_PAGE_NAVIGATION">
    <ACTION_CONTROL
      LABEL="ActionControl.Label.ViewTask"
      STYLE="in-page-link"
    >
      <LINK
        PAGE_ID="TaskManagement_taskHomeInline"
        SAVE_LINK="false"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="taskKey$taskID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="taskID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL
      LABEL="ActionControl.Label.TaskHistory"
      STYLE="in-page-current-link"
    >
      <LINK PAGE_ID="TaskManagement_viewHistoryTextInline">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="taskKey$taskID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="taskID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL
      LABEL="ActionControl.Label.AssignmentList"
      STYLE="in-page-link"
    >
      <LINK PAGE_ID="TaskManagement_viewAssignmentListInline">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="taskKey$taskID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="taskID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL
      LABEL="ActionControl.Label.GraphicalView"
      STYLE="in-page-link"
    >
      <LINK PAGE_ID="TaskManagement_visualiseProcessInstanceInline">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="taskKey$taskID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="taskID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </MENU>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>


  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="TaskManagement"
    NAME="DISPLAY"
    OPERATION="viewHistoryForTaskList"
    PHASE="DISPLAY"
  />


  <PAGE_PARAMETER NAME="taskID"/>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="taskID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="taskID"
    />
  </CONNECT>


  <LIST>
    <FIELD
      LABEL="Field.Title.UserName"
      WIDTH="16"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="userFullName"
        />
      </CONNECT>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="Organization_viewUserDetails"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="userName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="userName"
          />
        </CONNECT>
      </LINK>


    </FIELD>


    <FIELD
      LABEL="Field.Title.Date"
      WIDTH="13"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="changedDateTime"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Title.Type"
      WIDTH="15"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="taskChangeType"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Title.OldValue"
      WIDTH="13"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="oldValue"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Title.NewValue"
      WIDTH="13"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="newValue"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Title.Comment"
      WIDTH="30"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="comments"
        />
      </CONNECT>
    </FIELD>


    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="TaskManagement_taskHistoryInline">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="taskHistoryID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="taskHistoryID"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


</PAGE>
