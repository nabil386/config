<!-- This configuration file maps boolean domain types to icons that will   -->
<!-- be displayed on the evidence site map. In Edit evidence, if it exists, -->
<!-- will display a blue tick mark. Active evidence, if it exists, will     -->
<!-- display a green tick mark.						    -->
<map>
  <domain name="CURAM_INDICATOR_INEDIT">
    <locale name="en">
      <mapping
        alt="In Edit Evidence"
        image="Images/active_tick_16x16.gif"
        value="true"
      />
      <mapping
        alt=""
        image="Images/transparent_16x16.gif"
        value="false"
      />
    </locale>
  </domain>
  <domain name="CURAM_INDICATOR_ACTIVE">
    <locale name="en">
      <mapping
        alt="Active Evidence"
        image="Images/evidencePendingRemoval.gif"
        value="true"
      />
      <mapping
        alt=""
        image="Images/active_tick_16x16.gif"
        value="false"
      />
    </locale>
  </domain>
</map>