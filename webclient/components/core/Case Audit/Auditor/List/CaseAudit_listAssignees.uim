<!-- Description                                                            -->
<!-- ===========                                                            -->
<!-- This page allows the user to view a list of auditors and audit teams   -->
<!-- for the audit plan.                                                    -->
<PAGE
  PAGE_ID="CaseAudit_listAssignees"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
      />
    </CONNECT>


  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="CaseAudit"
    NAME="DISPLAY"
    OPERATION="listAuditPlanMembersAndStats"
    PHASE="DISPLAY"
  />


  <PAGE_PARAMETER NAME="auditPlanID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="auditPlanID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="auditPlanID"
    />
  </CONNECT>


  <ACTION_SET BOTTOM="false">
    <ACTION_CONTROL
      IMAGE="NewAuditorButton"
      LABEL="ActionControl.Label.NewAuditorButton"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="CaseAudit_createAuditors"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="auditPlanID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="auditPlanID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL
      IMAGE="NewAuditTeamButton"
      LABEL="ActionControl.Label.NewAuditTeamButton"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="CaseAudit_createAuditTeam"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="auditPlanID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="auditPlanID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <LIST>


    <ACTION_SET TYPE="LIST_ROW_MENU">


      <ACTION_CONTROL LABEL="ActionControl.Label.EditTeam">
        <CONDITION>
          <IS_TRUE
            NAME="DISPLAY"
            PROPERTY="teamInd"
          />
        </CONDITION>
        <LINK
          OPEN_MODAL="TRUE"
          PAGE_ID="CaseAudit_modifyAuditTeam"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="auditPlanID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="auditPlanID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="auditorID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="auditorID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="ActionControl.Label.Remove">
        <LINK
          OPEN_MODAL="TRUE"
          PAGE_ID="CaseAudit_confirmRemoveAuditor"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="auditPlanID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="auditPlanID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="auditorID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="auditorID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="ActionControl.Label.Reassign">
        <CONDITION>
          <IS_TRUE
            NAME="DISPLAY"
            PROPERTY="assignedCaseAuditInd"
          />
        </CONDITION>
        <LINK
          OPEN_MODAL="TRUE"
          PAGE_ID="CaseAudit_reassignCaseAudit"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="auditPlanID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="auditPlanID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="auditorID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="auditorID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="ActionControl.Label.RemoveAssignment">
        <CONDITION>
          <IS_TRUE
            NAME="DISPLAY"
            PROPERTY="assignedCaseAuditInd"
          />
        </CONDITION>
        <LINK
          OPEN_MODAL="TRUE"
          PAGE_ID="CaseAudit_removeAssignment"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="auditPlanID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="auditPlanID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="auditorID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="auditorID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


    </ACTION_SET>


    <FIELD
      LABEL="Field.Title.AuditorDisplayName"
      WIDTH="60"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="auditorName"
        />
      </CONNECT>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="CaseAudit_resolveAuditorHome"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="auditorID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="auditorID"
          />
        </CONNECT>
      </LINK>
    </FIELD>


    <FIELD
      LABEL="Field.Title.DateAdded"
      WIDTH="20"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="dateAdded"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Title.AssignedAudits"
      WIDTH="20"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="numCaseAudits"
        />
      </CONNECT>
    </FIELD>


    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="CaseAudit_listCaseAuditsByAssignee">
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="auditPlanID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="auditPlanID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="auditorID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="auditorID"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


</PAGE>
