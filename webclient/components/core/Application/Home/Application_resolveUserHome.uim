<!-- This script redirects the user to the appropriate home page.           -->
<PAGE
  PAGE_ID="Application_resolveUserHome"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
        
        curam.omega3.request.RequestHandler
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);
        String url = "";
        String context = request.getContextPath() + "/";
        context += curam.omega3.user.UserPreferencesFactory.getUserPreferences
        (pageContext.getSession()).getLocale() + "/";
        
        // Get logged in user's home page
        // Need to model a facade method to look up the current users
        // application code.  Find the codetable for that description
        // That is the home page they require.
        
        curam.interfaces.OrganizationPkg.Organization_getUserApplicationHome_TH 
        th = new curam.interfaces.OrganizationPkg.Organization_getUserApplicationHome_TH();
                      
        th.callServer(); 
        String homePage = th.getFieldValue(th.result$homePageName_idx);                        
        
        url = context+ curam.omega3.request.RequestUtils.escapeURL(homePage) +"Page.do?"; 
        url += "&amp;" + rh.getSystemParameters(); 
        
        response.sendRedirect(response.encodeRedirectURL(url));
        
        
    </JSP_SCRIPTLET>
</PAGE>
