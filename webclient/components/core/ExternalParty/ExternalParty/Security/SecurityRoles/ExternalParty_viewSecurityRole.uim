<!-- This process allows the user to view security role details.            -->
<PAGE
  PAGE_ID="ExternalParty_viewSecurityRole"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="ExternalParty"
    NAME="DISPLAY"
    OPERATION="readExternalPartySecurityRole"
    PHASE="DISPLAY"
  />


  <PAGE_PARAMETER NAME="roleID"/>
  <PAGE_PARAMETER NAME="concernRoleID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="roleID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="securityRoleKey$roleID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="concernRoleID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="concernRoleID"
    />
  </CONNECT>


  <ACTION_SET ALIGNMENT="CENTER">


    <ACTION_CONTROL
      IMAGE="AddGroupButton"
      LABEL="ActionControl.Label.AddGroup"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="System_addGroupToSecurityRole"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="roleID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="roleID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="roleName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="roleName"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <ACTION_CONTROL
      IMAGE="DeleteButton"
      LABEL="ActionControl.Label.Delete"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="ExternalParty_cancelSecurityRole"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="roleID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="roleID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="roleName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="roleName"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="concernRoleID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="concernRoleID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <ACTION_CONTROL
      IMAGE="CloseButton"
      LABEL="ActionControl.Label.Close"
    >
      <LINK PAGE_ID="ExternalParty_listSecurityRole">
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="concernRoleID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="concernRoleID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER
    LABEL_WIDTH="10"
    TITLE="Cluster.Title.Details"
  >


    <CONTAINER LABEL="Field.Title.Name">
      <FIELD LABEL="Field.Title.Name">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="roleName"
          />
        </CONNECT>
      </FIELD>


      <ACTION_CONTROL
        APPEND_ELLIPSIS="false"
        LABEL="ActionControl.Label.Change"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="System_modifySecurityRole"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="roleID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="roleID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>


  </CLUSTER>


  <LIST TITLE="Cluster.Title.Groups">
    <CONTAINER
      LABEL="Container.Label.Action"
      SEPARATOR="Container.Separator"
      WIDTH="10"
    >
      <ACTION_CONTROL LABEL="ActionControl.Label.Remove">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="System_cancelGroupFromSecurityRole"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="roleID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="roleID"
            />
          </CONNECT>


          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="listGroupsInRole$securityGroupDetails$groupID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="groupID"
            />
          </CONNECT>


          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="listGroupsInRole$securityGroupDetails$groupName"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="groupName"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>


    <FIELD
      LABEL="Field.Title.Description"
      WIDTH="65"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="listGroupsInRole$securityGroupDetails$groupDescription"
        />
      </CONNECT>
    </FIELD>
  </LIST>


</PAGE>
