<!-- This page allows the user to view an external party's note details     -->
<PAGE
  PAGE_ID="ExternalParty_viewNote1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="ExternalParty"
    NAME="DISPLAY"
    OPERATION="readExternalPartyNote1"
  />


  <PAGE_PARAMETER NAME="description"/>


  <PAGE_PARAMETER NAME="participantNoteID"/>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="participantNoteID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$participantNoteID"
    />
  </CONNECT>


  <CLUSTER>


    <CLUSTER
      LABEL_WIDTH="28"
      NUM_COLS="2"
      STYLE="cluster-cpr-no-border"
    >


      <FIELD LABEL="Field.Label.Sensitivity">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="sensitivityCode"
          />
        </CONNECT>
      </FIELD>


    </CLUSTER>
  </CLUSTER>
  
  <!-- conditional cluster that shows an icon and message if the note is editable -->
  <CLUSTER>
    <CONDITION>
      <IS_TRUE NAME="DISPLAY" PROPERTY="noteEditableInd"/>
    </CONDITION>
    <CONTAINER>
      <IMAGE IMAGE="UnlockedIcon" LABEL="Icon.Editable"/>
      <FIELD>
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="editableNoteMessageOpt" />
       </CONNECT>
      </FIELD>
    </CONTAINER>
  </CLUSTER>
  <!-- conditional cluster that shows a different icon and message if the note is locked for editing --> 
  <CLUSTER>
    <CONDITION>
      <IS_TRUE NAME="DISPLAY" PROPERTY="noteLockedInd" />
    </CONDITION>
    <CONTAINER>
      <IMAGE IMAGE="LockedIcon" LABEL="Icon.Locked"/>
        <FIELD>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="editableNoteMessageOpt" />
          </CONNECT>
       </FIELD>
    </CONTAINER>
  </CLUSTER>


  <CLUSTER
    SHOW_LABELS="false"
    STYLE="RemoveFieldPadding"
    TITLE="Cluster.Title.NoteHistory"
  >
    <FIELD>
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="notesText"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>
