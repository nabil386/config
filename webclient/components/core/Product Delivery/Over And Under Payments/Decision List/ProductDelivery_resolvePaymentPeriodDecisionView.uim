<!-- This jsp redirects the user to the compare decision resolve script     -->
<!-- after identifying the relevant pair of decision IDs for the            -->
<!-- reassessment period selected.                                          -->
<PAGE
  PAGE_ID="ProductDelivery_resolvePaymentPeriodDecisionView"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>

    curam.omega3.request.RequestHandler 
      rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

    String context = request.getContextPath() + "/";
    context += curam.omega3.user.UserPreferencesFactory
      .getUserPreferences(pageContext.getSession()).getLocale() + "/";
      
    String reassessmentInfoID = request.getParameter("reassessmentInfoID");
    
    curam.interfaces.ProductDeliveryPkg.ProductDelivery_listSingleReassessmentPeriodDecision_TH 
      th = new curam.interfaces.ProductDeliveryPkg.ProductDelivery_listSingleReassessmentPeriodDecision_TH();

    th.setFieldValue(th.key$reassessmentInfoID_idx, reassessmentInfoID);
    th.callServer();

    String oldDecisionID = th.getFieldValue("result$oldDecisionID");
    String reassessedDecisionID = th.getFieldValue("result$reassessedDecisionID");

    String pageName = "ProductDelivery_resolveCompareDecision";
    
    String url = context + pageName + "Page.do?oldDecisionID=" 
      + curam.omega3.request.RequestUtils.escapeURL(oldDecisionID);
      
    url += "&amp;" + "reassessedDecisionID=" 
      + curam.omega3.request.RequestUtils.escapeURL(reassessedDecisionID);
      
    url += "&amp;" + "reassessmentInfoID=" 
      + curam.omega3.request.RequestUtils.escapeURL(reassessmentInfoID);

    url += "&amp;" + rh.getSystemParameters();
    
    response.sendRedirect(response.encodeRedirectURL(url));
        
  </JSP_SCRIPTLET>
</PAGE>
