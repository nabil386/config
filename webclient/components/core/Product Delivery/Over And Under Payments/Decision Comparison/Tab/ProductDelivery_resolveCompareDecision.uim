<!-- This jsp redirects the user to the appropriate decision comparison     -->
<!-- page for current product delivery case.                                -->
<PAGE
  PAGE_ID="ProductDelivery_resolveCompareDecision"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>

    curam.omega3.request.RequestHandler 
      rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

    String context = request.getContextPath() + "/";
    context += curam.omega3.user.UserPreferencesFactory
      .getUserPreferences(pageContext.getSession()).getLocale() + "/";

    String zero = "0";
    String oldDecisionID = request.getParameter("oldDecisionID");
    String reassessedDecisionID = request.getParameter("reassessedDecisionID");
    String reassessmentInfoID = request.getParameter("reassessmentInfoID");

    curam.interfaces.DecisionComparisonTabPkg.DecisionComparisonTab_getDecisionComparisonPageName_TH 
      th = new curam.interfaces.DecisionComparisonTabPkg.DecisionComparisonTab_getDecisionComparisonPageName_TH();

    if (reassessedDecisionID.equals(zero)) {
      th.setFieldValue(th.key$caseDecisionID_idx, oldDecisionID);
    } else {
      th.setFieldValue(th.key$caseDecisionID_idx, reassessedDecisionID);
    }
    
    th.callServer();

    String url = context;

    String pageName =  th.getFieldValue("result$pageName");
    String determinationID = th.getFieldValue("result$determinationID");
    String displayDate = th.getFieldValue("result$displayDate");
    

    // This is the page for classic products
    if (pageName.equals("ProductDelivery_compareDecisionRules")) {

      url += pageName + "Page.do?oldDecisionID=" 
        + curam.omega3.request.RequestUtils.escapeURL(oldDecisionID);

      url += "&amp;" + "reassessedDecisionID=" 
        + curam.omega3.request.RequestUtils.escapeURL(reassessedDecisionID);

      url += "&amp;" + "reassessmentInfoID=" 
        + curam.omega3.request.RequestUtils.escapeURL(reassessmentInfoID);
         
    } else { // This is a CER product
      
      if (pageName.equals("CREOLEDecisionComparison_notAvailable")) {
        
        url += pageName + "Page.do?reassessedDecisionID=" 
          + curam.omega3.request.RequestUtils.escapeURL(reassessedDecisionID);
      
      } else {
      
        url += pageName + "Page.do?determinationID=" 
         + curam.omega3.request.RequestUtils.escapeURL(determinationID);
        
        url += "&amp;" + "displayDate=" 
          + curam.omega3.request.RequestUtils.escapeURL(displayDate);
          
        url += "&amp;" +  "oldDecisionID=" 
          + curam.omega3.request.RequestUtils.escapeURL(oldDecisionID);

        url += "&amp;" + "reassessedDecisionID="
          + curam.omega3.request.RequestUtils.escapeURL(reassessedDecisionID);
          
        url += "&amp;" + "reassessmentInfoID="
          + curam.omega3.request.RequestUtils.escapeURL(reassessmentInfoID);
      }
    }
    
    url += "&amp;" + rh.getSystemParameters();
    
    response.sendRedirect(response.encodeRedirectURL(url));

  </JSP_SCRIPTLET>
</PAGE>