<!-- This script opens the activity view page for the specified activity.   -->
<PAGE
  PAGE_ID="Activity_resolveViewOrganizationActivity"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    

      curam.omega3.request.RequestHandler 
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";
      String activityID = request.getParameter("ID");
      String recurring = request.getParameter("RE");
      String readOnly = request.getParameter("RO");
      String url = "";
  
      if (activityID == null) {

        // BEGIN, CR00110216, SK
       core.ScriptletMissingParamException e = new
                core.ScriptletMissingParamException(-20002, "ID");
       System.out.println(e);
       throw e;
       // END, CR00110216

      } else if (recurring == null) {

      // BEGIN, CR00124523, SK
       core.ScriptletMissingParamException e = new
          core.ScriptletMissingParamException(-20001, "RE");
      System.out.println(e);
      throw e;
      // END, CR00124523

      } else {

        // Check if we have been redirected here from another calendar page in the hierarchy
        if (readOnly == null || !Boolean.valueOf(readOnly).booleanValue()) {
          if (recurring.equals("true")) {

            url = context + 
              "Activity_viewRecurringOrganizationActivityPage.do?activityID=" + 
                curam.omega3.request.RequestUtils.escapeURL(activityID);

          } else {

            url = context + 
              "Activity_viewStandardOrganizationActivityPage.do?activityID=" + 
                curam.omega3.request.RequestUtils.escapeURL(activityID);

          }
        } else {

          if (recurring.equals("true")) {

            url = context + 
              "Activity_viewRecurringOrganizationActivityViewOnlyPage.do?activityID=" + 
                curam.omega3.request.RequestUtils.escapeURL(activityID);

          } else {

            url = context + 
              "Activity_viewStandardOrganizationActivityViewOnlyPage.do?activityID=" + 
                curam.omega3.request.RequestUtils.escapeURL(activityID);

          }
        }
        
      }
      // END, CR00110216

      url += "&amp;" + rh.getSystemParameters();
      response.sendRedirect(response.encodeRedirectURL(url));

    
  </JSP_SCRIPTLET>
</PAGE>
