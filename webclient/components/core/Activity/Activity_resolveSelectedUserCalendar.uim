<!-- This jsp redirects the user to a specific user's calendar page.        -->
<PAGE
  PAGE_ID="Activity_resolveSelectedUserCalendar"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    
      curam.omega3.request.RequestHandler 
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

      String userName = request.getParameter("userName");
      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";
      String url = "";

      // If userName is null, then we are coming back from the current user's
      // checking of her own activities.
      if (userName == null || userName.equals("null")) {

        url = context + 
          "Organization_currentUserCalendarPage.do?startDate=&amp;calendarViewType=CVT3";
      } else {

        url = context + 
          "Organization_selectedUserCalendarPage.do?startDate=&amp;calendarViewType=CVT3&amp;userName="
          + curam.omega3.request.RequestUtils.escapeURL(userName);
      }

      url += "&amp;" + rh.getSystemParameters();
      response.sendRedirect(response.encodeRedirectURL(url));
    
    
  </JSP_SCRIPTLET>
</PAGE>
