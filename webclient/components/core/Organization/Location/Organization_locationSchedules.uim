<!-- Organization schedules page.                                           -->
<PAGE
  PAGE_ID="Organization_locationSchedules"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <SHORTCUT_TITLE ICON="location.icon">
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="locationContextDescriptionDetails$description"
      />
    </CONNECT>
  </SHORTCUT_TITLE>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="Organization"
    NAME="DISPLAY"
    OPERATION="readLocation"
  />


  <PAGE_PARAMETER NAME="locationID"/>
  <PAGE_PARAMETER NAME="locationStructureID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="locationID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="locationKeyRef$locationID"
    />
  </CONNECT>


  <ACTION_SET>
    <ACTION_CONTROL
      IMAGE="LocationStructure"
      LABEL="ActionControl.Label.CreateSchedule"
    >
      <!-- BEGIN, CR00100495, GM -->
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="Organization_createDailySchedule"
      >
        <!-- END, CR00100495  -->
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="locationDetails$locationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="locationID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="locationContextDescriptionDetails$description"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="pageDescription"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <LIST>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="Organization_viewDailySchedule">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="scheduleID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="scheduleID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="locationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="locationID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="locationStructureID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="locationStructureID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="description$description"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="locationContextDescriptionDetails$description"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.EditSchedule">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Organization_modifyDailyScheduleFromList"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="scheduleID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="scheduleID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="description$description"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="locationContextDescriptionDetails$description"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL
        IMAGE="LocationStructure"
        LABEL="ActionControl.Label.AddSlot"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Organization_createSlot"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="scheduleID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="scheduleID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="locationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="locationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="description$description"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="pageDescription"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL LABEL="ActionControl.Label.Delete">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Organization_cancelDailySchedule"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="scheduleID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="scheduleID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="versionNo"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="versionNo"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="locationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="locationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="description$description"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="pageDescription"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>


    <FIELD
      LABEL="Field.Label.Name"
      WIDTH="40"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$schedules$listDailyScheduleDetails$dailyScheduleDtlsList$dtls$name"
        />
      </CONNECT>
    </FIELD>


    <!-- BEGIN, CR00323405, AKr -->
    <FIELD
      LABEL="Field.Label.ScheduleType"
      WIDTH="30"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="type"
        />
      </CONNECT>
    </FIELD>
    <!-- END, CR00323405 -->


    <FIELD
      LABEL="Field.Label.StartDate"
      WIDTH="15"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="effectiveDate"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Status"
      WIDTH="15"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="recordStatus"
        />
      </CONNECT>
    </FIELD>
  </LIST>


  <MENU MODE="NAVIGATION">
    <ACTION_CONTROL LABEL="Field.Label.Browse">
      <LINK PAGE_ID="Organization_resolveLocationTree">
        <CONNECT>
          <!-- BEGIN, CR00085157, SD -->
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="locationStructureID"
          />
          <!-- END, CR00085157 -->
          <TARGET
            NAME="PAGE"
            PROPERTY="locationStructureID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="locationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="locationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </MENU>
</PAGE>
