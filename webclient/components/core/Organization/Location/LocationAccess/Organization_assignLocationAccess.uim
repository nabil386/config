<!-- This page allows the user to assign additional location access.        -->
<PAGE PAGE_ID="Organization_assignLocationAccess" WINDOW_OPTIONS="width=700" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1"/>
    </CONNECT>


  </PAGE_TITLE>


  <SERVER_INTERFACE CLASS="Organization" NAME="ACTION" OPERATION="assignLocationAccess" PHASE="ACTION"/>


  <PAGE_PARAMETER NAME="locationID"/>
  <PAGE_PARAMETER NAME="locationStructureID"/>
  <PAGE_PARAMETER NAME="description"/>


  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="locationID"/>
    <TARGET NAME="ACTION" PROPERTY="locationID"/>
  </CONNECT>


  <ACTION_SET ALIGNMENT="CENTER">
    <ACTION_CONTROL IMAGE="SaveButton" LABEL="ActionControl.Label.Save" TYPE="SUBMIT"/>
    <ACTION_CONTROL IMAGE="CancelButton" LABEL="ActionControl.Label.Cancel"/>
  </ACTION_SET>


  <CLUSTER LABEL_WIDTH="25" NUM_COLS="1">
    <FIELD LABEL="Field.Label.Location">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="additionalLocationID"/>
      </CONNECT>
      <LINK>
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="locationID"/>
          <TARGET NAME="PAGE" PROPERTY="locationID"/>
        </CONNECT>
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="locationStructureID"/>
          <TARGET NAME="PAGE" PROPERTY="locationStructureID"/>
        </CONNECT>
      </LINK>
    </FIELD>
  </CLUSTER>


  <CLUSTER LABEL_WIDTH="80" NUM_COLS="2" TITLE="Cluster.Title.LocationPrivileges">
    <FIELD LABEL="Field.Label.Read">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="readRights"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Apply">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="applyIndicator"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Maintain">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="maintainRights"/>
      </CONNECT>
    </FIELD>


  </CLUSTER>


</PAGE>