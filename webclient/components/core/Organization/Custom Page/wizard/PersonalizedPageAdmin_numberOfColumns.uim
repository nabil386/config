<!-- Select the number of columns over which the page is layed -->
<PAGE
  PAGE_ID="PersonalizedPageAdmin_numberOfColumns"
  WINDOW_OPTIONS="width=780,height=400"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="CustomPageAdmin"
    NAME="DISPLAY"
    OPERATION="getNumberOfColumns"
    PHASE="DISPLAY"
  />
  <SERVER_INTERFACE
    ACTION_ID_PROPERTY="actionIDProperty"
    CLASS="CustomPageAdmin"
    NAME="ACTION"
    OPERATION="setNumberOfColumns"
    PHASE="ACTION"
  />


  <SERVER_INTERFACE
    CLASS="CustomPageAdmin"
    NAME="DISPLAYWIZARD"
    OPERATION="getCustomPageWizard"
  />


  <MENU MODE="WIZARD_PROGRESS_BAR">
    <CONNECT>
      <SOURCE
        NAME="DISPLAYWIZARD"
        PROPERTY="wizardMenu"
      />
    </CONNECT>
  </MENU>


  <PAGE_PARAMETER NAME="wizardStateID"/>


  <!-- WizardID -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="wizardStateID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="wizardStateID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="wizardStateID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="id$wizardStateID"
    />
  </CONNECT>


  <ACTION_SET
    ALIGNMENT="CENTER"
    BOTTOM="true"
    TOP="true"
  >


    <!-- Cancel -->
    <ACTION_CONTROL
      ACTION_ID="CANCEL"
      ALIGNMENT="LEFT"
      LABEL="ActionControl.Label.Cancel"
      TYPE="SUBMIT"
    >
      <LINK PAGE_ID="CustomPageAdmin_listCustomPages"/>
    </ACTION_CONTROL>


    <!-- Last -->
    <ACTION_CONTROL LABEL="ActionControl.Label.Last">
      <LINK
        DISMISS_MODAL="false"
        PAGE_ID="PersonalizedPageAdmin_selectedPods"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="wizardStateID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="wizardStateID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <!-- Save -->
    <ACTION_CONTROL
      ACTION_ID="SAVE"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    >
      <LINK PAGE_ID="CustomPageAdmin_listCustomPages"/>
    </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER
    BEHAVIOR="NONE"
    NUM_COLS="2"
    LABEL_WIDTH="40"
    SHOW_LABELS="true"
  >
    <FIELD
      LABEL="Field.Label.NoColumns"
      WIDTH="3"
      WIDTH_UNITS="CHARS"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="numberOfColumns"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="numberOfColumns"
        />
      </CONNECT>
    </FIELD>


  </CLUSTER>


</PAGE>
