<!-- Modify the  pods page contexts  for a personalized page   -->
<PAGE
  PAGE_ID="PersonalizedPageAdmin_editPageContexts"
  WINDOW_OPTIONS="width=780,height=400"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="CustomPageAdmin"
    NAME="DISPLAY"
    OPERATION="getPodContextForEdit"
    PHASE="DISPLAY"
  />
  <SERVER_INTERFACE
    ACTION_ID_PROPERTY="actionIDProperty"
    CLASS="CustomPageAdmin"
    NAME="ACTION"
    OPERATION="setPodContext"
    PHASE="ACTION"
  />


  <SERVER_INTERFACE
    CLASS="CustomPageAdmin"
    NAME="DISPLAYWIZARD"
    OPERATION="getCustomPageEditWizard"
  />


  <MENU MODE="WIZARD_PROGRESS_BAR">
    <CONNECT>
      <SOURCE
        NAME="DISPLAYWIZARD"
        PROPERTY="wizardMenu"
      />
    </CONNECT>
  </MENU>


  <PAGE_PARAMETER NAME="wizardStateID"/>
  <PAGE_PARAMETER NAME="pageConfigID"/>


  <!-- WizardID -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="wizardStateID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="wizardStateID$wizardStateID"
    />
  </CONNECT>


  <!-- PageConfigID -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="pageConfigID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="pageConfigID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="DISPLAY"
      PROPERTY="result$wizardID$wizardStateID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="id$wizardStateID"
    />
  </CONNECT>


  <ACTION_SET
    ALIGNMENT="CENTER"
    BOTTOM="true"
    TOP="true"
  >


    <!-- Cancel -->
    <ACTION_CONTROL
      ACTION_ID="CANCEL"
      ALIGNMENT="LEFT"
      LABEL="ActionControl.Label.Cancel"
      TYPE="SUBMIT"
    >
      <LINK PAGE_ID="CustomPageAdmin_listCustomPages"/>
    </ACTION_CONTROL>


    <!-- Next -->
    <ACTION_CONTROL
      ACTION_ID="NEXTPAGE"
      LABEL="ActionControl.Label.Next"
      TYPE="SUBMIT"
    >
      <LINK
        DISMISS_MODAL="false"
        PAGE_ID="PersonalizedPageAdmin_editAvailablePods"
        SAVE_LINK="TRUE"
      >
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="result$wizardStateID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="wizardStateID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <LIST
    DESCRIPTION="List.Label.Description"
    
  >
    <CONTAINER WIDTH="7">


      <WIDGET TYPE="MULTISELECT">


        <WIDGET_PARAMETER NAME="MULTI_SELECT_SOURCE">
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="context"
            />
          </CONNECT>
        </WIDGET_PARAMETER>


        <WIDGET_PARAMETER NAME="MULTI_SELECT_TARGET">
          <CONNECT>
            <TARGET
              NAME="ACTION"
              PROPERTY="contextTabLists"
            />
          </CONNECT>
        </WIDGET_PARAMETER>


        <WIDGET_PARAMETER NAME="MULTI_SELECT_INITIAL">
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="contextTabLists"
            />
          </CONNECT>
        </WIDGET_PARAMETER>


      </WIDGET>
    </CONTAINER>


    <FIELD LABEL="Field.Label.Contexts">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="context"
        />
      </CONNECT>
    </FIELD>
  </LIST>


</PAGE>
