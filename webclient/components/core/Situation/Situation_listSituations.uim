<!-- This page is used to display a list of situations                      -->
<PAGE
  PAGE_ID="Situation_listSituations"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="Situation"
    NAME="DISPLAY"
    OPERATION="listSituations"
    PHASE="DISPLAY"
  />
  <PAGE_PARAMETER NAME="description"/>
  <PAGE_PARAMETER NAME="caseID"/>
  <PAGE_PARAMETER NAME="actionPlanID"/>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionPlanID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="actionPlanKey$actionPlanID"
    />
  </CONNECT>
  <!-- BEGIN, CR00200707, AK -->
  <MENU MODE="IN_PAGE_NAVIGATION">
    <ACTION_CONTROL LABEL="InPageNav.Label.PlanDetails">
      <LINK
        PAGE_ID="ActionPlan_viewActionPlan"
        SAVE_LINK="false"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>


        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="actionPlanID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="actionPlanID"
          />
        </CONNECT>


        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="description"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="pageDescription"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL
      LABEL="InPageNav.Label.Situations"
      STYLE="in-page-current-link"
    >
      <LINK
        PAGE_ID="Situation_listSituations"
        SAVE_LINK="false"
      >

      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="InPageNav.Label.Actions">
      <LINK
        PAGE_ID="Action_listActions"
        SAVE_LINK="false"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="actionPlanID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="actionPlanID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="description"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="description"
          />
        </CONNECT>


      </LINK>
    </ACTION_CONTROL>
  </MENU>
  <!-- END, CR00200707 -->


  <LIST>
    <ACTION_SET TYPE="LIST_ROW_MENU">


      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
        <!-- BEGIN, CR00179295, AK -->
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Situation_modifySituation"
        >
          <!-- END, CR00179295 -->
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="caseID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="caseID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="situationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="situationID"
            />
          </CONNECT>
          <!-- BEGIN, CR00216915, AK-->
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="actionPlanID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="actionPlanID"
            />
          </CONNECT>
          <!-- END, CR00216915-->
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="description"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="description"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <SEPARATOR/>


      <ACTION_CONTROL LABEL="ActionControl.Label.AddExisting">
        <!-- BEGIN, CR00205132, AK -->
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Situation_associateAction"
          SAVE_LINK="true"
        >
          <!-- END, CR00205132 -->
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="caseID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="caseID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="situationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="situationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="actionPlanID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="actionPlanID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="description"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="description"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL LABEL="ActionControl.Label.NewAction">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Situation_createAction"
          SAVE_LINK="true"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="caseID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="caseID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="situationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="situationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="actionPlanID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="actionPlanID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="description"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="description"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <SEPARATOR/>


      <ACTION_CONTROL
        IMAGE="DeleteButton"
        LABEL="ActionControl.Label.Delete"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Situation_deleteSituation"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="situationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="situationID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


    </ACTION_SET>
    <!-- BEGIN, CR00214099, AK -->
    <FIELD
      LABEL="Field.Title.SituationCategory"
      WIDTH="20"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="situationCategory"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Title.SituationReqAction"
      WIDTH="65"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="situationRequiringAction"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Title.Status"
      WIDTH="15"
    >
      <!-- END, CR00214099 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="recordStatus"
        />
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="Situation_viewSituation">
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="situationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="situationID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="actionPlanID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="actionPlanKey$actionPlanID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="description"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="description"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>
</PAGE>
