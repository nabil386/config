<!-- This page is used to display the Situation Details.                    -->
<PAGE
  PAGE_ID="Situation_viewSituationPopup"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
      />
    </CONNECT>
    <CONNECT>
      <SOURCE
        NAME="PAGE"
        PROPERTY="description"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="Situation"
    NAME="DISPLAY"
    OPERATION="viewSituation"
    PHASE="DISPLAY"
  />
  <SERVER_INTERFACE
    CLASS="Situation"
    NAME="DISPLAYCONCERN"
    OPERATION="getSituationConcernList"
    PHASE="DISPLAY"
  />
  <!-- BEGIN, CR00205132, AK -->
  <SERVER_INTERFACE
    CLASS="Situation"
    NAME="DISPLAYACTIONS"
    OPERATION="listAssociatedActions"
  />
  <!-- END, CR00205132 -->


  <PAGE_PARAMETER NAME="caseID"/>
  <PAGE_PARAMETER NAME="situationID"/>
  <PAGE_PARAMETER NAME="actionPlanID"/>
  <PAGE_PARAMETER NAME="description"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="situationID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="situationKey$situationID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="situationID"
    />
    <TARGET
      NAME="DISPLAYCONCERN"
      PROPERTY="situationKey$situationID"
    />
  </CONNECT>


  <ACTION_SET
    ALIGNMENT="CENTER"
    BOTTOM="true"
  >


    <ACTION_CONTROL
      IMAGE="CloseButton"
      LABEL="ActionControl.Label.Close"
    />
  </ACTION_SET>


  <INCLUDE FILE_NAME="Situation_viewSituationView.vim"/>


</PAGE>
