<!-- This page is used to display the Situation Details.                    -->
<PAGE
  PAGE_ID="Situation_viewSituation"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
      />
    </CONNECT>
    <CONNECT>
      <SOURCE
        NAME="PAGE"
        PROPERTY="description"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="Situation"
    NAME="DISPLAY"
    OPERATION="viewSituation"
    PHASE="DISPLAY"
  />
  <SERVER_INTERFACE
    CLASS="Situation"
    NAME="DISPLAYCONCERN"
    OPERATION="getSituationConcernList"
    PHASE="DISPLAY"
  />


  <SERVER_INTERFACE
    CLASS="Situation"
    NAME="DISPLAYACTIONS"
    OPERATION="listAssociatedActions"
  />


  <SERVER_INTERFACE
    CLASS="Situation"
    NAME="DISPLAYALLEGATIONS"
    OPERATION="listAssociatedAllegations"
  />


  <PAGE_PARAMETER NAME="caseID"/>
  <PAGE_PARAMETER NAME="situationID"/>
  <PAGE_PARAMETER NAME="actionPlanID"/>
  <PAGE_PARAMETER NAME="description"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="situationID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="situationKey$situationID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="situationID"
    />
    <TARGET
      NAME="DISPLAYACTIONS"
      PROPERTY="situationKey$situationID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="situationID"
    />
    <TARGET
      NAME="DISPLAYALLEGATIONS"
      PROPERTY="situationKey$situationID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="situationID"
    />
    <TARGET
      NAME="DISPLAYCONCERN"
      PROPERTY="situationKey$situationID"
    />
  </CONNECT>


  <INCLUDE FILE_NAME="Situation_viewSituationView.vim"/>


  <LIST TITLE="List.Title.Allegations">
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.Remove">
        <!-- BEGIN, CR00179295, AK -->
        <!-- BEGIN, CR00206887, AK -->
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Situation_removeAllegation"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAYALLEGATIONS"
              PROPERTY="allegationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="allegationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="situationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="situationID"
            />
          </CONNECT>
          <!-- END, CR00206887 -->


          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="description"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="pageDescription"
            />
          </CONNECT>
        </LINK>
        <!-- END, CR00179295 -->
      </ACTION_CONTROL>


    </ACTION_SET>
    <!-- BEGIN, CR00214099, AK -->
    <FIELD
      LABEL="Field.Title.Type"
      WIDTH="40"
    >
      <!-- END, CR00214099 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAYALLEGATIONS"
          PROPERTY="type"
        />
      </CONNECT>
    </FIELD>
    <!-- BEGIN, CR00214099, AK -->
    <FIELD
      LABEL="Field.Title.AllegationsDate"
      WIDTH="15"
    >
      <!-- END, CR00214099 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAYALLEGATIONS"
          PROPERTY="allegationDateTime"
        />
      </CONNECT>
    </FIELD>
    <!-- BEGIN, CR00214099, AK -->
    <FIELD
      LABEL="Field.Title.Location"
      WIDTH="35"
    >
      <!-- END, CR00214099 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAYALLEGATIONS"
          PROPERTY="location"
        />
      </CONNECT>
    </FIELD>


    <!-- BEGIN, CR00214099, AK -->
    <FIELD
      LABEL="Field.Title.Status"
      WIDTH="10"
    >
      <!-- END, CR00214099 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAYALLEGATIONS"
          PROPERTY="recordStatus"
        />
      </CONNECT>
    </FIELD>
  </LIST>
  <!-- BEGIN, CR00205132, AK -->
  <CLUSTER
    NUM_COLS="1"
    SHOW_LABELS="false"
    TITLE="Cluster.Label.Comments"
  >
    <!-- BEGIN, CR00416277, VT -->
    <FIELD
      HEIGHT="3"
      LABEL="Field.Label.Comments"
    >
      <!-- END, CR00416277 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="comments"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
  <!-- END, CR00205132 -->
</PAGE>
