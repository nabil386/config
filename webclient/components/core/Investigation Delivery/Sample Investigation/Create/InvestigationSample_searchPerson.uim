<!-- This page allows the user to search for the client for whom the        -->
<!-- integrated case is being created.                                      -->
<PAGE PAGE_ID="InvestigationSample_searchPerson" HIDE_CONDITIONAL_LINKS="false" WINDOW_OPTIONS="width=700" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1"/>
    </CONNECT>
  </PAGE_TITLE>


  <!-- BEGIN, CR00282028, IBM -->
  <INFORMATIONAL>
    <CONNECT>
      <SOURCE NAME="ACTION" PROPERTY="informationMsgTxt"/>
    </CONNECT>
  </INFORMATIONAL>
  <!-- END, CR00282028 -->


  <ACTION_SET ALIGNMENT="CENTER" TOP="false">
    <ACTION_CONTROL IMAGE="PreviousButton" LABEL="ActionControl.Label.Previous">
      <LINK DISMISS_MODAL="false" OPEN_MODAL="false" PAGE_ID="InvestigationSample_selectPersonType" SAVE_LINK="false"/>
    </ACTION_CONTROL>


    <ACTION_CONTROL IMAGE="CancelButton" LABEL="ActionControl.Label.Cancel">
    </ACTION_CONTROL>
  </ACTION_SET>


  <!-- BEGIN, CR00282028, IBM -->
  <SERVER_INTERFACE CLASS="Person" NAME="ACTION" OPERATION="searchPerson" PHASE="ACTION"/>
  <!-- END, CR00282028 -->


  <INCLUDE FILE_NAME="Person_searchCriteriaView.vim"/>


  <CLUSTER>
    <ACTION_SET ALIGNMENT="CENTER" TOP="false">
      <ACTION_CONTROL IMAGE="SearchButton" LABEL="ActionControl.Label.Search" TYPE="SUBMIT">
        <LINK PAGE_ID="THIS" SAVE_LINK="false"/>
      </ACTION_CONTROL>


      <ACTION_CONTROL IMAGE="ResetButton" LABEL="ActionControl.Label.Reset">
        <LINK PAGE_ID="InvestigationSample_searchPerson" SAVE_LINK="false"/>
      </ACTION_CONTROL>
    </ACTION_SET>
  </CLUSTER>


  <LIST PAGINATED="false" TITLE="List.Title.SearchResults">
    <CONTAINER LABEL="Container.Label.Action" WIDTH="10">
      <ACTION_CONTROL LABEL="ActionControl.Label.Select">
        <CONDITION>
          <IS_FALSE NAME="ACTION" PROPERTY="result$personSearchResult$dtlsList$restrictedIndOpt"/>
        </CONDITION>
        <LINK DISMISS_MODAL="true" OPEN_MODAL="false" PAGE_ID="InvestigationSample_selectType" SAVE_LINK="true">
          <CONNECT>
            <SOURCE NAME="ACTION" PROPERTY="concernRoleID"/>
            <TARGET NAME="PAGE" PROPERTY="concernRoleID"/>
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>

    <!-- BEGIN, CR00388789, MR -->
    <FIELD LABEL="Field.Title.Name" WIDTH="39">
      <CONNECT>
        <SOURCE NAME="ACTION" PROPERTY="dtlsList$xmlPersonData"/>
      </CONNECT>
    </FIELD>
    <!-- END, CR00388789 -->


    <FIELD LABEL="Field.Title.Address" WIDTH="39">
      <CONNECT>
        <SOURCE NAME="ACTION" PROPERTY="dtlsList$formattedAddress"/>
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Title.DateOfBirth" WIDTH="12">
      <CONNECT>
        <SOURCE NAME="ACTION" PROPERTY="dtlsList$dateOfBirth"/>
      </CONNECT>
    </FIELD>
  </LIST>
</PAGE>