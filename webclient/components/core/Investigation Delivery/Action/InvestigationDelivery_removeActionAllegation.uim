<!-- This page allows users to remove an Allegation association form        -->
<!-- an Action.                                                             -->
<?curam-deprecated Since Curam 6.0, as part of the Action Plan Enhancement, 
  allegations are now associated to situations and not actions. 
  See release note:CEF-722 : ActionPlan Enhancement?>
<PAGE PAGE_ID="InvestigationDelivery_removeActionAllegation" WINDOW_OPTIONS="width=400" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1"/>
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE CLASS="Action" NAME="ACTION" OPERATION="cancelActionChildAssociation" PHASE="ACTION"/>


  <PAGE_PARAMETER NAME="actionID"/>
  <PAGE_PARAMETER NAME="parentLinkID"/>
  <PAGE_PARAMETER NAME="actionChildLinkID"/>
  <PAGE_PARAMETER NAME="versionNo"/>
  <PAGE_PARAMETER NAME="description"/>


  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="actionChildLinkID"/>
    <TARGET NAME="ACTION" PROPERTY="actionChildLinkID"/>
  </CONNECT>


  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="versionNo"/>
    <TARGET NAME="ACTION" PROPERTY="versionNo"/>
  </CONNECT>


  <ACTION_SET ALIGNMENT="CENTER" TOP="false">
    <ACTION_CONTROL IMAGE="YesButton" LABEL="ActionControl.Label.Yes" TYPE="SUBMIT">
      </ACTION_CONTROL>


    <ACTION_CONTROL IMAGE="NoButton" LABEL="ActionControl.Label.No">
      </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER SHOW_LABELS="false" STYLE="outer-cluster-borderless">
    <FIELD LABEL="Field.Label.RemoveAllegation">
      <CONNECT>
        <SOURCE NAME="TEXT" PROPERTY="Field.StaticText.RemoveAllegation"/>
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>