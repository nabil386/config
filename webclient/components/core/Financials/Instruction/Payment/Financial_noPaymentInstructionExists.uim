<!-- This page is displayed when an amount is selected on a context panel   -->
<!-- (on a Payment Correction case for example) and the financials do not   -->
<!-- yet exist.                                                             -->
<PAGE
  PAGE_ID="Financial_noPaymentInstructionExists"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <CLUSTER
    SHOW_LABELS="false"
    STYLE="outer-cluster-borderless"
  >
    <FIELD>
      <CONNECT>
        <SOURCE
          NAME="TEXT"
          PROPERTY="Field.Label.NoPayment"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <ACTION_SET>


    <ACTION_CONTROL
      IMAGE="CloseButton"
      LABEL="ActionControl.Label.Close"
    >    
    </ACTION_CONTROL>
  </ACTION_SET>


</PAGE>
