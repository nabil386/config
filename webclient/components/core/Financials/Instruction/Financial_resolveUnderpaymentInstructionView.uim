<!-- This jsp redirects the user to the appropriate page to display the     -->
<!-- details of a financial instruction for an underpayment payment.        -->
<PAGE
  PAGE_ID="Financial_resolveUnderpaymentInstructionView"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    
      curam.omega3.request.RequestHandler 
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";
      String instructionID = request.getParameter("finInstructionID");
           
      String url = "";
 
      if (instructionID == null || instructionID.equals("") || instructionID.equals("0")) {      
       url = context + "Financial_noPaymentInstructionExistsPage.do?finInstructionID=" + curam.omega3.request.RequestUtils.escapeURL(instructionID);       
      } else {
        url = context + "Financial_viewUnderpmtPaymentInstructionPage.do?finInstructionID=" + curam.omega3.request.RequestUtils.escapeURL(instructionID); 
      }

      url += "&amp;" + rh.getSystemParameters();  
      
      response.sendRedirect(response.encodeRedirectURL(url));
            
  </JSP_SCRIPTLET>
</PAGE>
