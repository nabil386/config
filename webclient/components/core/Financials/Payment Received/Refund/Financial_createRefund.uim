<!-- This page is used to refund some or all of a payment received.         -->
<PAGE
  PAGE_ID="Financial_createRefund"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="Financial"
    NAME="ACTION"
    OPERATION="refundPaymentReceived"
    PHASE="ACTION"
  />



  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >


    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />


    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />


  </ACTION_SET>

  <PAGE_PARAMETER NAME="finInstructionID"/>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="finInstructionID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="finInstructionID"
    />
  </CONNECT>
  
  <PAGE_PARAMETER NAME="unallocatedAmount"/>

  
  <CLUSTER
    LABEL_WIDTH="50"
    NUM_COLS="2"
  >


    <FIELD LABEL="Field.Label.UnallocatedAmount">
      <CONNECT>
        <SOURCE
          NAME="PAGE"
          PROPERTY="unallocatedAmount"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.RefundAll">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="refundAll"
        />
      </CONNECT>
    </FIELD>


    <FIELD CONTROL="SKIP"/>


    <FIELD
      LABEL="Field.Label.Amount"
      WIDTH="60"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="amount"
        />
      </CONNECT>
    </FIELD>


  </CLUSTER>


</PAGE>