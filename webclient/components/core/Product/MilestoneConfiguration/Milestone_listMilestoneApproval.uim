<!-- List all of the approvals for a milestone waiver       .                 -->
<PAGE
  PAGE_ID="Milestone_listMilestoneApproval"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>


  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="MaintainMilestoneWaiverApproval"
    NAME="DISPLAY"
    OPERATION="listMilestoneApprovals"
  />


  <SERVER_INTERFACE
    CLASS="Product"
    NAME="READMILESTONEDETAILS"
    OPERATION="readMilestoneConfiguration"
  />


  <PAGE_PARAMETER NAME="milestoneConfigurationID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="milestoneConfigurationID"
    />
    <TARGET
      NAME="READMILESTONEDETAILS"
      PROPERTY="key$milestoneConfigurationID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="milestoneConfigurationID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$milestoneConfigurationID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="milestoneConfigurationID"
    />
    <TARGET
      NAME="READMILESTONEDETAILS"
      PROPERTY="key$milestoneConfigurationID"
    />
  </CONNECT>


  <ACTION_SET BOTTOM="false">


    <CONDITION>
      <IS_TRUE
        NAME="DISPLAY"
        PROPERTY="result$isNewAllowed"
      />
    </CONDITION>
    <ACTION_CONTROL
      IMAGE="NewButton"
      LABEL="ActionControl.Label.New"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="Milestone_createMilestoneApproval"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="milestoneConfigurationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="milestoneConfigurationID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="READMILESTONEDETAILS"
            PROPERTY="name"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="name"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


  </ACTION_SET>


  <LIST>


    <ACTION_SET TYPE="LIST_ROW_MENU">


      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">


        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Milestone_modifyMilestoneApproval"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$approvalList$dtls$dtls$milestoneWaiverApprovalCheckID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="milestoneWaiverApprovalID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="READMILESTONEDETAILS"
              PROPERTY="name"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="name"
            />
          </CONNECT>
        </LINK>


      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="ActionControl.Label.Delete">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Milestone_cancelMilestoneApprovalCheck"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$approvalList$dtls$dtls$milestoneWaiverApprovalCheckID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="milestoneWaiverApprovalID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="READMILESTONEDETAILS"
              PROPERTY="name"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="name"
            />
          </CONNECT>


          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="milestoneConfigurationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="milestoneConfigurationID"
            />
          </CONNECT>


        </LINK>


      </ACTION_CONTROL>


    </ACTION_SET>


    <FIELD
      LABEL="Field.Label.Percentage"
      WIDTH="50"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="percentage"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.Status"
      WIDTH="50"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="status"
        />
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="Milestone_viewApprovalCheckForMilestone">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$approvalList$dtls$dtls$milestoneWaiverApprovalCheckID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="milestoneWaiverApprovalID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="READMILESTONEDETAILS"
            PROPERTY="name"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="name"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="milestoneConfigurationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="milestoneConfigurationID"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


</PAGE>
