<!-- This page allows the user to create absence reason             -->
<PAGE
  PAGE_ID="Product_createAbsenceReasonConfiguration"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Home"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="associateID"/>


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >
    <ACTION_CONTROL
      LABEL="ActionControl.Label.Save1"
      TYPE="SUBMIT"
    >
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="ActionControl.Label.Cancel"/>
  </ACTION_SET>


  <SERVER_INTERFACE
    CLASS="Product"
    NAME="ACTION"
    OPERATION="createAbsenceReasonConfiguration"
    PHASE="ACTION"
  />
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="associateID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="dtls$associateID"
    />
  </CONNECT>


  <CLUSTER LABEL_WIDTH="50">
    <FIELD
      LABEL="Field.Label.AbsenceReason.Name"
      USE_BLANK="true"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="dtls$absenceReasonCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.AbsenceReason.Payable">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="dtls$absenceReasonPayableInd"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.AbsenceReason.Deductible">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="dtls$absenceReasonDeductibleInd"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.AbsenceReason.IsAcceptable">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="dtls$isAcceptable"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>
