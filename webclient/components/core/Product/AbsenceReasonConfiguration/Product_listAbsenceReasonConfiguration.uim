<!-- This page allows the user to list all the Absence Reasons.                 -->
<PAGE PAGE_ID="Product_listAbsenceReasonConfiguration" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1"/>
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE CLASS="Product" NAME="DISPLAY" OPERATION="listAbsenceReasonConfiguration" PHASE="DISPLAY"/>
  <PAGE_PARAMETER NAME="productID"/>


  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="productID"/>
    <TARGET NAME="DISPLAY" PROPERTY="key$associateID"/>
  </CONNECT>


  <ACTION_SET ALIGNMENT="RIGHT" BOTTOM="false">
    <!-- BEGIN, CR00335803, SS -->
    <ACTION_CONTROL LABEL="ActionControl.Label.New">
      <LINK OPEN_MODAL="true" PAGE_ID="Product_createAbsenceReasonConfiguration" WINDOW_OPTIONS="width=500">
        <!-- END, CR00335803 -->
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="productID"/>
          <TARGET NAME="PAGE" PROPERTY="associateID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <LIST SORTABLE="true">


    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">


        <LINK OPEN_MODAL="true" PAGE_ID="Product_modifyAbsenceReasonConfiguration" WINDOW_OPTIONS="width=500">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="result$dtlsList$absenceReasonID"/>
            <TARGET NAME="PAGE" PROPERTY="absenceReasonID"/>
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="ActionControl.Label.Delete">
        <LINK OPEN_MODAL="true" PAGE_ID="Product_deleteAbsenceReasonConfiguration" WINDOW_OPTIONS="width=420">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="result$dtlsList$absenceReasonID"/>
            <TARGET NAME="PAGE" PROPERTY="absenceReasonID"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="result$dtlsList$versionNo"/>
            <TARGET NAME="PAGE" PROPERTY="versionNo"/>
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>


    <FIELD LABEL="Field.Label.AbsenceReason.Name" WIDTH="45">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="result$dtlsList$absenceReasonCode"/>
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.AbsenceReason.Payable" WIDTH="15">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="result$dtlsList$absenceReasonPayableInd"/>
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.AbsenceReason.Deductible" WIDTH="15">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="result$dtlsList$absenceReasonDeductibleInd"/>
      </CONNECT>


    </FIELD>


    <FIELD LABEL="Field.Label.AbsenceReason.IsAcceptable" WIDTH="15">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="result$dtlsList$isAcceptable"/>
      </CONNECT>


    </FIELD>


    <FIELD LABEL="Field.Label.AbsenceReason.Status" WIDTH="15">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="result$dtlsList$recordStatus"/>
      </CONNECT>


    </FIELD>


  </LIST>


</PAGE>