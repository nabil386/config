<!-- This jsp redirects the user based on their userType                    -->
<PAGE
  PAGE_ID="Organization_resolveUser"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    
    
      // This page is for the internal app only. It is to determine from a userName
      // whether the user is internal or external.  
      
      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";
      
      String userName = request.getParameter("userName");
      
      String internalUserLink="Organization_viewUserDetails";
      String externalUserLink="ExternalUser_userHome";
      
      String pageName = "";
      Object userType = null;
      
      curam.interfaces.OrganizationPkg.Organization_getUserType_TH
        th = new curam.interfaces.OrganizationPkg.Organization_getUserType_TH();

      th.setFieldValue(th.key$userName_idx,userName);

      th.callServer();
                 
      userType=th.getFieldValue(th.result$userType_idx);
      // BEGIN, CR00100174, MM
      if (userType.equals("INTERNAL")) {
      // END, CR00100174
        pageName=internalUserLink;
      // BEGIN, CR00100174, MM
      } else if (userType.equals("EXTERNAL")) {
      // END, CR00100174
        pageName = externalUserLink;
      }
                  
                  String url = context + pageName + "Page.do?userName=" + curam.omega3.request.RequestUtils.escapeURL(userName);
      
      response.sendRedirect(response.encodeRedirectURL(url));
    
    
  </JSP_SCRIPTLET>
</PAGE>
