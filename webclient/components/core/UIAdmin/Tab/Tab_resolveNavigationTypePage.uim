<!-- This jsp redirects the user to a Person or Prospect Home Page.         -->
<PAGE
  PAGE_ID="Tab_resolveNavigationTypePage"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    

      curam.omega3.request.RequestHandler
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";
      String tabID = request.getParameter("tabID");
      String url = "";


      curam.interfaces.TabPkg.Tab_readNavigationType_TH 
         th = new curam.interfaces.TabPkg.Tab_readNavigationType_TH();
    
      th.setFieldValue(th.key$tabID_idx,tabID);     
      th.callServer();
      
      String navType = th.getFieldValue(th.result$navType_idx);
      
      if (navType.equals("NT1")) {
        url = context + "Tab_navPagePage.do" + "?tabID="
        + curam.omega3.request.RequestUtils.escapeURL(tabID);
      } else if (navType.equals("NT2")) {
        url = context + "Tab_navBarPage.do" + "?tabID="
          + curam.omega3.request.RequestUtils.escapeURL(tabID);
      } else {
        // need to have a page that allows you to select the navigation type.
        url = context + "Tab_noNavigationPagePage.do" + "?tabID="
          + curam.omega3.request.RequestUtils.escapeURL(tabID);
      }

      url += "&amp;" + rh.getSystemParameters();
      response.sendRedirect(response.encodeRedirectURL(url));
    
  </JSP_SCRIPTLET>
</PAGE>
