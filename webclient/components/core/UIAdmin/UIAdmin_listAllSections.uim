<PAGE PAGE_ID="UIAdmin_listAllSections">


  <SERVER_INTERFACE
    CLASS="Section"
    NAME="DISPLAY"
    OPERATION="listAllSections"
  />


  <ACTION_SET>
    <ACTION_CONTROL LABEL="Control.Label.New">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="Section_create"
      >
        </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>
  <LIST>
    <FIELD LABEL="Field.Label.ID">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="id"
        />
      </CONNECT>
      <LINK PAGE_ID="Section_home">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="id"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="sectionID"
          />
        </CONNECT>
      </LINK>
    </FIELD>
    <FIELD LABEL="Field.Label.Title">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="title"
        />
      </CONNECT>
    </FIELD>
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="Control.Label.Edit">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Section_modifyDetails"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="id"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="sectionID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="Control.Label.Delete">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Section_delete"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="id"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="sectionID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>
  </LIST>


</PAGE>
