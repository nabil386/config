<PAGE
  PAGE_ID="UIAdminApplication_selectSearchOption"
  WINDOW_OPTIONS="width=500"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="applicationID"/>


  <SERVER_INTERFACE
    CLASS="ApplicationView"
    NAME="ACTION"
    OPERATION="modifySearchType"
    PHASE="ACTION"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="applicationID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="key$applicationID"
    />
  </CONNECT>


  <ACTION_SET>
    <ACTION_CONTROL
      LABEL="Control.Label.Save"
      TYPE="SUBMIT"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_resolveSearchSelection"
      >
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="result$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="result$appSearchType"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="searchType"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.Cancel">
    </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER LABEL_WIDTH="30">
    <FIELD LABEL="Field.Label.SearchType">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="key$appSearchType"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>
