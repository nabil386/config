<!-- BEGIN, CR00351081, PB -->
<PAGE PAGE_ID="UIAdminApplication_create" WINDOW_OPTIONS="width=500">
  <!-- END, CR00351081 -->


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="Page.Title"/>
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE CLASS="ApplicationView" NAME="ACTION" OPERATION="create" PHASE="ACTION"/>


  <CONNECT>
    <SOURCE NAME="CONSTANT" PROPERTY="Field.Label.Application.Internal"/>
    <TARGET NAME="ACTION" PROPERTY="appTypeDescription"/>
  </CONNECT>


  <CLUSTER LABEL_WIDTH="40">
    <FIELD LABEL="Field.Label.ID">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="applicationID"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Title">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="title"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.SubTitle">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="subTitle"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Message">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="message"/>
      </CONNECT>
    </FIELD>
    <WIDGET LABEL="Field.Label.Logo" TYPE="FILE_UPLOAD" WIDTH="75" WIDTH_UNITS="PERCENT">
      <WIDGET_PARAMETER NAME="CONTENT">
        <CONNECT>
          <TARGET NAME="ACTION" PROPERTY="logoContents"/>
        </CONNECT>
      </WIDGET_PARAMETER>
      <WIDGET_PARAMETER NAME="FILE_NAME">
        <CONNECT>
          <TARGET NAME="ACTION" PROPERTY="logoName"/>
        </CONNECT>
      </WIDGET_PARAMETER>
      <WIDGET_PARAMETER NAME="CONTENT_TYPE">
        <CONNECT>
          <TARGET NAME="ACTION" PROPERTY="logoContentType"/>
        </CONNECT>
      </WIDGET_PARAMETER>
    </WIDGET>
    <FIELD LABEL="Field.Label.LogoStatus">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="logoStatus"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.LogoAltText">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="logoAltText"/>
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <ACTION_SET>
    <ACTION_CONTROL LABEL="Control.Label.Save" TYPE="SUBMIT">
      <LINK PAGE_ID="System_resolveRefreshSearch" DISMISS_MODAL="false" SAVE_LINK="false">
        <!-- TEMPORARY SOLUTION for the search page refresh:     -->
        <!-- firstFormInput corresponds to the first input field -->
        <!-- defined in the UIAdmin_listAllApps.uim, if its      -->
        <!-- position changes, you need to update this property  -->
        <!-- accordingly.                                        -->
        <CONNECT>
          <SOURCE NAME="ACTION" PROPERTY="subTitle"/>
          <TARGET NAME="PAGE" PROPERTY="firstFormInput"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.Cancel">
    </ACTION_CONTROL>
  </ACTION_SET>
</PAGE>