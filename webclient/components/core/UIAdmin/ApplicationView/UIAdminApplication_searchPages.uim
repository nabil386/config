<PAGE
  HIDE_CONDITIONAL_LINKS="false"
  PAGE_ID="UIAdminApplication_searchPages"
>


  <PAGE_PARAMETER NAME="applicationID"/>


  <SERVER_INTERFACE
    CLASS="ApplicationView"
    NAME="DISPLAY"
    OPERATION="readSearchDetails"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="applicationID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$applicationID"
    />
  </CONNECT>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <ACTION_SET>
    <ACTION_CONTROL LABEL="Control.Label.Configure">
      <CONDITION>
        <IS_TRUE
          NAME="DISPLAY"
          PROPERTY="furtherOptionsEnabled"
        />
      </CONDITION>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_editFurtherOptions"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.AddSearchPage">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_addSearchPageRef"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.SetDefaultSearchPage">
      <CONDITION>
        <IS_TRUE
          NAME="DISPLAY"
          PROPERTY="searchPagesExist"
        />
      </CONDITION>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_defaultSearchPageList"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.EditSearchType">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_editSearchType"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.Delete">
      <CONDITION>
        <IS_TRUE
          NAME="DISPLAY"
          PROPERTY="appSearchEnabled"
        />
      </CONDITION>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_deleteSearch"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
	<ACTION_CONTROL LABEL="Control.Label.SmartNavigatorDetails">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_editSmartNavigator"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>	
  </ACTION_SET>

   <CLUSTER
    LABEL_WIDTH="10"
    TITLE="Cluster.Title.SmartNavigator"
  >
  <FIELD LABEL="Field.Label.SmartNavigatorEnabled">
	<CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="smartNavigatorEnabled"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.SmartNavigatorInitialText">
	<CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="smartNavigatorInitialText"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.SmartNavigatorDescription">
	<CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="smartNavigatorDescription"
        />
      </CONNECT>
    </FIELD>
	<FIELD LABEL="Field.Label.SmartNavigatorDefault">
		<CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="smartNavigatorDefaultPage"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>

  <CLUSTER
    LABEL_WIDTH="10"
    TITLE="Cluster.Title.FurtherOptions"
  >
    <FIELD LABEL="Field.Label.FurtherOptionsID">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="furtherOptionsPageID"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.FurtherOptionsDescription">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="furtherOptionsDescription"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
  
  <LIST TITLE="List.Title.SearchPages">
  
    <FIELD LABEL="Field.Label.PageID">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="pageID"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Description">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="description"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.InitialText">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$dtls$initialText"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Type">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="type"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.DefaultSearchPage">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="defaultPageInd"
        />
      </CONNECT>
    </FIELD>
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="Control.Label.Edit">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="UIAdminApplication_modifySearchPageDetails"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="key$applicationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="applicationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="pageID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="pageID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="Control.Label.Delete">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="UIAdminApplication_deleteSearchPage"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="key$applicationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="applicationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="pageID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="pageID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>
  </LIST>
</PAGE>
