<PAGE
  HIDE_CONDITIONAL_LINKS="false"
  PAGE_ID="UIAdminApplication_defaultSearchPage"
>


  <PAGE_PARAMETER NAME="applicationID"/>


  <SERVER_INTERFACE
    CLASS="ApplicationView"
    NAME="DISPLAY"
    OPERATION="readSearchDetails"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="applicationID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$applicationID"
    />
  </CONNECT>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <ACTION_SET>
    <ACTION_CONTROL LABEL="Control.Label.Configure">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_modifySearchDetails"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.EditSearchType">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_editSearchType"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.Delete">
      <CONDITION>
        <IS_TRUE
          NAME="DISPLAY"
          PROPERTY="appSearchEnabled"
        />
      </CONDITION>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="UIAdminApplication_deleteSearch"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER LABEL_WIDTH="20">
    <FIELD LABEL="Field.Label.DefaultSearchPage">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="defaultSearchPage"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.InitialText">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$initialText"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
  <CLUSTER
    LABEL_WIDTH="20"
    TITLE="Cluster.Title.FurtherOptions"
  >
    <FIELD LABEL="Field.Label.FurtherOptionsID">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="furtherOptionsPageID"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.FurtherOptionsDescription">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="furtherOptionsDescription"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
</PAGE>
