  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="applicationID"/>


  <SERVER_INTERFACE
    CLASS="ApplicationView"
    NAME="readMenu"
    OPERATION="readPersonBannerMenuDetails"
    PHASE="DISPLAY"
  />
  <SERVER_INTERFACE
    CLASS="ApplicationView"
    NAME="listMenuItems"
    OPERATION="listPersonBannerMenuItems"
    PHASE="DISPLAY"
  />
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="applicationID"
    />
    <TARGET
      NAME="readMenu"
      PROPERTY="key$applicationID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="applicationID"
    />
    <TARGET
      NAME="listMenuItems"
      PROPERTY="key$applicationID"
    />
  </CONNECT>


  <ACTION_SET>
    <ACTION_CONTROL LABEL="Control.Label.Edit.Banner">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="External_modifyPersonBannerMenu"
        SAVE_LINK="true"
      >
        <CONNECT>
          <SOURCE
            NAME="readMenu"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="readMenu"
            PROPERTY="type"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="type"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.Delete.Banner">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="External_deleteBannerMenu"
        SAVE_LINK="true"
      >
        <CONNECT>
          <SOURCE
            NAME="readMenu"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="readMenu"
            PROPERTY="type"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="type"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.New.MenuItem">
      <CONDITION>
        <IS_TRUE
          NAME="readMenu"
          PROPERTY="showNewActionControl"
        />
      </CONDITION>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="External_createBannerMenuItem"
        SAVE_LINK="true"
      >
        <CONNECT>
          <SOURCE
            NAME="readMenu"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="readMenu"
            PROPERTY="type"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="type"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER
    BEHAVIOR="NONE"
    LABEL_WIDTH="30"
  >
    <CONTAINER LABEL="Field.Label.Banner.Title">
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="readMenu"
            PROPERTY="title"
          />
        </CONNECT>
      </FIELD>
      <ACTION_CONTROL
        IMAGE="AddTranslation"
        LABEL="ActionControl.Label.TextTranslation"
      >
        <CONDITION>
          <IS_TRUE
            NAME="readMenu"
            PROPERTY="showTitleTranslation"
          />
        </CONDITION>
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="External_listLocalizableText"
        >
          <CONNECT>
            <SOURCE
              NAME="readMenu"
              PROPERTY="titlePropKey"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="localizableKey"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="applicationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="documentID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>
  </CLUSTER>


  <LIST TITLE="List.Title.MenuItem">
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="External_viewBannerMenuItem">
        <CONNECT>
          <SOURCE
            NAME="listMenuItems"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="listMenuItems"
            PROPERTY="menuItemID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="menuItemID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="listMenuItems"
            PROPERTY="result$dtls$iconID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="iconID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="readMenu"
            PROPERTY="result$type"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="type"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>
    <FIELD LABEL="Field.Label.MenuItem.Title">
      <CONNECT>
        <SOURCE
          NAME="listMenuItems"
          PROPERTY="title"
        />
      </CONNECT>
    </FIELD>
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="Control.Label.Edit">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="External_modifyBannerMenuItem"
        >
          <CONNECT>
            <SOURCE
              NAME="listMenuItems"
              PROPERTY="key$applicationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="applicationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="listMenuItems"
              PROPERTY="menuItemID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="menuItemID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="listMenuItems"
              PROPERTY="type"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="type"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="Control.Label.Delete">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="External_deleteBannerMenuItem"
        >
          <CONNECT>
            <SOURCE
              NAME="listMenuItems"
              PROPERTY="key$applicationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="applicationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="listMenuItems"
              PROPERTY="result$dtls$iconName"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="iconID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="listMenuItems"
              PROPERTY="menuItemID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="menuItemID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL LABEL="Control.Label.Reorder">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="External_reorderBannerMenuItem"
        >
          <CONNECT>
            <SOURCE
              NAME="listMenuItems"
              PROPERTY="key$applicationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="applicationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="listMenuItems"
              PROPERTY="menuItemID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="srcMenuItemID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="readMenu"
              PROPERTY="result$type"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="type"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>
  </LIST>
</PAGE>
