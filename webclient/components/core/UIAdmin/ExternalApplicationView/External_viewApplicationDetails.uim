<PAGE PAGE_ID="External_viewApplicationDetails">


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="applicationID"/>


  <SERVER_INTERFACE
    CLASS="ApplicationView"
    NAME="DISPLAY"
    OPERATION="readDetails"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="applicationID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$applicationID"
    />
  </CONNECT>


  <ACTION_SET>
    <ACTION_CONTROL LABEL="Control.Label.EditApplicationDetails">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="External_modifyApplicationDetails"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="key$applicationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="applicationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER
    LABEL_WIDTH="30"
    TITLE="Cluster.Title.Banner"
  >


    <CONTAINER LABEL="Field.Label.Component">
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="title"
          />
        </CONNECT>
      </FIELD>
      <ACTION_CONTROL
        IMAGE="AddTranslation"
        LABEL="ActionControl.Label.Component.TextTranslation"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="External_listLocalizableText"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="applicationPropKey"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="localizableKey"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="applicationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="documentID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>
    <CONTAINER LABEL="Field.Label.Appplication">
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="subTitle"
          />
        </CONNECT>
      </FIELD>
      <ACTION_CONTROL
        IMAGE="AddTranslation"
        LABEL="ActionControl.Label.Application.TextTranslation"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="External_listLocalizableText"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="componentPropKey"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="localizableKey"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="applicationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="documentID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>
    <FIELD LABEL="Field.Label.Logo">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$logoID"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.LogoStatus">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="logoStatus"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.LogoAltText">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="logoAltText"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
</PAGE>