<PAGE PAGE_ID="External_modifyApplicationDetails" WINDOW_OPTIONS="width=500">


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="Page.Title"/>
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="applicationID"/>


  <SERVER_INTERFACE CLASS="ApplicationView" NAME="DISPLAY" OPERATION="readDetails"/>
  <SERVER_INTERFACE CLASS="ApplicationView" NAME="ACTION" OPERATION="modifyDetails" PHASE="ACTION"/>


  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="applicationID"/>
    <TARGET NAME="DISPLAY" PROPERTY="key$applicationID"/>
  </CONNECT>
  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="applicationID"/>
    <TARGET NAME="ACTION" PROPERTY="details$applicationID"/>
  </CONNECT>


  <ACTION_SET>
    <ACTION_CONTROL LABEL="Control.Label.Save" TYPE="SUBMIT">
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Control.Label.Cancel">
    </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER LABEL_WIDTH="45" TITLE="Cluster.Title.Banner">
    <FIELD LABEL="Field.Label.Title">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="title"/>
      </CONNECT>
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="title"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.SubTitle">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="subTitle"/>
      </CONNECT>
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="subTitle"/>
      </CONNECT>
    </FIELD>
    <WIDGET LABEL="Field.Label.Logo" TYPE="FILE_UPLOAD" WIDTH="75" WIDTH_UNITS="PERCENT">
      <WIDGET_PARAMETER NAME="CONTENT">
        <CONNECT>
          <TARGET NAME="ACTION" PROPERTY="logoContents"/>
        </CONNECT>
      </WIDGET_PARAMETER>
      <WIDGET_PARAMETER NAME="FILE_NAME">
        <CONNECT>
          <TARGET NAME="ACTION" PROPERTY="logoName"/>
        </CONNECT>
      </WIDGET_PARAMETER>
      <WIDGET_PARAMETER NAME="CONTENT_TYPE">
        <CONNECT>
          <TARGET NAME="ACTION" PROPERTY="logoContentType"/>
        </CONNECT>
      </WIDGET_PARAMETER>
    </WIDGET>
    <FIELD LABEL="Field.Label.LogoStatus">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="logoStatus"/>
      </CONNECT>
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="logoStatus"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.LogoAltText">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="logoAltText"/>
      </CONNECT>
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="logoAltText"/>
      </CONNECT>
    </FIELD>
  </CLUSTER>
</PAGE>