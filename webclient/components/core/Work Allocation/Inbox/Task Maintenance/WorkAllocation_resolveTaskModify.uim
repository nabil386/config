<!-- This scriplet determines if we open the modify page that allows the    -->
<!-- to modify the task deadline or the modify page that does not allow this-->
<PAGE
  PAGE_ID="WorkAllocation_resolveTaskModify"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    

      curam.omega3.request.RequestHandler 
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);


      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";
      String taskID = request.getParameter("taskID");
      String userSetDeadlineInd = request.getParameter("userSetDeadlineInd");
      String url = "";
  
      if (taskID == null) {
        // BEGIN, CR00110216, SK
       core.ScriptletMissingParamException e = new
                core.ScriptletMissingParamException(-20002, "taskID");
       System.out.println(e);
       throw e;
       // END, CR00110216
      }
      
      if (userSetDeadlineInd == null) {
        // BEGIN, CR00110216, SK
       core.ScriptletMissingParamException e = new
                core.ScriptletMissingParamException(-20002, "userSetDeadlineInd");
       System.out.println(e);
       throw e;
       
      }
      
      if(userSetDeadlineInd.equals("true")) {
        url = context + "WorkAllocation_modifyTaskWithDeadlinePage.do?taskID=" + curam.omega3.request.RequestUtils.escapeURL(taskID);
      } else {
        url = context + "WorkAllocation_modifyTaskWithoutDeadlinePage.do?taskID=" + curam.omega3.request.RequestUtils.escapeURL(taskID);      
      }
      // END, CR00110216
      url += "&amp;" + rh.getSystemParameters();  
      response.sendRedirect(response.encodeRedirectURL(url));
      
    
  </JSP_SCRIPTLET>
</PAGE>
