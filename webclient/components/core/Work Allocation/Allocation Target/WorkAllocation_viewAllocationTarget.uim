<!-- Page displaying the details of an allocation target.                   -->
<PAGE PAGE_ID="WorkAllocation_viewAllocationTarget" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1"/>
    </CONNECT>
    <CONNECT>
      <SOURCE NAME="DISPLAY" PROPERTY="name"/>
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE CLASS="WorkAllocation" NAME="DISPLAY" OPERATION="readAllocationTargetSummaryDtls"/>


  <PAGE_PARAMETER NAME="allocationTargetID"/>


  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="allocationTargetID"/>
    <TARGET NAME="DISPLAY" PROPERTY="allocationTargetID"/>
  </CONNECT>


  <LIST TITLE="List.Title.TargetItems">


    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.Remove">
        <LINK OPEN_MODAL="true" PAGE_ID="WorkAllocation_removeAllocationTargetItem" WINDOW_OPTIONS="width=400">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetItemID"/>
            <TARGET NAME="PAGE" PROPERTY="allocationTargetItemID"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetID"/>
            <TARGET NAME="PAGE" PROPERTY="allocationTargetID"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetItemName"/>
            <TARGET NAME="PAGE" PROPERTY="pageDescription"/>
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>


    <FIELD LABEL="Field.Title.Name" WIDTH="80">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetItemName"/>
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Title.Type" WIDTH="20">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetItemType"/>
      </CONNECT>
    </FIELD>


  </LIST>


  <CLUSTER SHOW_LABELS="false" TITLE="Cluster.Title.Comments">
    <FIELD HEIGHT="4">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="comments"/>
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>