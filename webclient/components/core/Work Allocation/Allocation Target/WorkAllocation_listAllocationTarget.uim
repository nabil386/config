<!-- Lists all the allocation targets in the system.                        -->
<PAGE PAGE_ID="WorkAllocation_listAllocationTarget" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">

<PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="PageTitle.Title"/>
    </CONNECT>
  </PAGE_TITLE>

  <SERVER_INTERFACE CLASS="WorkAllocation" NAME="DISPLAY" OPERATION="listAllocationTarget"/>
  <ACTION_SET BOTTOM="false">
    <ACTION_CONTROL IMAGE="NewButton" LABEL="ActionControl.Label.New">
      <LINK OPEN_MODAL="true" PAGE_ID="WorkAllocation_createAllocationTarget"/>
    </ACTION_CONTROL>
  </ACTION_SET>


  <LIST>


    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL IMAGE="EditButton" LABEL="ActionControl.Label.Edit">
        <LINK OPEN_MODAL="true" PAGE_ID="WorkAllocation_modifyAllocationTarget">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetID"/>
            <TARGET NAME="PAGE" PROPERTY="allocationTargetID"/>
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL IMAGE="NewButton" LABEL="ActionControl.Label.AddItem">
        <LINK OPEN_MODAL="true" PAGE_ID="WorkAllocation_addAllocationTargetItem">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetID"/>
            <TARGET NAME="PAGE" PROPERTY="allocationTargetID"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetName"/>
            <TARGET NAME="PAGE" PROPERTY="pageDescription"/>
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL IMAGE="DeleteButton" LABEL="ActionControl.Label.Delete">
        <LINK OPEN_MODAL="true" PAGE_ID="WorkAllocation_cancelAllocationTarget" WINDOW_OPTIONS="width=400">
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetID"/>
            <TARGET NAME="PAGE" PROPERTY="allocationTargetID"/>
          </CONNECT>
          <CONNECT>
            <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetName"/>
            <TARGET NAME="PAGE" PROPERTY="pageDescription"/>
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


    </ACTION_SET>


    <FIELD LABEL="Field.Title.Name" WIDTH="100">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetName"/>
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="WorkAllocation_viewAllocationTarget">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="allocationTargetID"/>
          <TARGET NAME="PAGE" PROPERTY="allocationTargetID"/>
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


</PAGE>