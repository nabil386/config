<!-- View the details for a codetable item in a hierarchy.                  -->
<PAGE
  PAGE_ID="System_viewHierarchyCodetableItemDetails"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="System"
    NAME="readCodeDetailsBean"
    OPERATION="readCodeDetails"
  />


  <SERVER_INTERFACE
    CLASS="System"
    NAME="readParentCodeBean"
    OPERATION="readParentCode"
  />


  <SERVER_INTERFACE
    CLASS="System"
    NAME="readCodetableHierarchyDetailsBean"
    OPERATION="readCodetableHierarchyDetails"
  />


  <!-- BEGIN, CR00392403, JC -->
  <SERVER_INTERFACE
    CLASS="System"
    NAME="listChildrenCodesAndDisplayNameBean"
    OPERATION="listChildrenCodesAndDisplayName"
  />
  <!-- END, CR00392403 -->


  <SERVER_INTERFACE
    CLASS="System"
    NAME="isTopLevelBean"
    OPERATION="isTopLevel"
  />


  <SERVER_INTERFACE
    CLASS="System"
    NAME="isBottomLevelBean"
    OPERATION="isBottomLevel"
  />


  <PAGE_PARAMETER NAME="hierarchyName"/>
  <PAGE_PARAMETER NAME="codetableName"/>
  <PAGE_PARAMETER NAME="code"/>
  <!-- BEGIN, CR00392403, JC -->
  <PAGE_PARAMETER NAME="codetableDisplay"/>
  <PAGE_PARAMETER NAME="parentTableName"/>
  <PAGE_PARAMETER NAME="parentTableDisplay"/>
  <!-- END, CR00392403 -->


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="codetableName"
    />
    <TARGET
      NAME="readCodeDetailsBean"
      PROPERTY="key$name"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="code"
    />
    <TARGET
      NAME="readCodeDetailsBean"
      PROPERTY="key$code"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="codetableName"
    />
    <TARGET
      NAME="readParentCodeBean"
      PROPERTY="key$name"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="code"
    />
    <TARGET
      NAME="readParentCodeBean"
      PROPERTY="key$code"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="codetableName"
    />
    <TARGET
      NAME="readCodetableHierarchyDetailsBean"
      PROPERTY="codetableName$name"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="codetableName"
    />
    <TARGET
      NAME="listChildrenCodesAndDisplayNameBean"
      PROPERTY="key$name"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="code"
    />
    <TARGET
      NAME="listChildrenCodesAndDisplayNameBean"
      PROPERTY="key$code"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="codetableName"
    />
    <TARGET
      NAME="isTopLevelBean"
      PROPERTY="name"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="codetableName"
    />
    <TARGET
      NAME="isBottomLevelBean"
      PROPERTY="name"
    />
  </CONNECT>


  <CLUSTER
    LABEL_WIDTH="25"
    NUM_COLS="2"
    TITLE="Cluster.Title.ParentCode"
  >
    <CONDITION>
      <IS_FALSE
        NAME="isTopLevelBean"
        PROPERTY="ind"
      />
    </CONDITION>


    <FIELD LABEL="Field.Label.Codetable">
      <CONNECT>
        <SOURCE
          NAME="PAGE"
          PROPERTY="parentTableDisplay"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.Description">
      <CONNECT>
        <SOURCE
          NAME="readParentCodeBean"
          PROPERTY="description"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.Value">
      <CONNECT>
        <SOURCE
          NAME="readParentCodeBean"
          PROPERTY="result$code"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <LIST TITLE="List.Title.ChildrenCodes">
    <CONDITION>
      <IS_FALSE
        NAME="isBottomLevelBean"
        PROPERTY="ind"
      />
    </CONDITION>


    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="System_viewHierarchyCodetableItemDetails">
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="hierarchyName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="hierarchyName"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="listChildrenCodesAndDisplayNameBean"
            PROPERTY="result$codeDetailsAndDisplayName$codetable"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="codetableName"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="listChildrenCodesAndDisplayNameBean"
            PROPERTY="result$codeDetailsAndDisplayName$code"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="code"
          />
        </CONNECT>
        <!-- BEGIN, CR00392403, JC -->
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="codetableDisplay"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="parentTableDisplay"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="codetableName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="parentTableName"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="listChildrenCodesAndDisplayNameBean"
            PROPERTY="result$codeDetailsAndDisplayName$displayName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="codetableDisplay"
          />
        </CONNECT>


      </INLINE_PAGE>
    </DETAILS_ROW>


    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.ModifyParent">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="System_modifyParentCodePopup"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="hierarchyName"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="hierarchyName"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="codetableName"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="codetableName"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="code"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="code"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="readParentCodeBean"
              PROPERTY="result$code"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="parentCode"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="readCodetableHierarchyDetailsBean"
              PROPERTY="parent"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="parentCodetable"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>


    <FIELD
      LABEL="Field.Label.Description"
      WIDTH="40"
    >
      <CONNECT>
        <SOURCE
          NAME="listChildrenCodesAndDisplayNameBean"
          PROPERTY="description"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Value"
      WIDTH="30"
    >
      <CONNECT>
        <SOURCE
          NAME="listChildrenCodesAndDisplayNameBean"
          PROPERTY="result$codeDetailsAndDisplayName$code"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Codetable"
      WIDTH="30"
    >
      <CONNECT>
        <SOURCE
          NAME="listChildrenCodesAndDisplayNameBean"
          PROPERTY="displayName"
        />
      </CONNECT>
    </FIELD>
  </LIST>
</PAGE>
