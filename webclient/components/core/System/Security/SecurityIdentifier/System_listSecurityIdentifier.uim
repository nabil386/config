<!-- List all of the security identifiers                                   -->
<PAGE
  PAGE_ID="System_listSecurityIdentifier"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <SERVER_INTERFACE
    CLASS="System"
    NAME="DISPLAY"
    OPERATION="listSecurityIdentifier"
  />


  <ACTION_SET BOTTOM="false">


    <ACTION_CONTROL
      IMAGE="NewSIDButton"
      LABEL="ActionControl.Label.NewSID"
    >


      <LINK
        OPEN_MODAL="true"
        PAGE_ID="System_createSecurityIdentifier"
      />


    </ACTION_CONTROL>


    <ACTION_CONTROL
      IMAGE="NewFunctionSIDButton"
      LABEL="ActionControl.Label.NewFunctionSID"
    >


      <LINK
        OPEN_MODAL="true"
        PAGE_ID="System_createFunctionSecurityIdentifier"
      />


    </ACTION_CONTROL>


    <ACTION_CONTROL
      IMAGE="PublishButton"
      LABEL="ActionControl.Label.Publish"
    >


      <LINK
        OPEN_MODAL="true"
        PAGE_ID="System_publishSecurityChanges"
      />


    </ACTION_CONTROL>


  </ACTION_SET>


  <LIST>


    <ACTION_SET TYPE="LIST_ROW_MENU">


      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">


        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Security_resolveSecurityIDTypeToModify"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="securityIdentifierID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="securityIdentifierID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="sidType"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="sidType"
            />
          </CONNECT>
        </LINK>


      </ACTION_CONTROL>


    </ACTION_SET>


    <FIELD
      LABEL="Field.Label.Identifier"
      WIDTH="55"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="sidName"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Type"
      WIDTH="45"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="sidType"
        />
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="Security_resolveSecurityIDTypeToView">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="securityIdentifierID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="securityIdentifierID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="sidType"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="sidType"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


</PAGE>
