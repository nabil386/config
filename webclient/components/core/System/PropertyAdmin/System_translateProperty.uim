<PAGE
  PAGE_ID="System_translateProperty"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="propertyID"/>
  <PAGE_PARAMETER NAME="languageCode"/>


  <SERVER_INTERFACE
    CLASS="PropertyAdmin"
    NAME="DISPLAY"
    OPERATION="readPropertyDescription"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="propertyID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$propertyID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="languageCode"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$languageCode"
    />
  </CONNECT>


  <ACTION_SET>
    <ACTION_CONTROL LABEL="ActionControl.Label.OK">
      <LINK
        DISMISS_MODAL="false"
        PAGE_ID="System_resolveRefreshSearch"
      />
    </ACTION_CONTROL>
  </ACTION_SET>


  <CLUSTER
    BEHAVIOR="NONE"
    LABEL_WIDTH="20"
  >
    <CONTAINER LABEL="Field.Label.Name">
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$displayName"
          />
        </CONNECT>
      </FIELD>
      <ACTION_CONTROL
        IMAGE="AddTranslation"
        LABEL="ActionControl.Label.TextTranslation"
      >
        <LINK
          DISMISS_MODAL="false"
          PAGE_ID="System_listPropertyName"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="propertyID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="propertyID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="languageCode"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="currentLanguageCode"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>


    <CONTAINER LABEL="Field.Label.Description">
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$description"
          />
        </CONNECT>
      </FIELD>
      <ACTION_CONTROL
        IMAGE="AddTranslation"
        LABEL="ActionControl.Label.TextTranslation"
      >
        <LINK
          DISMISS_MODAL="false"
          PAGE_ID="System_listPropertyDescription"
        >
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="propertyID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="propertyID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="languageCode"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="currentLanguageCode"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>
  </CLUSTER>


</PAGE>
