<!-- This page allows the user to view a list of document templates.        -->
<PAGE
  PAGE_ID="System_listDocumentTemplate1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <!--  BEGIN CR00096373 GM -->
  <SERVER_INTERFACE
    CLASS="System"
    NAME="DISPLAY"
    OPERATION="readAllWithoutContentAndVersionNo"
  />
  <!--  END CR00096373 GM  -->
  <ACTION_SET BOTTOM="false">
    <ACTION_CONTROL
      IMAGE="NewButton"
      LABEL="ActionControl.Label.New"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="System_createDocumentTemplate1"
      />
    </ACTION_CONTROL>
  </ACTION_SET>


  <LIST>


    <ACTION_SET TYPE="LIST_ROW_MENU">


      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="System_modifyDocumentTemplate"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="documentTemplateID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="documentTemplateID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      <ACTION_CONTROL
        IMAGE="DeleteButton"
        LABEL="ActionControl.Label.Delete"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="System_cancelDocumentTemplate"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="documentTemplateID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="documentTemplateID"
            />
          </CONNECT>


          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="versionNo"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="versionNo"
            />
          </CONNECT>


          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="name"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="name"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


    </ACTION_SET>


    <!-- BEGIN, CR00261379, NS -->
    <CONTAINER
      LABEL="Field.Label.Name"
      WIDTH="25"
    >
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="name"
          />
        </CONNECT>
      </FIELD>


      <ACTION_CONTROL
        LABEL="ActionControl.Label.ViewTemplate"
        TYPE="FILE_DOWNLOAD"
      >
        <LINK>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="documentTemplateID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="documentTemplateID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL LABEL="ActionControl.Label.EditTemplate">
        <LINK
          PAGE_ID="System_modifyTemplateUsingMSWord"
          SAVE_LINK="false"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="documentTemplateID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="documentTemplateID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>
    <!-- BEGIN, CR00261379 -->


    <FIELD
      LABEL="Field.Label.Category"
      WIDTH="25"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="categoryCode"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.DateAdded"
      WIDTH="10"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="dateAddedToSystem"
        />
      </CONNECT>
    </FIELD>


    <!-- BEGIN, CR00145315, SK -->
    <FIELD
      LABEL="Field.Label.Locale"
      WIDTH="20"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="localeIdentifier"
        />
      </CONNECT>
    </FIELD>
    <!-- END, CR00145315 -->


    <FIELD
      LABEL="Field.Label.Status"
      WIDTH="20"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="recordStatus"
        />
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="System_viewDocumentTemplateDetails">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="documentTemplateID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="documentTemplateID"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


</PAGE>
