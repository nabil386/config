<!-- This page allows the user to create a new template.                    -->
<PAGE
  PAGE_ID="System_createTemplate"
  WINDOW_OPTIONS="width=750"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <!-- BEGIN, CR00279987, KRK -->
  <SERVER_INTERFACE
    CLASS="System"
    NAME="ACTION"
    OPERATION="createXSLTemplate"
    PHASE="ACTION"
  />
  <!-- END, CR00279987 -->


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="true"
  >


    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />


    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />


  </ACTION_SET>


  <CLUSTER
    LABEL_WIDTH="35"
    NUM_COLS="2"
  >
    <FIELD LABEL="Field.Label.Description">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="templateName"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.Type">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="templateType"
        />
      </CONNECT>
    </FIELD>


    <!-- BEGIN, CR00279987, KRK -->
    <FIELD LABEL="Field.Label.TemplateID">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="templateIDCode"
        />
      </CONNECT>
    </FIELD>


    <!-- BEGIN, CR00145315, SK -->
    <FIELD LABEL="Field.Label.Locale">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="localeIdentifier"
        />
      </CONNECT>
    </FIELD>
    <!-- END, CR00145315 -->
    <!-- END, CR00279987 -->


  </CLUSTER>


  <CLUSTER
    LABEL_WIDTH="17.5"
    NUM_COLS="1"
  >
    <WIDGET
      LABEL="Field.Label.File"
      TYPE="FILE_UPLOAD"
    >
      <WIDGET_PARAMETER NAME="CONTENT">
        <CONNECT>
          <TARGET
            NAME="ACTION"
            PROPERTY="document"
          />
        </CONNECT>
      </WIDGET_PARAMETER>
    </WIDGET>
  </CLUSTER>


  <CLUSTER
    SHOW_LABELS="false"
    TITLE="Cluster.Title.Category"
  >
    <!--BEGIN, CR00237191, AK-->
    <FIELD
      CONTROL="CT_HIERARCHY_HORIZONTAL"
      LABEL="Field.Label.RelatesTo"
      USE_BLANK="true"
      USE_DEFAULT="false"
    >
      <!--END, CR00237191-->
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="relatesTo"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>
