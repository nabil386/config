<!-- List the batch processes for the system -->
<PAGE
  PAGE_ID="System_listBatchProcess1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <SERVER_INTERFACE
    CLASS="System"
    NAME="ACTION"
    OPERATION="searchBatchProcess"
    PHASE="ACTION"
  />


  <SERVER_INTERFACE
    CLASS="System"
    NAME="DISPLAY"
    OPERATION="listBatchGroup"
  />


  <CLUSTER
    BEHAVIOR="NONE"
    LABEL_WIDTH="46"
    NUM_COLS="2"
    TITLE="Cluster.Filter.Title"
  >
    <FIELD LABEL="Field.Label.Name">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="input$nameOrDescription"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.Group"
      USE_BLANK="true"
      USE_DEFAULT="false"
    >
      <CONNECT>
        <INITIAL
          HIDDEN_PROPERTY="groupID"
          NAME="DISPLAY"
          PROPERTY="groupName"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="input$groupID"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <CLUSTER>
    <ACTION_SET
      ALIGNMENT="CENTER"
      BOTTOM="false"
    >
      <ACTION_CONTROL
        DEFAULT="true"
        IMAGE="SearchButton"
        LABEL="ActionControl.Label.Search"
        TYPE="SUBMIT"
      >
        <LINK PAGE_ID="THIS"/>
      </ACTION_CONTROL>
      <ACTION_CONTROL
        IMAGE="ResetButton"
        LABEL="ActionControl.Label.Reset"
      >
        <LINK PAGE_ID="System_listBatchProcess1"/>
      </ACTION_CONTROL>
    </ACTION_SET>
  </CLUSTER>


  <LIST TITLE="List.Title.SearchResult">
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL
        IMAGE="ExecuteButton"
        LABEL="ActionControl.Label.Execute"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="System_resolveExecuteBatchProcess"
        >
          <CONNECT>
            <SOURCE
              NAME="ACTION"
              PROPERTY="processDefName"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="processDefName"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="ACTION"
              PROPERTY="hasParam"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="hasParam"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>


    <FIELD
      LABEL="Field.Label.ProcessName"
      WIDTH="30"
    >
      <CONNECT>
        <SOURCE
          NAME="ACTION"
          PROPERTY="longName"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Description"
      WIDTH="40"
    >
      <CONNECT>
        <SOURCE
          NAME="ACTION"
          PROPERTY="description"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Type"
      WIDTH="30"
    >
      <CONNECT>
        <SOURCE
          NAME="ACTION"
          PROPERTY="batchType"
        />
      </CONNECT>
    </FIELD>


    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="System_viewBatchProcess">
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="processDefName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="processDefName"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="longName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="longName"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="description"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="description"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


</PAGE>
