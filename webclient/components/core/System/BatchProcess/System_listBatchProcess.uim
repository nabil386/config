<!-- List the batch processes for the system -->
<PAGE
  PAGE_ID="System_listBatchProcess"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <SERVER_INTERFACE
    CLASS="System"
    NAME="DISPLAY"
    OPERATION="listBatchProcess"
  />


  <ACTION_SET BOTTOM="false">


    <ACTION_CONTROL
      IMAGE="NewButton"
      LABEL="ActionControl.Label.New"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="System_createBatchProcess"
      />
    </ACTION_CONTROL>


    <!--    <ACTION_CONTROL IMAGE="ViewRequestsButton" LABEL="ActionControl.Label.ViewRequest">
      <LINK PAGE_ID="System_listBatchProcessRequest" />
    </ACTION_CONTROL>-->


  </ACTION_SET>


  <LIST>


    <ACTION_SET TYPE="LIST_ROW_MENU">


      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="System_modifyBatchProcessFromList"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="processDefName"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="processDefName"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <ACTION_CONTROL
        IMAGE="RemoveButton"
        LABEL="ActionControl.Label.Remove"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="System_removeBatchProcess"
          SAVE_LINK="false"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="processDefName"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="processDefName"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="longName"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="pageDescription"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


    </ACTION_SET>


    <FIELD
      LABEL="Field.Label.ProcessName"
      WIDTH="25"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="longName"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Executable"
      WIDTH="25"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="processDefName"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Description"
      WIDTH="25"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="description"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.Type"
      WIDTH="25"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="batchType"
        />
      </CONNECT>
    </FIELD>


    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="System_viewBatchProcess">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="processDefName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="processDefName"
          />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>


  </LIST>


</PAGE>
