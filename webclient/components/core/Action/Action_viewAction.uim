<!-- This page allows the user to view the details of an action.             -->
<PAGE
  PAGE_ID="Action_viewAction"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
      />
    </CONNECT>
    <CONNECT>
      <SOURCE
        NAME="PAGE"
        PROPERTY="description"
      />
    </CONNECT>
  </PAGE_TITLE>


  <!-- BEGIN, CR00216915, AK -->
  <SERVER_INTERFACE
    CLASS="Action"
    NAME="DISPLAYSITUATIONS"
    OPERATION="listAssociatedSituations"
  />
  <SERVER_INTERFACE
    CLASS="Action"
    NAME="DISPLAYACTION"
    OPERATION="readAction1"
    PHASE="DISPLAY"
  />
  <SERVER_INTERFACE
    CLASS="Action"
    NAME="GETACTIONOWNERS"
    OPERATION="getConcernRoleActionOwners"
  />


  <PAGE_PARAMETER NAME="actionID"/>
  <PAGE_PARAMETER NAME="description"/>
  <PAGE_PARAMETER NAME="caseID"/>
  <PAGE_PARAMETER NAME="actionPlanID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionID"
    />
    <TARGET
      NAME="DISPLAYACTION"
      PROPERTY="key$actionID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionID"
    />
    <TARGET
      NAME="GETACTIONOWNERS"
      PROPERTY="actionID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionID"
    />
    <TARGET
      NAME="DISPLAYSITUATIONS"
      PROPERTY="actionID"
    />
  </CONNECT>


  <!-- END, CR00216915 -->
  <INCLUDE FILE_NAME="Action_viewActionView.vim"/>


  <LIST TITLE="List.Title.Situations">
    <!-- BEGIN, CR00200707, AK -->
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.Remove">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="Situation_removeAssociation"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAYSITUATIONS"
              PROPERTY="situationID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="situationID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="actionID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="actionID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="PAGE"
              PROPERTY="description"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="description"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>
    <!-- END, CR00200707 -->


    <!-- BEGIN, CR00214099, AK -->
    <FIELD
      LABEL="Field.Title.SituationCategory"
      WIDTH="30"
    >
      <!-- END, CR00214099 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAYSITUATIONS"
          PROPERTY="situationCategory"
        />
      </CONNECT>
    </FIELD>
    <!-- BEGIN, CR00214099, AK -->
    <FIELD
      LABEL="Field.Title.SituationReqAction"
      WIDTH="70"
    >
      <!-- END, CR00214099 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAYSITUATIONS"
          PROPERTY="situationRequiringAction"
        />
      </CONNECT>
    </FIELD>
  </LIST>
</PAGE>
