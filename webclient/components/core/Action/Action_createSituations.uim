<!-- This page is used to display the situation details.                    -->
<PAGE
  PAGE_ID="Action_createSituations"
  WINDOW_OPTIONS="width=875"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="Action"
    NAME="DISPLAYACTION"
    OPERATION="readAction1"
    PHASE="DISPLAY"
  />
  <SERVER_INTERFACE
    CLASS="Action"
    NAME="DISPLAYSITUATIONS"
    OPERATION="listAssociatedSituations"
  />
  <SERVER_INTERFACE
    ACTION_ID_PROPERTY="clientActionID"
    CLASS="Action"
    NAME="ACTION"
    OPERATION="associateSituations"
    PHASE="ACTION"
  />
  <SERVER_INTERFACE
    CLASS="Action"
    NAME="DISPLAY"
    OPERATION="listSituationsForAssociation"
  />
  <SERVER_INTERFACE
    CLASS="IntegratedCase"
    NAME="DISPLAYCASEPARTICIPANT"
    OPERATION="getCaseParticipantsAgeConcernRoleID"
  />
  <SERVER_INTERFACE
    CLASS="InvestigationDelivery"
    NAME="DISPLAYALLEGATIONS"
    OPERATION="listAllegation"
  />
  <SERVER_INTERFACE
    CLASS="Action"
    NAME="DISPLAYSITUATIONLIST"
    OPERATION="listAssociatedSituations"
    PHASE="DISPLAY"
  />


  <PAGE_PARAMETER NAME="caseID"/>
  <PAGE_PARAMETER NAME="actionPlanID"/>
  <PAGE_PARAMETER NAME="description"/>
  <PAGE_PARAMETER NAME="actionID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionID"
    />
    <TARGET
      NAME="DISPLAYSITUATIONS"
      PROPERTY="actionID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionID"
    />
    <TARGET
      NAME="DISPLAYACTION"
      PROPERTY="key$actionID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionID"
    />
    <TARGET
      NAME="DISPLAYSITUATIONS"
      PROPERTY="actionID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionPlanID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="actionPlanID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="actionID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionPlanID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="actionPlanActionkey$actionPlanID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="actionID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAYCASEPARTICIPANT"
      PROPERTY="caseID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAYALLEGATIONS"
      PROPERTY="caseID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionID"
    />
    <TARGET
      NAME="DISPLAYSITUATIONLIST"
      PROPERTY="actionID"
    />
  </CONNECT>


  <INCLUDE FILE_NAME="Situation_createSituationView.vim"/>


  <ACTION_SET ALIGNMENT="CENTER">
    <ACTION_CONTROL
      ACTION_ID="ASSOCIATE_NEW"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />


    <ACTION_CONTROL
      IMAGE="CloseButton"
      LABEL="ActionControl.Label.Close"
    />
  </ACTION_SET>


</PAGE>
