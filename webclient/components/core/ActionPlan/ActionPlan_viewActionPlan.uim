<!-- This page allows the user to view an action plan.                      -->
<PAGE
  PAGE_ID="ActionPlan_viewActionPlan"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Title"
      />
    </CONNECT>
    <CONNECT>
      <SOURCE
        NAME="PAGE"
        PROPERTY="pageDescription"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="InvestigationDelivery"
    NAME="DISPLAY"
    OPERATION="readActionPlanAndSituation"
    PHASE="DISPLAY"
  />


  <PAGE_PARAMETER NAME="caseID"/>
  <PAGE_PARAMETER NAME="actionPlanID"/>
  <PAGE_PARAMETER NAME="pageDescription"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="actionPlanID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$actionPlanID"
    />
  </CONNECT>


  <!-- BEGIN, CR00200707, AK -->
  <MENU MODE="IN_PAGE_NAVIGATION">
    <ACTION_CONTROL
      LABEL="InPageNav.Label.PlanDetails"
      STYLE="in-page-current-link"
    >
      <LINK
        PAGE_ID="ActionPlan_viewActionPlan"
        SAVE_LINK="false"
      />
    </ACTION_CONTROL>


    <ACTION_CONTROL LABEL="InPageNav.Label.Situations">
      <LINK
        PAGE_ID="Situation_listSituations"
        SAVE_LINK="false"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="actionPlanID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="actionPlanID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="pageDescription"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="description"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <ACTION_CONTROL LABEL="InPageNav.Label.Actions">
      <LINK
        PAGE_ID="Action_listActions"
        SAVE_LINK="false"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="actionPlanID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="actionPlanID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="pageDescription"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="description"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


  </MENU>
  <!-- END, CR00200707 -->


  <!-- BEGIN, CR00179293, AK -->
  <INCLUDE FILE_NAME="ActionPlan_viewActionPlanView.vim"/>
  <!-- END, CR00179293 -->


</PAGE>
