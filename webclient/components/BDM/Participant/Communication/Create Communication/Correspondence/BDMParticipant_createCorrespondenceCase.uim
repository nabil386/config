<?xml version="1.0" encoding="UTF-8"?>
<!-- Description                                                            -->
<!-- ===========                                                            -->
<!-- This page allows the user to create a new Correspondence communication.-->

<PAGE xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
PAGE_ID="BDMParticipant_createCorrespondenceCase" 
WINDOW_OPTIONS="width=650" 
xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">

   <PAGE_TITLE>
      <CONNECT>
         <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1" />
      </CONNECT>
   </PAGE_TITLE>
   
   <!--<PAGE_PARAMETER NAME="concernRoleID" />-->
   <PAGE_PARAMETER NAME="caseID" />
   
   <MENU MODE="WIZARD_PROGRESS_BAR">
      <CONNECT>
         <SOURCE NAME="DISPLAYWIZARD" PROPERTY="wizardMenu" />
      </CONNECT>
   </MENU>
   
   <CONNECT>
      <SOURCE NAME="DISPLAY" PROPERTY="result$concernRoleID" />
      <TARGET NAME="ACTION" PROPERTY="concernRoleID" />
   </CONNECT>
   
   <CONNECT>
      <SOURCE NAME="PAGE" PROPERTY="caseID" />
      <TARGET NAME="ACTION" PROPERTY="caseID" />
   </CONNECT>
   <!--
   <CONNECT>
      <SOURCE NAME="PAGE" PROPERTY="concernRoleID" />
      <TARGET NAME="DISPLAY" PROPERTY="listContactKey$concernRoleID" />
   </CONNECT>
   -->
      
   <CONNECT>
      <SOURCE NAME="PAGE" PROPERTY="caseID" />
      <TARGET NAME="DISPLAY" PROPERTY="caseID" />
   </CONNECT>
   <!--
   <CONNECT>
      <SOURCE NAME="PAGE" PROPERTY="concernRoleID" />
      <TARGET NAME="DISPLAY" PROPERTY="contactRMByConcernKey$concernRoleID" />
   </CONNECT>-->
   
   <CONNECT>
      <SOURCE NAME="PAGE" PROPERTY="caseID" />
      <TARGET NAME="DISPLAYTHIRDPARTY" PROPERTY="key$caseID" />
   </CONNECT>
   
   <SERVER_INTERFACE CLASS="BDMCommunication" NAME="ACTION" OPERATION="saveCorrespondenceWizard" PHASE="ACTION" />
   <SERVER_INTERFACE CLASS="BDMParticipant" NAME="DISPLAY" OPERATION="listCaseConcernContactsForCommunication" PHASE="DISPLAY" />
   <SERVER_INTERFACE CLASS="BDMCommunication" NAME="DISPLAYWIZARD" OPERATION="getCaseCorrespondenceWizard" PHASE="DISPLAY" />
   <SERVER_INTERFACE CLASS="BDMCommunication" NAME="DISPLAYTHIRDPARTY" OPERATION="listThirdPartyContactsForCommunication" PHASE="DISPLAY" />
 
   <CLUSTER LABEL_WIDTH="35" TITLE="Cluster.Title.CorrespondentTo">
      <FIELD LABEL="Field.Label.ClientIsCorrespondent">
         <CONNECT>
            <TARGET NAME="ACTION" PROPERTY="toClientIsCorrespondent" />
         </CONNECT>
      </FIELD>
      <FIELD LABEL="Field.Label.ThirdPartyContactForClient" USE_BLANK="true" WIDTH="37">
         <CONNECT>
            <INITIAL HIDDEN_PROPERTY="result$dtls$concernRoleIDAndEvidenceIDCommaDelimited" NAME="DISPLAYTHIRDPARTY" PROPERTY="concernRoleName" />
         </CONNECT>
         <CONNECT>
            <TARGET NAME="ACTION" PROPERTY="toTPContactConcernRoleIDAndEvidenceIDCommaDelimited" />
         </CONNECT>
      </FIELD>
      <FIELD LABEL="Field.Label.ContactForClient" USE_BLANK="true" WIDTH="37">
         <CONNECT>
            <INITIAL HIDDEN_PROPERTY="contactConRoleID" NAME="DISPLAY" PROPERTY="name" />
         </CONNECT>
         <CONNECT>
            <TARGET NAME="ACTION" PROPERTY="toContactConcernRoleID" />
         </CONNECT>
      </FIELD>
      
   </CLUSTER>
   
   <CLUSTER LABEL_WIDTH="35" TITLE="Cluster.Title.CorrespondentCC">
      
       <FIELD LABEL="Field.Label.ThirdPartyContactForClient" USE_BLANK="true" WIDTH="37">
         <CONNECT>
            <INITIAL HIDDEN_PROPERTY="result$dtls$concernRoleIDAndEvidenceIDCommaDelimited" NAME="DISPLAYTHIRDPARTY" PROPERTY="concernRoleName" />
         </CONNECT>
         <CONNECT>
            <TARGET NAME="ACTION" PROPERTY="ccTPContactConcernRoleIDAndEvidenceIDCommaDelimited" />
         </CONNECT>
      </FIELD>
      
   </CLUSTER>
   
   <ACTION_SET ALIGNMENT="CENTER" TOP="false">
      <ACTION_CONTROL IMAGE="NextButton" LABEL="ActionControl.Label.Next" TYPE="SUBMIT" ALIGNMENT="RIGHT">
         <LINK DISMISS_MODAL="false" OPEN_MODAL="false" PAGE_ID="BDMParticipant_selectTemplateCase" SAVE_LINK="false">
            <CONNECT>
               <SOURCE NAME="ACTION" PROPERTY="wizardStateID" />
               <TARGET NAME="PAGE" PROPERTY="wizardStateID" />
            </CONNECT>
            <CONNECT>
               <SOURCE NAME="ACTION" PROPERTY="concernRoleID" />
               <TARGET NAME="PAGE" PROPERTY="concernRoleID" />
            </CONNECT>
			<CONNECT>
               <SOURCE NAME="PAGE" PROPERTY="caseID" />
               <TARGET NAME="PAGE" PROPERTY="caseID" />
            </CONNECT>
         </LINK>
      </ACTION_CONTROL>
      
      <ACTION_CONTROL IMAGE="CancelButton" LABEL="ActionControl.Label.Cancel" ALIGNMENT="LEFT">
          <LINK PAGE_ID="BDMFEC_listCommunication">
       	   <!-- <CONNECT>
               <SOURCE NAME="ACTION" PROPERTY="concernRoleID" />
               <TARGET NAME="PAGE" PROPERTY="concernRoleID" />
            </CONNECT> -->
			<CONNECT>
                  <SOURCE NAME="PAGE" PROPERTY="caseID" />
                  <TARGET NAME="PAGE" PROPERTY="caseID" />
            </CONNECT>
           </LINK>
         </ACTION_CONTROL>
   </ACTION_SET>
</PAGE>