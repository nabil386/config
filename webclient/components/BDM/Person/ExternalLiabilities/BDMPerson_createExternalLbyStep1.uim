<!-- CK- TASK 11053 - External Liability -->
<!-- Page 1 of a wizard to add an external liability -->
<PAGE
  PAGE_ID="BDMPerson_createExternalLbyStep1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
  >
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE 
        NAME="TEXT" 
        PROPERTY="PageTitle.StaticText1"/>
    </CONNECT>
  </PAGE_TITLE>
  
  <MENU MODE="WIZARD_PROGRESS_BAR">
    <CONNECT>
      <SOURCE NAME="CONSTANT" PROPERTY="ExternalLiabilityWizard"/>
    </CONNECT>
  </MENU>
  
  <PAGE_PARAMETER NAME="concernRoleID"/>
  <PAGE_PARAMETER NAME="wizardStateID"/>
  
    <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="wizardStateID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="arg1$wizardStateID"
    />
  </CONNECT>
    <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="wizardStateID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="key$wizardStateID"
    />
  </CONNECT>
  
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="concernRoleID"/>
    <TARGET
      NAME="ACTION"
      PROPERTY="concernRoleID"/>
  </CONNECT>
      
  <SERVER_INTERFACE
    CLASS="BDMExternalLiability"
    NAME="ACTION"
    OPERATION="createLbySaveStep1Data"  
    PHASE="ACTION"
  />
  <SERVER_INTERFACE
    CLASS="BDMExternalLiability"
    NAME="DISPLAY"
    OPERATION="readExtLbyWizardDetails"  
    PHASE="DISPLAY"
  />
  
  <ACTION_SET BOTTOM="false">
    
    <ACTION_CONTROL 
      ALIGNMENT="LEFT" 
      LABEL="ActionControl.Label.Cancel" 
      TYPE="ACTION"/>
    
    <ACTION_CONTROL 
      LABEL="ActionControl.Label.Next" 
      TYPE="SUBMIT"
      >
      <LINK 
        PAGE_ID="BDMPerson_createExternalLbyStep2" 
        DISMISS_MODAL="false" 
        SAVE_LINK="false">
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="result$wizardStateID"/>
          <TARGET
            NAME="PAGE"
            PROPERTY="wizardStateID"/>
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="concernRoleID"/>
          <TARGET
            NAME="PAGE"
            PROPERTY="concernRoleID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>    
  </ACTION_SET>
  
  <CLUSTER
    NUM_COLS="2"
    TITLE="Cluster.OutstandingBalance.Title">
    <FIELD
      LABEL="Field.Label.OutstandingBalance"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="liabilityAmount"  
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="liabilityAmount"  
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.LiabilityType"
      USE_BLANK="true"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="extLbyTypeCode"      
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="extLbyTypeCode"      
        />
      </CONNECT>
    </FIELD>
    
  </CLUSTER>
  
  <CLUSTER>
    <FIELD
      LABEL="Field.Label.Comments"
      HEIGHT="4"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="comments"      
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="comments"      
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
</PAGE>