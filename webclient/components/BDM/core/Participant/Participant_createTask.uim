<!-- This page creates a new task concerning the participant.               -->
<PAGE
  PAGE_ID="Participant_createTask"
  WINDOW_OPTIONS="width=650"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>

  <!-- #Task 12746 - Create task with skill type -->
  <SERVER_INTERFACE
    CLASS="BDMWorkAllocation"
    NAME="ACTION"
    OPERATION="createTaskWithVSG"
    PHASE="ACTION"
  />


  <PAGE_PARAMETER NAME="participantID"/>
  <PAGE_PARAMETER NAME="pageDescription"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="participantID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="participantRoleID"
    />
  </CONNECT>


  <ACTION_SET ALIGNMENT="CENTER">
    <!-- BEGIN, CR00050298, MR -->
    <!-- BEGIN, HARP 64908, SP -->
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />
    <!-- END, HARP 64908 -->
    <!-- END, CR00050298 -->
  </ACTION_SET>


  <INCLUDE FILE_NAME="Participant_createTaskView.vim"/>


</PAGE>
