<!-- This page displays results after running a task query.                 -->
<PAGE
  HIDE_CONDITIONAL_LINKS="false"
  PAGE_ID="TaskQuery_runQuery"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>


  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="BDMTaskQuery"
    NAME="DISPLAY"
    OPERATION="runBDM"
    PHASE="DISPLAY"
  />


  <INFORMATIONAL>
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="informationMsgTxt"
      />
    </CONNECT>
  </INFORMATIONAL>


  <PAGE_PARAMETER NAME="queryID"/>


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >
    <ACTION_CONTROL
      IMAGE="EditButton"
      LABEL="ActionControl.Label.Modify"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="TaskQuery_modifyQuery"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="queryID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="queryID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="queryID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$queryID"
    />
  </CONNECT>


  <CLUSTER TITLE="Cluster.Title.QueryCriteria">
    <CLUSTER
      LABEL_WIDTH="40"
      NUM_COLS="2"
      STYLE="cluster-cpr-no-border"
    >


      <FIELD LABEL="Field.Label.MyTasksListOnly">
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$searchMyTasksOnly"
          />
        </CONNECT>
      </FIELD>


      <CONTAINER
        LABEL="Container.Label.BusinessObjType"
        SEPARATOR="Container.Separator"
      >
        <FIELD
          ALIGNMENT="LEFT"
          USE_BLANK="true"
          WIDTH="35"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$criteria$criteria$businessObjectType"
            />
          </CONNECT>
        </FIELD>
        <FIELD
          ALIGNMENT="LEFT"
          WIDTH="45"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$criteria$criteria$businessObjectName"
            />
          </CONNECT>
        </FIELD>
      </CONTAINER>


      <FIELD
        LABEL="Field.Label.Status"
        USE_BLANK="true"
        WIDTH="35"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$status"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.Category"
        USE_BLANK="true"
        WIDTH="35"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$taskCategory"
          />
        </CONNECT>
      </FIELD>
    </CLUSTER>


    <CLUSTER
      LABEL_WIDTH="20"
      NUM_COLS="1"
      STYLE="cluster-cpr-no-border"
    >
      <FIELD
        ALIGNMENT="LEFT"
        LABEL="Field.Label.AssignedTo"
        WIDTH="35"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$selectedOrgObjectNames"
          />
        </CONNECT>
      </FIELD>


    </CLUSTER>


    <CLUSTER
      LABEL_WIDTH="40"
      NUM_COLS="2"
      STYLE="cluster-cpr-no-border"
      TITLE="Cluster.Title.Deadline"
    >


      <FIELD
        LABEL="Field.Label.DeadlineFromDate"
        USE_DEFAULT="false"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$deadlineFromDate"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.DeadlineDue"
        USE_BLANK="true"
        WIDTH="90"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$deadlineDue"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.DeadlineToDate"
        USE_DEFAULT="false"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$deadlineToDate"
          />
        </CONNECT>
      </FIELD>
    </CLUSTER>


    <CLUSTER
      LABEL_WIDTH="40"
      NUM_COLS="2"
      STYLE="cluster-cpr-no-border"
      TITLE="Cluster.Title.CreationTime"
    >


      <FIELD
        LABEL="Field.Label.CreationFromDate"
        USE_DEFAULT="false"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$creationFromDate"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.CreationLastNumberOfDays"
        USE_BLANK="true"
        USE_DEFAULT="false"
        WIDTH="40"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$creationLastNumberOfDays"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.CreationToDate"
        USE_DEFAULT="false"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$creationToDate"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.CreationLastNumberOfWeeks"
        USE_BLANK="true"
        USE_DEFAULT="false"
        WIDTH="40"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$creationLastNumberOfWeeks"
          />
        </CONNECT>
      </FIELD>


    </CLUSTER>
    <CLUSTER
      LABEL_WIDTH="40"
      NUM_COLS="2"
      STYLE="cluster-cpr-no-border"
      TITLE="Cluster.Title.RestartTime"
    >


      <FIELD
        LABEL="Field.Label.RestartFromDate"
        USE_DEFAULT="false"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$restartFromDate"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.RestartToDate"
        USE_DEFAULT="false"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$criteria$criteria$restartToDate"
          />
        </CONNECT>
      </FIELD>


    </CLUSTER>


  </CLUSTER>


  <LIST>


    <ACTION_SET TYPE="LIST_ROW_MENU">


      <!-- Add Comments action control -->
      <ACTION_CONTROL
        IMAGE="NewProduct"
        LABEL="Field.Label.AddComment"
      >
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="TaskManagement_addComment"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$resultList$taskDetailsList$taskID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="taskID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <!-- Add to My Tasks action control -->
      <ACTION_CONTROL
        IMAGE="NewProduct"
        LABEL="Field.Label.AddToMyTasks"
      >
        <CONDITION>
          <IS_FALSE
            NAME="DISPLAY"
            PROPERTY="isReservedByUser"
          />
        </CONDITION>
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="TaskManagement_ReserveTask"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$resultList$taskDetailsList$taskID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="taskID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="result$resultList$taskDetailsList$versionNo"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="versionNo"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>


      <!-- Make Available action control -->
      <ACTION_CONTROL
        IMAGE="NewProduct"
        LABEL="Field.Label.MakeAvailable"
      >
        <CONDITION>
          <IS_TRUE
            NAME="DISPLAY"
            PROPERTY="isReservedByUser"
          />
