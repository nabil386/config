<?xml version="1.0" encoding="UTF-8"?>

<!-- Lists the authorisations associated with a program.            -->
<PAGE
  PAGE_ID="CommonIntake_listProgramDenials"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>

 <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="Page.Title"/>
    </CONNECT>
  </PAGE_TITLE>

  <PAGE_PARAMETER NAME="programID"/>
  
  <SERVER_INTERFACE CLASS="BDMProgramAuthorisation" NAME="BDMDISPLAY" OPERATION="listProgramDenials"  PHASE="DISPLAY"/>
  
  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="programID"/>
    <TARGET NAME="BDMDISPLAY" PROPERTY="key$intakeProgramApplicationID"/>
  </CONNECT>

  <MENU MODE="IN_PAGE_NAVIGATION">
    <ACTION_CONTROL LABEL="Menu.Authorisations" STYLE="in-page-link">
      <LINK PAGE_ID="CommonIntake_listProgramAuthorisations" >
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="programID"/>
          <TARGET NAME="PAGE" PROPERTY="programID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Menu.Denials" STYLE="in-page-current-link">
      <LINK PAGE_ID="CommonIntake_listProgramDenials" >
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="programID"/>
          <TARGET NAME="PAGE" PROPERTY="programID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Menu.Withdrawals" STYLE="in-page-link">
      <LINK PAGE_ID="CommonIntake_listProgramWithdrawals" >
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="programID"/>
          <TARGET NAME="PAGE" PROPERTY="programID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Menu.Reopen.Details" STYLE="in-page-link">
      <LINK PAGE_ID="CommonIntake_listProgramRopenings" >
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="programID"/>
          <TARGET NAME="PAGE" PROPERTY="programID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </MENU>
  <LIST>
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
    
        <LINK PAGE_ID="CommonIntake_editProgramDenial" OPEN_MODAL="true">
          <CONNECT>
            <SOURCE NAME="BDMDISPLAY" PROPERTY="programDenialID" />
            <TARGET NAME="PAGE" PROPERTY="programDenialID" />
          </CONNECT>
          
        </LINK>
        
        
        
      </ACTION_CONTROL>
      
    
    </ACTION_SET>
    
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="CommonIntake_programDenialComments">
        <CONNECT>
          <SOURCE NAME="BDMDISPLAY" PROPERTY="programDenialID" />
          <TARGET NAME="PAGE" PROPERTY="programDenialID" />
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>
    
  <FIELD LABEL="Field.Label.Reason" WIDTH="40">
    <CONNECT>
      <SOURCE NAME="BDMDISPLAY" PROPERTY="result$dtls$denialReason"/>
    </CONNECT>
  </FIELD>
  <FIELD LABEL="Field.Label.Date" WIDTH="25">
    <CONNECT>
      <SOURCE NAME="BDMDISPLAY" PROPERTY="result$dtls$disposedDateTime"/>
    </CONNECT>
  </FIELD>
  <FIELD LABEL="Field.Label.DeniedBy" WIDTH="35">
    <CONNECT>
      <SOURCE NAME="BDMDISPLAY" PROPERTY="result$dtls$createdBy"/>
    </CONNECT>
    <LINK PAGE_ID="Organization_viewUserDetails" OPEN_MODAL="true">
      <CONNECT>
        <SOURCE NAME="BDMDISPLAY" PROPERTY="username" />
        <TARGET NAME="PAGE" PROPERTY="userName" />
      </CONNECT>
    </LINK>
  </FIELD>
  </LIST>
  
  
  

</PAGE>


