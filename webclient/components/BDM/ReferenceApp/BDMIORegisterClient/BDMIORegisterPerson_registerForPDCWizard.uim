<?xml version="1.0" encoding="UTF-8"?>
<!-- Description                                                            -->
<!-- ===========                                                            -->
<!-- This page allows the user to enter person registration details when    -->
<!-- the system is running in PDC mode.                                     -->
<PAGE
  PAGE_ID="BDMIORegisterPerson_registerForPDCWizard"
  WINDOW_OPTIONS="width=1045,height=700"
  SCRIPT_FILE="BDMRegisterClientNCreateFEC.js"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    ACTION_ID_PROPERTY="actionIDProperty"
    CLASS="BDMParticipantRegistrationDetails"
    NAME="ACTION"
    OPERATION="registerClientandCreateFEC"
    PHASE="ACTION"
  />
	
  <SERVER_INTERFACE
    CLASS="Person"
    NAME="DISPLAYRACE"
    OPERATION="listRace"
    PHASE="DISPLAY"
  />


  <SERVER_INTERFACE
    CLASS="ParticipantRegistration"
    NAME="DISPLAY"
    OPERATION="getRegisterPersonDetails"
    PHASE="DISPLAY"
  />


  <SERVER_INTERFACE
    CLASS="ParticipantRegistration"
    NAME="DISPLAY_SEARCH_CRITERIA"
    OPERATION="getRegisterPersonSearchCriteria"
    PHASE="DISPLAY"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="wizardStateID"
    />
    <TARGET
      NAME="DISPLAY_SEARCH_CRITERIA"
      PROPERTY="wizardStateID$wizardStateID"
    />
  </CONNECT>

  <SERVER_INTERFACE
    CLASS="BDMParticipantRegistrationDetails"
    NAME="DISPLAYWIZARD"
    OPERATION="getBDMIORegisterPersonWizard"
  />

  <MENU MODE="WIZARD_PROGRESS_BAR">
    <CONNECT>
      <SOURCE
        NAME="DISPLAYWIZARD"
        PROPERTY="wizardMenu"
      />
    </CONNECT>
  </MENU>


  <PAGE_PARAMETER NAME="wizardStateID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="wizardStateID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="stateID$wizardStateID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="wizardStateID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="wizardStateID"
    />
  </CONNECT>


  <ACTION_SET>


    <ACTION_CONTROL LABEL="ActionControl.Label.Back">
      <LINK
        DISMISS_MODAL="false"
        OPEN_MODAL="false"
        PAGE_ID="BDMIORegisterPerson_duplicateCheckForPDCWizard"
        SAVE_LINK="false"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="wizardStateID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="wizardStateID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <ACTION_CONTROL
      ACTION_ID="SAVE"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    >
      <LINK
        DISMISS_MODAL="true"
        PAGE_ID="Participant_resolveConcernRoleTypeHome"
      >
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="concernRoleID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="concernRoleID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <ACTION_CONTROL
      ALIGNMENT="LEFT"
      LABEL="ActionControl.Label.Cancel"
    />
  </ACTION_SET>

  <CLUSTER  LABEL_WIDTH="50"
    NUM_COLS="2"
    TITLE="Cluster.Title.DocumentDetails">

    <FIELD LABEL="Field.Label.Country" USE_BLANK="true" CONTROL_REF="countryRef">
      <CONNECT>
        <TARGET NAME="ACTION" PROPERTY="countryCode" />
      </CONNECT>
    </FIELD>
    
	<FIELD LABEL="Field.Label.ReceivedFrom" CONTROL_REF="receivedFromRef">
		<CONNECT>			
			<TARGET NAME="ACTION" PROPERTY="bdmReceivedFrom"/>
		</CONNECT>
	</FIELD>    

  </CLUSTER>

  <INCLUDE FILE_NAME="BDMIORegisterPerson_registerForPDCWizardView.vim"/>

</PAGE>
