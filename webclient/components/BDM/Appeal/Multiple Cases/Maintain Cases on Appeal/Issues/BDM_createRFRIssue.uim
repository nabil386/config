<PAGE
  PAGE_ID="BDM_createRFRIssue"
  WINDOW_OPTIONS="width=775"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>

	
	
  <PAGE_PARAMETER NAME="appealRelationshipID"/>
  <PAGE_PARAMETER NAME="pageDescription"/>
  
  <SERVER_INTERFACE
    CLASS="BDMMaintainRFRIssue"
    NAME="ACTION"
    OPERATION="createBDMRFRIssue"
    PHASE="ACTION"
  />
  
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="appealRelationshipID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="appealRelationshipID"
    />
  </CONNECT>
  
  <CLUSTER    SHOW_LABELS="false">
    <FIELD
      CONTROL="CT_HIERARCHY_HORIZONTAL"
      CONFIG="CT_DISPLAY_LABELS"
      LABEL="Field.Label.IssueType"
      USE_BLANK="true"
      USE_DEFAULT="false"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="issueType"
        />
      </CONNECT>
    </FIELD>
    </CLUSTER>
    
    <CLUSTER SHOW_LABELS="false" TITLE="Cluster.Title.Comments">
	    <FIELD HEIGHT="100" LABEL="Field.Label.Comments">
	      <CONNECT>
	        <TARGET
	          NAME="ACTION"
	          PROPERTY="comments"
	        />
	      </CONNECT>
	    </FIELD>
  	</CLUSTER>

  <ACTION_SET ALIGNMENT="CENTER">
  	<ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
      TYPE="ACTION"
    />
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.SaveAndNew"
      TYPE="SUBMIT"
    >
     <LINK PAGE_ID="BDM_createRFRIssue"/>
    </ACTION_CONTROL>
  </ACTION_SET>

</PAGE>
