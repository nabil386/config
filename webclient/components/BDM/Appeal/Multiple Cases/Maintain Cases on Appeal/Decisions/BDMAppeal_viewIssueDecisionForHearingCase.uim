<?xml version="1.0" encoding="UTF-8"?>
<!-- TASK 56872 Appeals Issue Edit Decision -->
<PAGE
  PAGE_ID="BDMAppeal_viewIssueDecisionForHearingCase"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="appealRelationshipID"/>
  

  <SERVER_INTERFACE
    CLASS="BDMAppealedCase"
    NAME="DISPLAY"
    OPERATION="readItemUnderAppealDetails"
    PHASE="DISPLAY"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="appealRelationshipID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="appealRelationshipKey$appealRelationshipID"
    />
  </CONNECT>
 
  <LIST TITLE="List.Title.Issues">
   
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.EditDecision">
        <CONDITION>
	      	<IS_TRUE NAME="DISPLAY" PROPERTY="issueEditEnabledInd"/>
	    </CONDITION>
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="BDM_editRFRIssueDecision"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="bdmRFRIssueID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="bdmRFRIssueID"
            />
          </CONNECT>
		  <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="issueDtls$appealRelationshipID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="appealRelationshipID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
	  
	  <ACTION_CONTROL LABEL="ActionControl.Label.CompleteIssue">
	    <CONDITION>
	      <IS_TRUE NAME="DISPLAY" PROPERTY="issueCompleteEnabledInd"/>
	    </CONDITION>	     
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="BDM_completeRFRIssueDecision"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="bdmRFRIssueID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="bdmRFRIssueID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
      
      <ACTION_CONTROL
        IMAGE="RemoveButton"
        LABEL="ActionControl.Label.RemoveIssue"
      >
     	<CONDITION>
	      <IS_TRUE NAME="DISPLAY" PROPERTY="issueDeleteEnabledInd"/>
	    </CONDITION>
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="BDM_deleteRFRIssue"
        >
         <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="bdmRFRIssueID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="bdmRFRIssueID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>

    </ACTION_SET>
   

    <FIELD LABEL="Field.Label.IssueType" WIDTH="40">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="issueType"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Level" WIDTH="15">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="issueLevel"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.CreatedBy" WIDTH="15">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="createdBy"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.CreationDate" WIDTH="15">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="creationDate"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Status" WIDTH="15">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="status"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.IssueDecision" WIDTH="15" >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="decision"
        />
      </CONNECT>
    </FIELD>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="BDM_viewRFRIssueDecisionDetails">
        <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="bdmRFRIssueID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="bdmRFRIssueID"
            />
          </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>
  </LIST>

</PAGE>
