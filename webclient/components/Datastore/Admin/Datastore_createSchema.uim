<!-- Page used to import a Datastore schema.                                -->
<!--                                                                        -->
<!-- ====================================================================== -->
<PAGE PAGE_ID="Datastore_createSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
      WINDOW_OPTIONS="width=500">
    <PAGE_TITLE>
        <CONNECT>
            <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1" />
        </CONNECT>
    </PAGE_TITLE>

    <SERVER_INTERFACE CLASS="DatastoreSchema" NAME="ACTION" OPERATION="importSchema" PHASE="ACTION" />

    <ACTION_SET ALIGNMENT="CENTER" TOP="false">

        <ACTION_CONTROL LABEL="ActionControl.Label.Save" TYPE="SUBMIT">
            <LINK PAGE_ID="Datastore_clearIEGCache" />
        </ACTION_CONTROL>

        <ACTION_CONTROL LABEL="ActionControl.Label.Cancel" />
    </ACTION_SET>

    <CLUSTER NUM_COLS="1" SHOW_LABELS="true" LABEL_WIDTH="35%">
        <FIELD LABEL="Field.Title.DisplayName">
          <CONNECT>
            <TARGET NAME="ACTION" PROPERTY="schemaDisplayName" />
          </CONNECT>
        </FIELD>
        <WIDGET TYPE="FILE_UPLOAD" LABEL="Field.Title.Schema" WIDTH_UNITS="PERCENT" WIDTH="100">
            <WIDGET_PARAMETER NAME="CONTENT">
                <CONNECT>
                    <TARGET NAME="ACTION" PROPERTY="schemaText" />
                </CONNECT>
            </WIDGET_PARAMETER>
        </WIDGET>
        <FIELD LABEL="Field.Title.Type">
            <CONNECT>
                <TARGET NAME="ACTION" PROPERTY="schemaType" />
            </CONNECT>
        </FIELD>
        <FIELD LABEL="Field.Title.Overwrite">
            <CONNECT>
                <TARGET NAME="ACTION" PROPERTY="overwriteInd" />
            </CONNECT>
        </FIELD>

    </CLUSTER>
	
    <CLUSTER TITLE="Cluster.Title.TechnicalDetails" NUM_COLS="1" SHOW_LABELS="true" LABEL_WIDTH="35%" BEHAVIOR="NONE">
      <FIELD LABEL="Field.Title.Name">
        <CONNECT>
          <TARGET NAME="ACTION" PROPERTY="schemaName" />
        </CONNECT>
      </FIELD>
    </CLUSTER>
</PAGE>
