<pc:plug-ins xmlns:pc="http://www.curamsoftware.com/curam/util/common/plug-in-config">
    <pc:plug-in purpose="center-aligned-box" name="component-renderer"
        class="citizenworkspace.renderer.AlignedBoxRenderer">
        <pc:property name="align">center</pc:property>
        <pc:property name="separator">:</pc:property>
    </pc:plug-in>
    <pc:plug-in purpose="left-aligned-box" name="component-renderer"
        class="citizenworkspace.renderer.AlignedBoxRenderer">
        <pc:property name="align">left</pc:property>
        <pc:property name="separator">:</pc:property>
    </pc:plug-in>    
    <pc:plug-in class="citizenworkspace.renderer.HeaderRenderer" purpose="header-text"
        name="component-renderer"/>
    <pc:plug-in class="citizenworkspace.renderer.BannerRenderer" purpose="banner-panel"
        name="component-renderer"/>
    <pc:plug-in purpose="header-separator-text" extends="header-text">
        <pc:property name="separator">true</pc:property>
    </pc:plug-in>
    <pc:plug-in purpose="page-header-panel" extends="header-text">
        <pc:property name="css-class">header-panel</pc:property>
        <pc:property name="separator">true</pc:property>
    </pc:plug-in>
    <pc:plug-in class="citizenworkspace.renderer.ChildComponentRenderer" name="component-renderer"
        purpose="child-iterator"/>
