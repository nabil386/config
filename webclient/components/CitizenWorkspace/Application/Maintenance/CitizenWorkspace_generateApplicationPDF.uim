<PAGE PAGE_ID="CitizenWorkspace_generateApplicationPDF" POPUP_PAGE="true">

  <PAGE_PARAMETER NAME="intakeApplicationID" />

  <CONNECT>
    <SOURCE PROPERTY="intakeApplicationID" NAME="PAGE" />
    <TARGET PROPERTY="intakeApplicationID" NAME="DISPLAY" />
  </CONNECT>

  <SERVER_INTERFACE CLASS="CitizenWorkspace" NAME="DISPLAY" OPERATION="getCompletedForm" PHASE="DISPLAY" />

  <JSP_SCRIPTLET>
    <![CDATA[

      curam.omega3.texthelper.TextHelper textHelper = (curam.omega3.texthelper.TextHelper)pageContext.findAttribute("DISPLAY");

    String fileName = textHelper.getFieldValue("result$formFilename");
      String contentType = "application\\pdf";

      int propertyIndex = textHelper.getFieldIndex("result$formContent");

      curam.util.type.Blob documentBlob = (curam.util.type.Blob)textHelper.getRawProperty(propertyIndex);

      byte[] documentByteArray = documentBlob.copyBytes();

      response.setHeader("Content-disposition","inline; filename=\"" + fileName + "\"");
      response.setContentType(contentType);
      response.getOutputStream().write(documentByteArray);

    ]]>
  </JSP_SCRIPTLET>
</PAGE>
