<!-- This page is used for Application Authorization for only OP related strategy or OP and IC related strategy   -->
<PAGE
  PAGE_ID="ApplicationAuthorisation_forICAndOP"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd">

  <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="Page.Title"/>
    </CONNECT>
  </PAGE_TITLE>

  <PAGE_PARAMETER NAME="caseID"/>

  <SERVER_INTERFACE
    CLASS="ApplicationAuthorisation"
    NAME="DISPLAY"
    OPERATION="getAuthorisationDisplayDetails"
    PHASE="DISPLAY"
  />

  <SERVER_INTERFACE
    CLASS="ApplicationAuthorisation"
    NAME="ACTION"
    OPERATION="authorise"
    PHASE="ACTION"
  />

  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$applicationCaseID"
    />
  </CONNECT>

  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="applicationCaseID"
    />
  </CONNECT>

  <ACTION_SET
    ALIGNMENT="RIGHT"
    TOP="false"
    >
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />
  </ACTION_SET> 

  <INCLUDE FILE_NAME="Authorisation_forIC.vim"/>  
  <INCLUDE FILE_NAME="Authorisation_forOP.vim"/>
     	
   	<SCRIPT 
      	ACTION="disableClientsForSelectedCase()"
      	EVENT="ONCHANGE"  
		SCRIPT_FILE="EnableCheckBoxes.js"
  	/>
  	
  	<SCRIPT 
      	ACTION="disableClientsForSelectedCase()"
      	EVENT="ONCLICK"  
		SCRIPT_FILE="EnableCheckBoxes.js"
  	/>
</PAGE>


