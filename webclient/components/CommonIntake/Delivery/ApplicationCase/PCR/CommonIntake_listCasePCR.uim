<!-- Lists PCR records.                                       -->
<PAGE
  PAGE_ID="CommonIntake_listCasePCR"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>

  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title"
      />
    </CONNECT>
  </PAGE_TITLE>

  <SERVER_INTERFACE
    CLASS="ApplicationCasePCR"
    NAME="DISPLAY"
    OPERATION="listApplicationCasePCR"
    PHASE="DISPLAY"
  />

  <PAGE_PARAMETER NAME="caseID"/>

  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$caseID"
    />
  </CONNECT>

  <ACTION_SET BOTTOM="false">
    <ACTION_CONTROL
      IMAGE="AddButton"
      LABEL="ActionControl.Label.RecalculatePCRValues"
    >
      <CONDITION>
        <IS_TRUE
          NAME="DISPLAY"
          PROPERTY="manualAssessInd"
        />
      </CONDITION>
      
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="CommonIntake_recalculatePCR"
        >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    
    <ACTION_CONTROL
      IMAGE="AddButton"
      LABEL="ActionControl.Label.EnterPCRValues"
    >
      <CONDITION>
        <IS_TRUE
          NAME="DISPLAY"
          PROPERTY="enterPCRInd"
        />
      </CONDITION>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="PCR_manualCasePCR"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>
  <FIELD ALIGNMENT="CENTER">
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="report"
      />
    </CONNECT>
  </FIELD>
  <CLUSTER TITLE="Cluster.Title.Assessments">
    <LIST PAGINATED="true">
      <FIELD
        LABEL="Field.Title.Date"
        WIDTH="15"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="executionDateTime"
          />
        </CONNECT>
      </FIELD>
      <FIELD
        LABEL="Field.Title.Priority"
        WIDTH="20"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="priorityClassification"
          />
        </CONNECT>
      </FIELD>
      <FIELD
        LABEL="Field.Title.Complexity"
        WIDTH="20"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="complexityClassification"
          />
        </CONNECT>
      </FIELD>
      <FIELD
        LABEL="Field.Title.Risk"
        WIDTH="20"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="riskClassification"
          />
        </CONNECT>
      </FIELD>
      <FIELD
        LABEL="Field.Title.AssessedBy"
        WIDTH="25"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="assessedByFullName"
          />
        </CONNECT>
      </FIELD>
      <DETAILS_ROW>
        <INLINE_PAGE PAGE_ID="Intake_viewCasePCR">
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="casePCRID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="casePCRID"
            />
          </CONNECT>
        </INLINE_PAGE>
      </DETAILS_ROW>
    </LIST>
  </CLUSTER>


</PAGE>
