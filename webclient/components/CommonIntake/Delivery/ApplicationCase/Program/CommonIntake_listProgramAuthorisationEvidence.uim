<!-- Lists the evidecne used as part of an authorisations event.          -->
<PAGE
  HIDE_CONDITIONAL_LINKS="false"
  PAGE_ID="CommonIntake_listProgramAuthorisationEvidence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>

 <PAGE_TITLE>
    <CONNECT>
      <SOURCE NAME="TEXT" PROPERTY="Page.Title"/>
    </CONNECT>
  </PAGE_TITLE>

  <PAGE_PARAMETER NAME="programAuthorisationDataID"/>

  <SERVER_INTERFACE CLASS="ProgramAuthorisation" NAME="DISPLAY" OPERATION="listAuthorisationEvidence"  PHASE="DISPLAY"/>

  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="programAuthorisationDataID"/>
    <TARGET NAME="DISPLAY"  PROPERTY="key$programAuthorisationDataID" />
  </CONNECT>

  <MENU MODE="IN_PAGE_NAVIGATION">
  <ACTION_CONTROL LABEL="Menu.Details" STYLE="in-page-link">
      <LINK PAGE_ID="CommonIntake_listProgramAuthorisationDetails" >
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="programAuthorisationDataID"/>
          <TARGET NAME="PAGE" PROPERTY="programAuthorisationDataID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="Menu.Evidence" STYLE="in-page-current-link">
      <LINK PAGE_ID="CommonIntake_listProgramAuthorisationEvidence" >
        <CONNECT>
          <SOURCE NAME="PAGE" PROPERTY="programAuthorisationDataID"/>
          <TARGET NAME="PAGE" PROPERTY="programAuthorisationDataID"/>
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>    
  </MENU>
  <LIST>
    <DETAILS_ROW>
      <INLINE_PAGE PAGE_ID="Evidence_resolveViewEvidencePage">
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="evidenceType" />
          <TARGET NAME="PAGE" PROPERTY="evidenceType" />
        </CONNECT>
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="evidenceID" />
          <TARGET NAME="PAGE" PROPERTY="evidenceID"/>
        </CONNECT>
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="evidenceDescriptorID" />
          <TARGET NAME="PAGE" PROPERTY="evidenceDescriptorID" />
        </CONNECT>
        <CONNECT>
          <SOURCE NAME="DISPLAY" PROPERTY="applicationCaseID"/>
          <TARGET NAME="PAGE" PROPERTY="caseID"/>
        </CONNECT>
      </INLINE_PAGE>
    </DETAILS_ROW>

    <FIELD LABEL="Field.Label.Type" WIDTH="20">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="evidenceType"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Client" WIDTH="15">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="participantDetails"/>
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Description" WIDTH="40">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="summaryDescription"/>
      </CONNECT>
    </FIELD>
   <CONTAINER LABEL="Field.Label.Period" SEPARATOR="Period.Separator">
    <FIELD USE_BLANK="true" WIDTH="12">
      <CONNECT>
        <SOURCE NAME="DISPLAY" PROPERTY="startDate"/>
      </CONNECT>
     </FIELD>
     <FIELD>
       <CONNECT>
         <SOURCE NAME="DISPLAY" PROPERTY="endDate" />
       </CONNECT>
     </FIELD>
    </CONTAINER>

  </LIST>
</PAGE>


