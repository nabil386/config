<!-- Creates a new PCR Configuration                                -->
<PAGE
  PAGE_ID="CommonIntake_newPCRConfiguration"
  WINDOW_OPTIONS="width=700"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText"
      />
    </CONNECT>
  </PAGE_TITLE>

  <SERVER_INTERFACE
    CLASS="CREOLERuleSetAdmin"
    NAME="DISPLAY"
    OPERATION="listAllPublishedRuleSets"
    PHASE="DISPLAY"
  />
  
  <SERVER_INTERFACE
    CLASS="ApplicationCaseAdminPCR"
    NAME="DISPLAYWORKFLOW"
    OPERATION="listPCRWorkflows"
    PHASE="DISPLAY"
  />
  
  <SERVER_INTERFACE
    CLASS="ApplicationCaseAdminPCR"
    NAME="FORMAT"
    OPERATION="formatIdentifierAndType"
    PHASE="DISPLAY"
  />

  <SERVER_INTERFACE
    CLASS="PCRAdmin"
    NAME="RUNPOINTDISPLAY"
    OPERATION="listPCRRunPoints"
  />
  
  <SERVER_INTERFACE
    CLASS="PCRAdmin"
    NAME="ACTION"
    OPERATION="createPCRConfiguration1"
    PHASE="ACTION"
  />

  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >
    <ACTION_CONTROL
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL LABEL="ActionControl.Label.Cancel"/>
  </ACTION_SET>

  <PAGE_PARAMETER NAME="applicationCaseAdminID"/>

  <CONNECT>
    <SOURCE NAME="PAGE" PROPERTY="applicationCaseAdminID" />
    <TARGET NAME="FORMAT" PROPERTY="key$configIdentifier" />
  </CONNECT>
  
  <CONNECT>
    <SOURCE NAME="CONSTANT" PROPERTY="Constant.ApplicationCaseType" />
    <TARGET NAME="FORMAT" PROPERTY="key$caseType" />
  </CONNECT> 
 
  <CONNECT>
    <SOURCE NAME="FORMAT" PROPERTY="result$configIdentifierCaseType" />
    <TARGET NAME="ACTION" PROPERTY="caseConfigurationIdentifier" />
  </CONNECT>
 
  <CLUSTER
    BEHAVIOR="NONE"
    LABEL_WIDTH="35"
    NUM_COLS="1"
  >
    <FIELD
      LABEL="Field.Title.Name"
      WIDTH="70"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="name"
        />
      </CONNECT>
    </FIELD>

    <FIELD
      LABEL="Field.Title.StartDate"
      WIDTH="30"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="startDate"
        />
      </CONNECT>
    </FIELD>

    <FIELD
      LABEL="Field.Title.EndDate"
      USE_DEFAULT="false"
      WIDTH="30"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="endDate"
        />
      </CONNECT>
    </FIELD>

    <FIELD
      LABEL="Field.Title.RuleSet"
      USE_BLANK="true"
      WIDTH="80"
    >
      <CONNECT>
        <INITIAL
          NAME="DISPLAY"
          PROPERTY="name"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="ruleSetName"
        />
      </CONNECT>
    </FIELD>

    <FIELD LABEL="Field.Title.ManualEntry">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="runManually"
        />
      </CONNECT>
    </FIELD>
    
    <FIELD
      LABEL="Field.Title.Workflow"
      USE_BLANK="true"
      WIDTH="80"
    >
      <CONNECT>
        <INITIAL
          NAME="DISPLAYWORKFLOW"
          PROPERTY="processName"
        />
      </CONNECT>
      
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="dtls$dtls$workflow"
        />
      </CONNECT>     
    </FIELD>
  </CLUSTER>

  <CLUSTER
    BEHAVIOR="NONE"
    SHOW_LABELS="false"
    TITLE="Cluster.Title.RuleSetExecutionEvents"
  >

    <LIST
      
      STYLE="screening-select-list"
    >
      <CONTAINER>
        <WIDGET
          ALIGNMENT="CENTER"
          TYPE="MULTISELECT"
          WIDTH="100"
          WIDTH_UNITS="PERCENT"
        >

          <WIDGET_PARAMETER NAME="MULTI_SELECT_TARGET">
            <CONNECT>
              <TARGET
                NAME="ACTION"
                PROPERTY="pcrRunPoints"
              />
            </CONNECT>
          </WIDGET_PARAMETER>

          <WIDGET_PARAMETER NAME="MULTI_SELECT_SOURCE">
            <CONNECT>
              <SOURCE
                NAME="RUNPOINTDISPLAY"
                PROPERTY="runPointType"
              />
            </CONNECT>
          </WIDGET_PARAMETER>

        </WIDGET>
      </CONTAINER>
      <FIELD
        LABEL="Field.Label.Description"
        WIDTH="90"
      >
        <CONNECT>
          <SOURCE
            NAME="RUNPOINTDISPLAY"
            PROPERTY="description"
          />
        </CONNECT>
      </FIELD>
    </LIST>

  </CLUSTER>

</PAGE>
