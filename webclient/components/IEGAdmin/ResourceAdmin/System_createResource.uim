<!-- Page used to create an resource.                                       -->
<!--                                                                        -->
<!-- ====================================================================== -->
<PAGE PAGE_ID="System_createResource" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
      WINDOW_OPTIONS="width=700">
    <PAGE_TITLE>
        <CONNECT>
            <SOURCE NAME="TEXT" PROPERTY="PageTitle.StaticText1" />
        </CONNECT>
    </PAGE_TITLE>
    <SERVER_INTERFACE CLASS="ResourceAdmin" NAME="ACTION" OPERATION="addResource" PHASE="ACTION" />
    <ACTION_SET ALIGNMENT="CENTER" TOP="false">
        <ACTION_CONTROL LABEL="ActionControl.Label.Save" TYPE="SUBMIT">
          <LINK PAGE_ID="System_viewResource">
            <CONNECT>
              <SOURCE NAME="ACTION" PROPERTY="resourceID" />
              <TARGET NAME="PAGE" PROPERTY="resourceID" />
            </CONNECT>                     
          </LINK>
        </ACTION_CONTROL>
        <ACTION_CONTROL LABEL="ActionControl.Label.Cancel" />
    </ACTION_SET>
    <CLUSTER NUM_COLS="2" SHOW_LABELS="true" LABEL_WIDTH="40%">
        <FIELD LABEL="Field.Title.Category"
               USE_BLANK="true">
            <CONNECT>
                <TARGET NAME="ACTION" PROPERTY="category" />
            </CONNECT>
        </FIELD>
        <FIELD LABEL="Field.Title.Name">
            <CONNECT>
                <TARGET NAME="ACTION" PROPERTY="name" />
            </CONNECT>
        </FIELD>
        <FIELD LABEL="Field.Title.Locale"
               USE_BLANK="true" USE_DEFAULT="false">
            <CONNECT>
                <TARGET NAME="ACTION" PROPERTY="locale" />
            </CONNECT>
        </FIELD>
        <FIELD LABEL="Field.Title.ContentType">
            <CONNECT>
                <TARGET NAME="ACTION" PROPERTY="contentType" />
            </CONNECT>
        </FIELD>
        <FIELD LABEL="Field.Title.ContentDisposition">
            <CONNECT>
                <TARGET NAME="ACTION" PROPERTY="details$contentDisposition" />
            </CONNECT>
        </FIELD>
        <FIELD LABEL="Field.Title.Internal">
            <CONNECT>
                <TARGET NAME="ACTION" PROPERTY="internal" />
            </CONNECT>
        </FIELD>
        <WIDGET TYPE="FILE_UPLOAD" LABEL="Field.Title.Content">
            <WIDGET_PARAMETER NAME="CONTENT">
                <CONNECT>
                    <TARGET NAME="ACTION" PROPERTY="content" />
                </CONNECT>
            </WIDGET_PARAMETER>
        </WIDGET>
    </CLUSTER>
    
    <CLUSTER SHOW_LABELS="false" TITLE="Field.Title.Description">
        <FIELD HEIGHT="4">
            <CONNECT>
                <TARGET
                    NAME="ACTION"
                    PROPERTY="description"
                />
            </CONNECT>
        </FIELD>
    </CLUSTER>
    
</PAGE>
