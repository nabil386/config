<!-- Description                                                            -->
<!-- ===========                                                            -->
<!-- Allows a user to select from a list of programs and run program        -->
<!-- recommendation for those programs.                                     -->
<PAGE
  PAGE_ID="CREOLEProgramRecommendation_selectPrograms"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="CREOLEProgramRecommendation"
    NAME="DISPLAY"
    OPERATION="listProgramDetails"
  />


  <SERVER_INTERFACE
    CLASS="CREOLEProgramRecommendation"
    NAME="ACTION"
    OPERATION="runProgramRecommendation"
    PHASE="ACTION"
  />


  <PAGE_PARAMETER NAME="caseID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="caseID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="details$caseID"
    />
  </CONNECT>


  <ACTION_SET ALIGNMENT="CENTER">
    <ACTION_CONTROL
      LABEL="ActionControl.Label.Run"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL LABEL="ActionControl.Label.Cancel"/>
  </ACTION_SET>


  <CLUSTER NUM_COLS="2">


    <FIELD LABEL="Field.Label.StartDate">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="startDate"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.UseActiveEvidence">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="useActiveEvidence"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.NumberOfMonths">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="numberOfMonths"
        />
      </CONNECT>
    </FIELD>


  </CLUSTER>


  <CLUSTER>


    <LIST>


      <CONTAINER
        ALIGNMENT="CENTER"
        LABEL="Container.Label.Apply"
        WIDTH="10"
      >
        <WIDGET TYPE="MULTISELECT">
          <WIDGET_PARAMETER NAME="MULTI_SELECT_SOURCE">
            <CONNECT>
              <SOURCE
                NAME="DISPLAY"
                PROPERTY="result$list$productID"
              />
            </CONNECT>
          </WIDGET_PARAMETER>
          <WIDGET_PARAMETER NAME="MULTI_SELECT_TARGET">
            <CONNECT>
              <TARGET
                NAME="ACTION"
                PROPERTY="details$selectedPrograms"
              />
            </CONNECT>
          </WIDGET_PARAMETER>
        </WIDGET>
      </CONTAINER>


      <FIELD
        LABEL="Field.Label.Program"
        WIDTH="60"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$list$programName"
          />
        </CONNECT>
      </FIELD>


      <FIELD
        LABEL="Field.Label.ReceivingProgram"
        WIDTH="30"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="result$list$receivingProgram"
          />
        </CONNECT>
      </FIELD>


    </LIST>


  </CLUSTER>


</PAGE>
