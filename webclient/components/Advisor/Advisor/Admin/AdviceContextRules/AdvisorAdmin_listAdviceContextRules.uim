<!-- Dispalys the details of an advice context configuration. Lists the     -->
<!-- associated rule sets and the pages for the context.                    -->
<PAGE
  PAGE_ID="AdvisorAdmin_listAdviceContextRules"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_PARAMETER NAME="adviceContextConfigurationID"/>


  <SERVER_INTERFACE
    CLASS="AdvisorAdmin"
    NAME="DISPLAYRULESETS"
    OPERATION="listAdviceContextRules"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="adviceContextConfigurationID"
    />
    <TARGET
      NAME="DISPLAYRULESETS"
      PROPERTY="key$adviceContextConfigurationID"
    />
  </CONNECT>


  <MENU MODE="IN_PAGE_NAVIGATION">
    <ACTION_CONTROL
      LABEL="ActionControl.Label.RuleSets"
      STYLE="in-page-current-link"
    >
      <LINK
        PAGE_ID="AdvisorAdmin_listAdviceContextRules"
        SAVE_LINK="false"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="adviceContextConfigurationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="adviceContextConfigurationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <ACTION_CONTROL
      LABEL="ActionControl.Label.Pages"
      STYLE="in-page-link"
    >
      <LINK
        PAGE_ID="AdvisorAdmin_listAdviceContextKeysByPage"
        SAVE_LINK="false"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="adviceContextConfigurationID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="adviceContextConfigurationID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


  </MENU>


  <LIST>
    <ACTION_SET TYPE="LIST_ROW_MENU">
      <ACTION_CONTROL LABEL="ActionControl.Label.Delete">
        <LINK
          OPEN_MODAL="true"
          PAGE_ID="AdvisorAdmin_deleteAdviceContextRules"
        >
          <CONNECT>
            <SOURCE
              NAME="DISPLAYRULESETS"
              PROPERTY="adviceContextRulesID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="adviceContextRulesID"
            />
          </CONNECT>
          <CONNECT>
            <SOURCE
              NAME="DISPLAYRULESETS"
              PROPERTY="result$dtls$creoleRulesetName"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="creoleRulesetName"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </ACTION_SET>


    <FIELD
      LABEL="Field.Title.Name"
      WIDTH="60"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAYRULESETS"
          PROPERTY="result$dtls$creoleRulesetName"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Title.DateCreated"
      WIDTH="15"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAYRULESETS"
          PROPERTY="startDate"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Title.CreatedBy"
      WIDTH="25"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAYRULESETS"
          PROPERTY="createdBy"
        />
      </CONNECT>
    </FIELD>
  </LIST>


</PAGE>
