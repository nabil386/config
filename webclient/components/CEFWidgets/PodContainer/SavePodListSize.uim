<!-- Description -->
<!-- =========== -->
<!--  Save the new pod positions on a custom page. -->
<!--  THIS PAGE IS NOT FOR DISPLAY PURPOSES.-->
<PAGE
  PAGE_ID="SavePodListSize"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_PARAMETER NAME="pageID"/>
  <PAGE_PARAMETER NAME="podListSize"/>


  <SERVER_INTERFACE
    CLASS="PodContainer1"
    NAME="DISPLAY"
    OPERATION="savePodListSize"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="pageID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="pageID$pageID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="podListSize"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="podListSize$XMLData"
    />
  </CONNECT>


</PAGE>
