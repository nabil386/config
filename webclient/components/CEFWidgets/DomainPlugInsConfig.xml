<pc:plug-ins xmlns:pc="http://www.curamsoftware.com/curam/util/common/plug-in-config">


  <pc:plug-in
    class="curam.widget.render.infrastructure.WidgetViewRendererAdapter"
    name="view-renderer"
    purpose="context-panel-style-adapter"
  >
    <pc:property name="style">context-panel</pc:property>
  </pc:plug-in>


  <pc:plug-in
    class="curam.widget.render.infrastructure.CTCheckboxSelectRenderer"
    name="select-renderer"
    purpose="ct-cb-list"
  >
  </pc:plug-in>


  <pc:plug-in
    class="curam.widget.render.infrastructure.CTDropdownSelectRenderer"
    name="select-renderer"
    purpose="ct-dd-list"
  >
  </pc:plug-in>


  <pc:plug-in
    class="curam.widget.render.infrastructure.CTRadiobuttonSelectRenderer"
    name="select-renderer"
    purpose="ct-rb-list"
  >
  </pc:plug-in>


  <pc:plug-in
    class="curam.widget.render.infrastructure.RadiobuttonSelectRenderer"
    name="select-renderer"
    purpose="db-cb-list"
  >
  </pc:plug-in>


  <pc:plug-in
    class="curam.widget.render.infrastructure.ListDropdownSelectRenderer"
    name="select-renderer"
    purpose="list-dd-choice"
  >
  </pc:plug-in>


  <pc:plug-in
    class="curam.widget.render.infrastructure.ChoiceRenderer"
    name="edit-renderer"
    purpose="choice"
  >
    <pc:local-plug-in
      local-purpose="single-choice"
      name="select-renderer"
      purpose="ct-rb-list"
    />
    <pc:local-plug-in
      local-purpose="multiple-choice"
      name="select-renderer"
      purpose="ct-cb-list"
    />
    <pc:local-plug-in
      local-purpose="db-single-choice"
      name="select-renderer"
      purpose="db-cb-list"
    />
    <pc:local-plug-in
      local-purpose="ct-single-dd-choice"
      name="select-renderer"
      purpose="ct-dd-list"
    />
    <pc:local-plug-in
      local-purpose="list-dropdown-choice"
      name="select-renderer"
      purpose="list-dd-choice"
    />
  </pc:plug-in>


</pc:plug-ins>
