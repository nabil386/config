<!-- This script redirects the user from an Appeal page to a user           -->
<!-- or participant home page, depending on the supplier type               -->
<PAGE
  PAGE_ID="Appeal_resolveParticipantOrUserHomeForAttendees"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    

      curam.omega3.request.RequestHandler rh 
        = curam
          .omega3
          .request
          .RequestHandlerFactory
          .getRequestHandler(request);

      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences
        (pageContext.getSession()).getLocale() + "/";
      String caseParticipantRoleID = request.getParameter("caseParticipantRoleID");
      String userName = request.getParameter("userName");
      String attendanceCode = request.getParameter("attendanceCode");
      
      String url = "";

      if (attendanceCode == null) {
        
          // BEGIN, CR00110216, SK
          core.ScriptletMissingParamException e = new
                  core.ScriptletMissingParamException(-20002, "attendance");
          System.out.println(e);
          throw e;
          // END, CR00110216
          
          
      }
      
      // If the attendance type is participant
      if (attendanceCode.equals("INT") || attendanceCode.equals("HWS") || 
          attendanceCode.equals("HRS") || attendanceCode.equals("APP") || 
          attendanceCode.equals("RSP") || attendanceCode.equals("THP") ||
          attendanceCode.equals("LA_HLP")) {
      
        if (caseParticipantRoleID == null) {
        
      
            // BEGIN, CR00110216, SK
            core.ScriptletMissingParamException e = new
                    core.ScriptletMissingParamException(-20002, "caseParticipantRoleID");
            System.out.println(e);
            throw e;
            // END, CR00110216
          
            
        }    
        
        url = context 
          + "Appeal_resolveParticipantHomePage.do?caseParticipantRoleID=" 
          + curam.omega3.request.RequestUtils.escapeURL(caseParticipantRoleID);
          
                
      } else if (attendanceCode.equals("RT1") || attendanceCode.equals("RT2") || 
                 attendanceCode.equals("RT3") || attendanceCode.equals("RT4") ||    
                 attendanceCode.equals("RT5") || attendanceCode.equals("RT6") ||
                 attendanceCode.equals("RT7") || attendanceCode.equals("RT8") ||
                 attendanceCode.equals("RT9") || attendanceCode.equals("RT10") ||
                 attendanceCode.equals("RT11") || attendanceCode.equals("RT12") ||
                 attendanceCode.equals("HA12")) {
      
        if (caseParticipantRoleID == null) {
            
            // BEGIN, CR00110216, SK
            core.ScriptletMissingParamException e = new
                    core.ScriptletMissingParamException(-20002, "userName");
            System.out.println(e);
            throw e;
            // END, CR00110216
          
            
        }
        
        url = context + "Organization_viewUserDetailsPage.do?userName=" 
          + curam.omega3.request.RequestUtils.escapeURL(userName);
        
      }
      // BEGIN, CR00246931, GP
      url += "&amp;" + rh.getSystemParameters(); 
      // END, CR00246931     
      response.sendRedirect(response.encodeRedirectURL(url));
      
    
  </JSP_SCRIPTLET>
</PAGE>
