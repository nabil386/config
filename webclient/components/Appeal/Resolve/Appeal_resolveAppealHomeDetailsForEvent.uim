<!-- This script redirects the user to an appropriate appeal home page.     -->
<PAGE
  PAGE_ID="Appeal_resolveAppealHomeDetailsForEvent"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    

      curam.omega3.request.RequestHandler
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences
        (pageContext.getSession()).getLocale() + "/";
      String caseID = request.getParameter("caseID");
      String parentCaseID = request.getParameter("parentCaseID");
      String appealType = request.getParameter("appealType");
      String url = "";
      String description = request.getParameter("description");
      String manageDecision = request.getParameter("manageDecision");    
      Boolean isIssue = new Boolean(request.getParameter("isIssue"));       

      curam.interfaces.AppealPkg.Appeal_readAppealType_TH
      th = new curam.interfaces.AppealPkg.Appeal_readAppealType_TH();
      
      th.setFieldValue(th.key$appealCaseKey$caseID_idx,caseID);
      th.callServer();
      appealType = th.getFieldValue(th.result$appealTypeDetails$appealTypeDetails$appealTypeCode_idx);            

      if (caseID == null) {

       core.ScriptletMissingParamException e = new
                core.ScriptletMissingParamException(-20002, "caseID");
       System.out.println(e);
       throw e;

      }

      if (appealType == null) {

       core.ScriptletMissingParamException e = new
                core.ScriptletMissingParamException(-20002, "appealType");
       System.out.println(e);
       throw e;

      }
            
      if (parentCaseID == null) {
      
       if (manageDecision != null) { 
        if (manageDecision.equals("yes")) {
        
          if (appealType.equals("AT1")) {
          
            url = context + "Appeal_manageHearingCaseDecisionDetailsForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                    ;
          
          } else if (appealType.equals("AT2")) {
          
            url = context + "Appeal_manageHearingCaseDecisionDetailsForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                   ;            
          
          } else if (appealType.equals("AT3")) {
          
            url = context + "Appeal_manageHearingCaseDecisionDetailsForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                    +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);             
        
        }        
       }
      } else {      
  
        if (appealType.equals("AT1") ) {
          if(isIssue.booleanValue()){      
            url = context + "Appeal_hearingCaseIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);      
          }else{      
            url = context + "Appeal_hearingCaseHomeDetailsForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);      
          }      
        } else if (appealType.equals("AT2")) {
          if(isIssue.booleanValue()){      
            url = context + "Appeal_hearingReviewIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
          }else{    
            url = context + "Appeal_hearingReviewHomeForEventPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
          }      
         } else if (appealType.equals("AT3")) {
           if(isIssue.booleanValue()){      
              url = context + "Appeal_judicialReviewIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
            }else{
              url = context + "Appeal_judicialReviewHomeForEventPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
            }     
         }
       }     
        
      } else {
      
       if(manageDecision != null) {
        if (manageDecision.equals("yes")) {
        
          if (appealType.equals("AT1")) {
          
             url = context + "Appeal_manageHearingCaseDecisionForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                     +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);
          
          } else if (appealType.equals("AT2")) {
          
            url = context + "Appeal_manageHearingReviewDecisionForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                    +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);            
          
          } else if (appealType.equals("AT3")) {
          
            url = context + "Appeal_manageJudicialReviewDecisionForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                    +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);             
          
          }        
         }
        } else {
         if (appealType.equals("AT1") ) {
           if(isIssue.booleanValue()){        
              url = context + "Appeal_hearingCaseIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);            
           }else{            
              url = context + "Appeal_hearingCaseHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);            
            }            
          } 
        else if (appealType.equals("AT2")) {
           if(isIssue.booleanValue()){   
              url = context + "Appeal_hearingReviewIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
           }else{    
              url = context + "Appeal_hearingReviewHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
           } 
          } 
        else if (appealType.equals("AT3")) {
           if(isIssue.booleanValue()){  
              url = context + "Appeal_judicialReviewIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
           }else{
              url = context + "Appeal_judicialReviewHomeForEventPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);           
           }  
          }
        }
      }     
      url += "&amp;" + rh.getSystemParameters(); 

      response.sendRedirect(response.encodeRedirectURL(url));
      
    
  </JSP_SCRIPTLET>
</PAGE>
