<!-- This script redirects the user to an appropriate appeal home page.     -->
<PAGE
  PAGE_ID="Appeal_resolveIssueAppealHome"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    

      curam.omega3.request.RequestHandler
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences
        (pageContext.getSession()).getLocale() + "/";
      String caseID = request.getParameter("caseID");
      String parentCaseID = request.getParameter("parentCaseID");
      String appealType = request.getParameter("appealType");
      String url = "";
      String description = request.getParameter("description");
      String manageDecision = request.getParameter("manageDecision");

      if (caseID == null) {
        // BEGIN, CR00126196, SK
       core.ScriptletMissingParamException e = new
                core.ScriptletMissingParamException(-20002, "caseID");
       System.out.println(e);
       throw e;
       // END, CR00126196
      }

      if (appealType == null) {
        // BEGIN, CR00126196, SK
       core.ScriptletMissingParamException e = new
                core.ScriptletMissingParamException(-20002, "appealType");
       System.out.println(e);
       throw e;
       // END, CR00126196
      }
            
      if (parentCaseID == null) {
      
       if (manageDecision != null) {
         if(manageDecision.equals("yes")) {
        
          if (appealType.equals("AT1")) {
          
            url = context + "Appeal_manageHearingCaseIssueDecisionForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                    +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);
          
          } else if (appealType.equals("AT2")) {
          
            url = context + "Appeal_manageHearingReviewIssueDecisionForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                    +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);            
          
          } else if (appealType.equals("AT3")) {
          
            url = context + "Appeal_manageJudicialReviewIssueDecisionForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                    +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);             
          
          }        
         }
        
        } else {
        
          if (appealType.equals("AT1")) {
      
            url = context + "Appeal_hearingCaseIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
          
          } else if (appealType.equals("AT2")) {

            url = context + "Appeal_hearingReviewIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);

          } else if (appealType.equals("AT3")) {

            url = context + "Appeal_judicialReviewIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);

          }
        }
        
      } else {
      
      
      if (manageDecision != null) {
      if (manageDecision.equals("yes")) {
    
        if (appealType.equals("AT1")) {
        
          url = context + "Appeal_manageHearingCaseIssueDecisionForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                  +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);
        
        } else if (appealType.equals("AT2")) {
        
          url = context + "Appeal_manageHearingReviewIssueDecisionForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                  +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);            
        
        } else if (appealType.equals("AT3")) {
        
          url = context + "Appeal_manageJudicialReviewIssueDecisionForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID)
                  +"&amp;description=" + curam.omega3.request.RequestUtils.escapeURL(description);             
        
        }        
       }
      } else {
        
          if (appealType.equals("AT1")) {
        
            url = context + "Appeal_hearingCaseIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
            
          } else if (appealType.equals("AT2")) {
  
            url = context + "Appeal_hearingReviewIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
  
          } else if (appealType.equals("AT3")) {
  
            url = context + "Appeal_judicialReviewIssueHomeForICPage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
  
          }
        }
      }
      
      url += "&amp;" + rh.getSystemParameters(); 

      response.sendRedirect(response.encodeRedirectURL(url));
      
    
  </JSP_SCRIPTLET>
</PAGE>
