<!-- Description -->
<!-- =========== -->
<!-- This jsp redirects the user to the next page in the hearing review case-->
<!-- creation process depending on the appeal level configuration for the   -->
<!-- product.                                                               -->
<!--                                                                        -->
<!-- If a hearing review case can only be created at the 1st level of appeal-->
<!-- for product, then the user is routed directly to the enter appellant   -->
<!-- and respondent page.                                                   -->
<!--                                                                        -->
<!-- If the hearing review can be created at the 1st level and other levels -->
<!-- of appeal for the product, then the user is routed to the appeal       -->
<!-- level confirmation page.                                               -->
<!--                                                                        -->
<!-- If the hearing review cannot be created at the 1st level of appeal for -->
<!-- the product (i.e. only at levels higher than the first level), then    -->
<!-- a decision from a prior appeal case is being appealed and the user     -->
<!-- is routed to a page where they select the decision to appeal.          -->
<!--                                                                        -->
<!-- This page is for cases being appealed which are part of an             -->
<!-- integrated case.                                                       -->
<!--                                                                        -->
<PAGE
  PAGE_ID="Appeal_resolveHearingReviewAppealLevelIC"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>


      curam.omega3.request.RequestHandler
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";
      String caseID = request.getParameter("implCaseID");
      String parentCaseID = request.getParameter("parentCaseID");

      if (caseID == null) {
        // BEGIN, CR00126196, SK
       core.ScriptletMissingParamException e = new
                core.ScriptletMissingParamException(-20002, "caseID");
       System.out.println(e);
       throw e;
       // END, CR00126196
      }

      curam.interfaces.HearingReviewPkg.HearingReview_resolveAppealLevelForCase_TH
        th = new curam.interfaces.HearingReviewPkg.HearingReview_resolveAppealLevelForCase_TH();

      th.setFieldValue(th.details$caseIDDetails$caseID_idx, caseID);
      th.callServer();

      String firstLevelOnlyInd = th.getFieldValue(th.result$caseAppealLevelDetails$firstLevelOnlyInd_idx);
      String firstLevelInd = th.getFieldValue(th.result$caseAppealLevelDetails$firstLevelInd_idx);

      boolean firstLevelOnly = false;
      boolean firstLevel = false;

      if (firstLevelOnlyInd.equals("true")) {
        firstLevelOnly = true;
      }
      if (firstLevelInd.equals("true")) {
        firstLevel = true;
      }

      String url = context;

      if (firstLevel) {
        if (firstLevelOnly) {
          // Goto the Enter Appellant and Respondent page
          url = context + "Appeal_enterAppellantAndRespondentForHearingReviewICPage.do?implCaseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID) + "&amp;parentCaseID=" + curam.omega3.request.RequestUtils.escapeURL(parentCaseID) + "&amp;priorAppealCaseID=0";
        }
        else {
          // Goto the Confirm Appeal Level page
          url = context + "Appeal_selectHearingReviewAppealLevelICPage.do?implCaseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID) + "&amp;parentCaseID=" + curam.omega3.request.RequestUtils.escapeURL(parentCaseID)+ "&amp;priorAppealCaseID=0";
        }
      }
      else {

        // Goto the Select Appeal Decision page
        url = context + "Appeal_selectDecisionToAppealForHearingReviewICPage.do?implCaseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID) + "&amp;parentCaseID=" + curam.omega3.request.RequestUtils.escapeURL(parentCaseID);
      }

      url += "&amp;" + rh.getSystemParameters();
      response.sendRedirect(response.encodeRedirectURL(url));


  </JSP_SCRIPTLET>
</PAGE>
