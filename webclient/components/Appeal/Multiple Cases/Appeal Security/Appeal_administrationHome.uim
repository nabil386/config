<!-- Displays the appeal administration home page. -->
<PAGE
  PAGE_ID="Appeal_administrationHome"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="AppealSecurity"
    NAME="DISPLAY"
    OPERATION="readSecurity"
    PHASE="DISPLAY"
  />


  <ACTION_SET ALIGNMENT="CENTER">
    <ACTION_CONTROL
      IMAGE="EditButton"
      LABEL="ActionControl.Label.Edit"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="Appeal_modifySecurity"
        SAVE_LINK="false"
      />
    </ACTION_CONTROL>
    <ACTION_CONTROL
      IMAGE="CloseButton"
      LABEL="ActionControl.Label.Close"
    />
  </ACTION_SET>


  <CLUSTER
    NUM_COLS="2"
    TITLE="Cluster.Label.SecurityRestrictions"
  >


    <FIELD LABEL="Field.Label.LocationSecurityLevel">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="locationSecurityLevel"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.CreateRights">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="createSID"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.ReadRights">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="readSID"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.MaintainRights">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="maintainSID"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.ApproveRights">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="approveSID"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.ApproveDecisionRights">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="approveDecisionSID"
        />
      </CONNECT>
    </FIELD>


  </CLUSTER>


</PAGE>
