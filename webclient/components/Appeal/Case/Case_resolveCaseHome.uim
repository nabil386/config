<!-- This jsp redirects the user to a Case Home Page.-->
<!-- Each case type value is matched to a Home Page name.-->
<PAGE
  PAGE_ID="Case_resolveCaseHome"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    
    
    curam.omega3.request.RequestHandler 
    rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);
    
    String context = request.getContextPath() + "/";
    context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";
    String caseID = request.getParameter("caseID");
    String homePageName="";
    String url = "";
    
    if (caseID == null) {
      // BEGIN, CR00126196, SK
       core.ScriptletMissingParamException e = new
                core.ScriptletMissingParamException(-20002, "caseID");
       System.out.println(e);
       throw e;
       // END, CR00126196
    }
    
    curam.interfaces.AppealPkg.Appeal_resolveCaseHomePageName_TH
    th = new curam.interfaces.AppealPkg.Appeal_resolveCaseHomePageName_TH();
    
    th.setFieldValue(th.key$appealCaseKey$caseID_idx,caseID);
    
    th.callServer();    
    homePageName = th.getFieldValue(th.result$homePageName$homePageName_idx);
    
    // BEGIN, CR00372861, DG
    curam.interfaces.CasePkg.Case_resolveCaseType_TH
    th2 = new curam.interfaces.CasePkg.Case_resolveCaseType_TH();
    th2.setFieldValue(th2.readCaseTypeDetails$caseID_idx,caseID);
    th2.callServer();
    
    String caseType = th2.getFieldValue(th2.result$caseTypeCode$caseTypeCode_idx);
    
    if (caseType.equals("CT11")) {
      homePageName = "SocialEnterpriseFolder_home";
    }  
    //BEGIN, CR00115728, RKi      
    else if (caseType.equals("CFSS_CT1")) {
        curam.interfaces.LegalActionPkg.LegalAction_readHomePageByCaseID_TH th3 = 
          new curam.interfaces.LegalActionPkg.LegalAction_readHomePageByCaseID_TH();     
        
        th3.setFieldValue(th3.key$caseID_idx, caseID);
        th3.callServer();
        
        homePageName = th3.getFieldValue(th3.result$dtls$dtls$homePageName_idx);
    }
    //  END, CR00115728 
    // END, CR00372861
    
    if ((homePageName==null) ||(homePageName.equals(""))) { 
      url = context + "Case_resolveCaseNoHomePage.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);       
    } else { 
      url = context + homePageName + "Page.do?caseID=" + curam.omega3.request.RequestUtils.escapeURL(caseID);
    }
    
    url += "&amp;" + rh.getSystemParameters();
    response.sendRedirect(response.encodeRedirectURL(url));
    
    
    
  </JSP_SCRIPTLET>
</PAGE>
