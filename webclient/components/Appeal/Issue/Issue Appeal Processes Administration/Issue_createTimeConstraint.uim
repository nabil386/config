<!-- This page is used to create a new benefit product. -->
<PAGE
  PAGE_ID="Issue_createTimeConstraint"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText"
      />
    </CONNECT>   
  </PAGE_TITLE>

  <PAGE_PARAMETER NAME="description"/>
    <PAGE_PARAMETER NAME="issueConfigurationID"/>
  
  <SERVER_INTERFACE
    CLASS="Product"
    NAME="ACTION"
      OPERATION="createIssueTimeConstraint"
    PHASE="ACTION"
  />


  <ACTION_SET ALIGNMENT="CENTER">


    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />


    <ACTION_CONTROL
      IMAGE="SaveAndNewButton"
      LABEL="ActionControl.Label.SaveAndNew"
      TYPE="SUBMIT"
    >
        <LINK PAGE_ID="Issue_createTimeConstraint"/>
    </ACTION_CONTROL>


    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />


  </ACTION_SET>

    <CONNECT>
        <SOURCE
            NAME="PAGE"
            PROPERTY="issueConfigurationID"
        />

        <TARGET
            NAME="ACTION"
            PROPERTY="details$issueConfigurationID"
        />
    </CONNECT>

  <CLUSTER
    NUM_COLS="2"
    TITLE="Cluster.Label.Details"
  >

    <FIELD LABEL="Field.Label.NumberOfDays">
      <CONNECT>
        <TARGET
          NAME="ACTION"
            PROPERTY="details$numberOfDays"
        />
      </CONNECT>
    </FIELD>

    <FIELD 
      LABEL="Field.Label.Type"
      USE_DEFAULT="false">
      <CONNECT>
        <TARGET
          NAME="ACTION"
            PROPERTY="details$constraintType"
        />
      </CONNECT>
    </FIELD>
    
    <FIELD LABEL="Field.Label.FromDate">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="details$fromDate"
        />
      </CONNECT>
    </FIELD>    
    
  </CLUSTER>

</PAGE>