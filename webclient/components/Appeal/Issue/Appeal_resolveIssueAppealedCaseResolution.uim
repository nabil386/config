<!-- This script redirects the user from the manageDecision page to         -->
<!-- the view appealed case page, with either prior or non-prior appeals    -->
<PAGE
  PAGE_ID="Appeal_resolveIssueAppealedCaseResolution"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
    

      curam.omega3.request.RequestHandler rh 
        = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);

      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences
        (pageContext.getSession()).getLocale() + "/";
      String appealRelationshipID = request.getParameter("appealRelationshipID");
      String priorAppealIndicator = request.getParameter("priorAppealIndicator");
      String issueCaseID = request.getParameter("issueCaseID");
      // BEGIN, CR0009669, RKi 
      String contextDescription = request.getParameter("description");  
      // END, CR00096692 
      String url = "";

      if (appealRelationshipID == null) {

        // BEGIN, CR00110216, SK
             core.ScriptletMissingParamException e = new
                   core.ScriptletMissingParamException(-20002, "appealRelationshipID");
             System.out.println(e);
             throw e;
        // END, CR00110216

      }

      if (priorAppealIndicator == null) {

          // BEGIN, CR00110216, SK
               core.ScriptletMissingParamException e = new
                     core.ScriptletMissingParamException(-20002, "priorAppealIndicator");
               System.out.println(e);
               throw e;
         // END, CR00110216

      }

      // Prior appeal decision is being appealed
      if (priorAppealIndicator.equals("true")) {

        url = context 
          + "Appeal_viewIssueResolutionPriorAppealPage.do?appealRelationshipID=" 
          + curam.omega3.request.RequestUtils.escapeURL(appealRelationshipID)
          + "&amp;issueCaseID="
          + curam.omega3.request.RequestUtils.escapeURL(issueCaseID)
          // BEGIN, CR0009669, RKi
          + "&amp;contextDescription="
          + curam.omega3.request.RequestUtils.escapeURL(contextDescription); 
          // END, CR00096692 

      } else {

        url = context 
          + "Appeal_viewIssueResolutionPage.do?appealRelationshipID=" 
          + curam.omega3.request.RequestUtils.escapeURL(appealRelationshipID)
          + "&amp;issueCaseID="
          + curam.omega3.request.RequestUtils.escapeURL(issueCaseID)
          // BEGIN, CR0009669, RKi
          + "&amp;contextDescription="
          + curam.omega3.request.RequestUtils.escapeURL(contextDescription);          
   // END, CR00096692 
      }

      url += "&amp;" + rh.getSystemParameters();
      response.sendRedirect(response.encodeRedirectURL(url));
      
    
  </JSP_SCRIPTLET>
</PAGE>
