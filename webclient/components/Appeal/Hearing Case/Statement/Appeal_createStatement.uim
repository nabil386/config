<!-- This page allows the user to add a statement to  a hearing case.       -->
<PAGE
  PAGE_ID="Appeal_createStatement"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="IntegratedCase"
    NAME="DISPLAY"
    OPERATION="listCaseParticipantsDetails"
    PHASE="DISPLAY"
  />


  <SERVER_INTERFACE
    CLASS="HearingCase"
    NAME="ACTION"
    OPERATION="addStatement"
    PHASE="ACTION"
  />


  <INFORMATIONAL>
    <CONNECT>
      <SOURCE
        NAME="ACTION"
        PROPERTY="informationMsgTxt"
      />
    </CONNECT>
  </INFORMATIONAL>


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />
  </ACTION_SET>


  <PAGE_PARAMETER NAME="caseID"/>
  <PAGE_PARAMETER NAME="pageDescription"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$caseID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="details$appealStatementDetails$caseID"
    />
  </CONNECT>


  <CLUSTER
    LABEL_WIDTH="24.5"
  >
    <CONTAINER LABEL="Field.Label.File">
      <WIDGET TYPE="FILE_UPLOAD">
        <WIDGET_PARAMETER NAME="CONTENT">
          <CONNECT>
            <TARGET
              NAME="ACTION"
              PROPERTY="details$appealStatementDetails$attachmentContents"
            />
          </CONNECT>
        </WIDGET_PARAMETER>
        <WIDGET_PARAMETER NAME="FILE_NAME">
          <CONNECT>
            <TARGET
              NAME="ACTION"
              PROPERTY="details$appealStatementDetails$attachmentName"
            />
          </CONNECT>
        </WIDGET_PARAMETER>
      </WIDGET>
    </CONTAINER>
  </CLUSTER>


  <!-- BEGIN, CR00198210, PS -->
  <CLUSTER
    LABEL_WIDTH="49"
    NUM_COLS="2"
    TITLE="Cluster.Title.FileDetails"
  >
    <!-- END, CR00198210 -->
    <FIELD LABEL="Field.Label.DocumentLocation">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="details$appealStatementDetails$documentLocation"
        />
      </CONNECT>
    </FIELD>
    
    <FIELD
      LABEL="Field.Label.ReceiptDate"
      WIDTH="75"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="details$appealStatementDetails$receiptDate"
        />
      </CONNECT>
    </FIELD>
    
    <FIELD LABEL="Field.Label.DocumentReference">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="details$appealStatementDetails$documentRef"
        />
      </CONNECT>
    </FIELD>
    
    <FIELD
      LABEL="Field.Label.CaseParticipant"
      USE_BLANK="TRUE"
    >
      <CONNECT>
        <INITIAL
          HIDDEN_PROPERTY="result$memberDetailsList$dtls$caseParticipantRoleID"
          NAME="DISPLAY"
          PROPERTY="result$memberDetailsList$dtls$nameAndAgeOpt"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="details$appealStatementDetails$caseParticipantRoleID"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <!-- BEGIN, CR00198210, PS -->
  <CLUSTER
    TITLE="Cluster.Title.Description"
    SHOW_LABELS="false"
  >
    <FIELD
      HEIGHT="4"
      LABEL="Field.Label.Description"
    >
      <!-- END, CR00198210 -->
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="details$appealStatementDetails$description"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>
