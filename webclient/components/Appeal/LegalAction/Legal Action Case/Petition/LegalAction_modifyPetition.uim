<!-- This Page allows users to modify petition details                      -->
<PAGE
  PAGE_ID="LegalAction_modifyPetition"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>


  <!-- Page Title -->
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Statement"
      />
    </CONNECT>
  </PAGE_TITLE>


  <!-- Page parameter required for this page -->
  <PAGE_PARAMETER NAME="caseID"/>


  <!-- Server Interface for display bean to display petition details -->
  <SERVER_INTERFACE
    CLASS="LegalPetition"
    NAME="DISPLAY"
    OPERATION="readPetition"
    PHASE="DISPLAY"
  />
  <!-- Server Interface for action bean to modify a petition -->
  <SERVER_INTERFACE
    CLASS="LegalPetition"
    NAME="ACTION"
    OPERATION="modifyPetition"
    PHASE="ACTION"
  />


  <!-- Connection parameters required for display and action beans -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$caseID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="dtls$dtls$caseID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="DISPLAY"
      PROPERTY="versionNo"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="versionNo"
    />
  </CONNECT>


  <!-- Action control contains save and cancel links -->
  <ACTION_SET ALIGNMENT="CENTER">
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />
  </ACTION_SET>


  <!--Cluster to enter petition details  -->
  <CLUSTER
    NUM_COLS="2"
    TITLE="Cluster.Details"
  >
    <FIELD LABEL="Field.Label.PetitionNum">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="petitionNumber"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="petitionNumber"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.LegalCategory">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalCategoryNameCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.FiledDate">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="filedDate"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="filedDate"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.CourtLocation">
      <CONNECT>
        <INITIAL
          NAME="DISPLAY"
          PROPERTY="locationName"
        />
      </CONNECT>
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$locationID"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="locationID"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Status">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$statusCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.Outcome"
      USE_BLANK="TRUE"
      USE_DEFAULT="FALSE"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="outcomeCode"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="outcomeCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.LegalAction">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActionNameCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.CreationDate">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="petitionDtls$dtls$creationDate"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.Judge"
      USE_BLANK="TRUE"
      USE_DEFAULT="TRUE"
    >
      <CONNECT>
        <INITIAL
          HIDDEN_PROPERTY="memberID"
          NAME="DISPLAY"
          PROPERTY="memberName"
        />
      </CONNECT>
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$adjudicateID"
        />
      </CONNECT>


      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="adjudicateID"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <!-- Cluster to have narrative details -->
  <CLUSTER
    LABEL_WIDTH="40"
    SHOW_LABELS="false"
    TITLE="Cluster.Title.Narrative"
  >
    <!-- BEGIN, CR00414024, RB -->
    <FIELD HEIGHT="4" LABEL="Field.Label.Narrative">
    <!-- END, CR00414024 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="narrative"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="narrative"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>
