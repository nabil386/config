<!-- This page allows users to view hearing details                         -->
<PAGE
  PAGE_ID="LegalAction_viewHearing"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>


  <!-- Page title of the hearing -->
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Statement"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SHORTCUT_TITLE>
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="legalActDtls$pageDescription"
      />
    </CONNECT>
  </SHORTCUT_TITLE>


  <!-- Page parameter required to display hearing details -->
  <PAGE_PARAMETER NAME="caseID"/>


  <!-- Server interface for display bean -->
  <SERVER_INTERFACE
    CLASS="LegalHearing"
    NAME="DISPLAY"
    OPERATION="readLegalHearing"
    PHASE="DISPLAY"
  />


  <!-- Connection parameters required to get hearing details -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$caseID"
    />
  </CONNECT>


  <ACTION_SET>


    <ACTION_CONTROL LABEL="ActionControl.Label.Edit">
      <CONDITION>
        <IS_TRUE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$statusInd"
        />
      </CONDITION>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="LegalAction_modifyHearing"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="legalActDtls$dtls$caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


    <ACTION_CONTROL LABEL="ActionControl.Label.CloseCase">
      <CONDITION>
        <IS_TRUE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$statusInd"
        />
      </CONDITION>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="LegalAction_close"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="legalActDtls$pageDescription"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="pageDescription"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>


  </ACTION_SET>


  <!-- Cluster to have legal hearing details -->
  <CLUSTER NUM_COLS="2">
    <FIELD LABEL="Field.Label.LegalCategory">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalCategoryNameCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.DocketNumber">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="docketNumber"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.CourtLocation">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$locationName"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.StartDate">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$startDate"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Status">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$statusCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.LegalAction">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActionNameCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Outcome">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="hearingOutcomeCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Judge">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="adjudicateName"
        />
      </CONNECT>
      <!-- BEGIN, CR00198761, GP -->
      <LINK PAGE_ID="Appeal_resolveUserHome">
        <!-- END, CR00198761 -->
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="adjudicateName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="userName"
          />
        </CONNECT>


        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="adjudicateConcernRoleID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="concernRoleID"
          />
        </CONNECT>


      </LINK>


    </FIELD>
    <FIELD LABEL="Field.Label.EndDate">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$endDate"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
  <!--Closure details-->
  <CLUSTER
    LABEL_WIDTH="35"
    NUM_COLS="2"
    TITLE="Cluster.Title.ClosureDetails"
  >


    <CONDITION>
      <IS_TRUE
        NAME="DISPLAY"
        PROPERTY="caseClosedInd"
      />
    </CONDITION>
    <FIELD LABEL="Field.Label.Reason">
      <CONNECT>
        <TARGET
          NAME="DISPLAY"
          PROPERTY="reasonCode"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.Priority">
      <CONNECT>
        <TARGET
          NAME="DISPLAY"
          PROPERTY="priority"
        />
      </CONNECT>
    </FIELD>


  </CLUSTER>


  <!--Scheduled hearing-->
  <CLUSTER
    LABEL_WIDTH="40"
    NUM_COLS="2"
    TITLE="Cluster.Title.ScheduleHearingDetails"
  >
    <CONDITION>
      <IS_TRUE
        NAME="DISPLAY"
        PROPERTY="scheduledHearingInd"
      />
    </CONDITION>
    <FIELD LABEL="Field.Label.ReferenceNumber">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="activeScheduleHearingDtls$referenceNumber"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.Type">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="activeScheduleHearingDtls$typeCode"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.Official">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="fullName"
        />
      </CONNECT>
      <!-- BEGIN, CR00198761, GP -->
      <LINK PAGE_ID="Appeal_resolveUserHome">
        <!-- END, CR00198761 -->
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="activeScheduleHearingDtls$userName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="userName"
          />
        </CONNECT>


        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="caseUserRoleID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="concernRoleID"
          />
        </CONNECT>


      </LINK>
    </FIELD>


    <FIELD LABEL="Field.Label.StartTime">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="actualFormattedStartTime"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.Location">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="activeScheduleHearingDtls$locationName"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.Status">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="activeScheduleHearingDtls$statusCode"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.HearingDate">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="scheduledDateTime"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.NotificationDate">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="noticeDate"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.EndTime">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="actualFormattedEndTime"
        />
      </CONNECT>
    </FIELD>


  </CLUSTER>


  <!-- Cluster to display narrative details of hearing -->
  <CLUSTER
    LABEL_WIDTH="40"
    SHOW_LABELS="false"
    TITLE="Cluster.Title.Narrative"
  >
    <FIELD HEIGHT="4">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="narrative"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <!-- BEGIN, CR00177494, PM -->
  <CLUSTER
    SHOW_LABELS="false"
    TITLE="Cluster.Title.Comments"
  >
    <!-- BEGIN, CR00417165, GK -->
    <FIELD
      HEIGHT="3"
      LABEL="Field.Label.Comments"
    >
      <!-- END, CR00417165 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$dtls$legalActDtls$dtls$comments"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
  <!-- END, CR00177494 -->
</PAGE>
