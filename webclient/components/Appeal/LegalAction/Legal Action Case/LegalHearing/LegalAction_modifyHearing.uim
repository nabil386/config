<!-- This Page allows users to modify hearing details                       -->
<PAGE
  PAGE_ID="LegalAction_modifyHearing"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>


  <!-- Page Title -->
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Statement"
      />
    </CONNECT>
  </PAGE_TITLE>


  <!-- Page parameter required for this page -->
  <PAGE_PARAMETER NAME="caseID"/>


  <!-- Server Interface for display bean to display hearing details -->
  <SERVER_INTERFACE
    CLASS="LegalHearing"
    NAME="DISPLAY"
    OPERATION="readLegalHearing"
    PHASE="DISPLAY"
  />
  <!-- Server Interface for action bean to modify hearing details -->
  <SERVER_INTERFACE
    CLASS="LegalHearing"
    NAME="ACTION"
    OPERATION="modifyLegalHearing"
    PHASE="ACTION"
  />


  <!-- Connection parameters required for display and action beans -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$caseID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="dtls$caseID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="DISPLAY"
      PROPERTY="legalHearingDtls$versionNo"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="versionNo"
    />
  </CONNECT>


  <!-- Action control contains save and cancel links -->
  <ACTION_SET ALIGNMENT="CENTER">
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />
  </ACTION_SET>


  <!--Cluster to enter hearing details  -->
  <CLUSTER
    NUM_COLS="2"
    TITLE="Cluster.Title.Details"
  >
    <FIELD LABEL="Field.Label.LegalCategory">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalCategoryNameCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.DocketNumber">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="docketNumber"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="docketNumber"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.CourtLocation">
      <CONNECT>
        <INITIAL
          NAME="DISPLAY"
          PROPERTY="legalActDtls$locationName"
        />
      </CONNECT>
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$locationID"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="locationID"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.StartDate">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$startDate"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="startDate"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Status">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$statusCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.LegalAction">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActionNameCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.Outcome"
      USE_BLANK="TRUE"
      USE_DEFAULT="TRUE"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="hearingOutcomeCode"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="hearingOutcomeCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.Judge"
      USE_BLANK="TRUE"
      USE_DEFAULT="TRUE"
    >
      <!-- BEGIN, CR00236827, SS -->
      <SCRIPT
        ACTION="populateJudge()"
        EVENT="ONFOCUS"
        SCRIPT_FILE="PopulateMembers.js"
      />
      <!-- END, CR00236827 -->
      <CONNECT>
        <INITIAL
          HIDDEN_PROPERTY="memberID"
          NAME="DISPLAY"
          PROPERTY="memberName"
        />
      </CONNECT>
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActDtls$dtls$adjudicateID"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="adjudicateID"
        />
      </CONNECT>
    </FIELD>


  </CLUSTER>


  <!-- Cluster to have narrative details -->
  <CLUSTER
    LABEL_WIDTH="40"
    SHOW_LABELS="false"
    TITLE="Cluster.Title.Narrative"
  >
    <!-- BEGIN, CR00414024, RB -->
    <FIELD HEIGHT="4" LABEL="Field.Label.Narrative">
    <!-- END, CR00414024 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="narrative"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="narrative"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
  <!-- BEGIN, CR00236827, SS-->
  <JSP_SCRIPTLET> 
    curam.omega3.request.RequestHandler rh =
    curam.omega3.request.RequestHandlerFactory.getRequestHandler(request); 
    
    String contextValue = rh.getSystemParameters(); 
    String judgeValue = request.getParameter("hiddenJudge_0");
    if (judgeValue == null) {
    	judgeValue = "";
    }
    
    StringBuffer strBuffpcInd = new StringBuffer();
    strBuffpcInd.append("&lt;input type='hidden' id='hiddenPageContextPath_");
    strBuffpcInd.append(0); 
    strBuffpcInd.append("' value='"); 
    strBuffpcInd.append(contextValue+"");
    strBuffpcInd.append("' /&gt;"); 
    strBuffpcInd.append("&lt;input type='hidden' name='hiddenJudge_");
    strBuffpcInd.append(0);
    strBuffpcInd.append("' value='");    
    strBuffpcInd.append(judgeValue);
    strBuffpcInd.append("' onchange='return populateJudge();' /&gt;");
    out.println(strBuffpcInd); 
  </JSP_SCRIPTLET>
  <!-- END, CR00236827 -->
</PAGE>
