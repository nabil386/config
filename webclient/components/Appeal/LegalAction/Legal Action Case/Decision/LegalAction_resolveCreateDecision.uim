<!-- This script redirects the user to the appropriate starting page when   -->
<!-- viewing a decision attachment.                                         -->
<PAGE PAGE_ID="LegalAction_resolveCreateDecision">
  <JSP_SCRIPTLET>
    

      curam.omega3.request.RequestHandler rh 
        = curam.omega3.request.RequestHandlerFactory
        .getRequestHandler(request);

      String context = request.getContextPath() + "/";
      context += curam.omega3.user.UserPreferencesFactory.getUserPreferences
        (pageContext.getSession()).getLocale() + "/";
      
      String legalActionStatus = request.getParameter("legalActionStatus");
      String legalActionID = request.getParameter("legalActionID");
      String description = request.getParameter("description");
      String url = "";
      
      if (legalActionStatus == null) {
        // BEGIN, CR00110216, SK
             core.ScriptletMissingParamException e = new
                   core.ScriptletMissingParamException(-20002, "legalActionStatus");
             System.out.println(e);
             throw e;
       // END, CR00110216
        
      }
     
     if (legalActionStatus.equals("ST02")) {
        url = context 
        + "LegalAction_cannotCreateDecisionPage.do?legalActionID=" 
        + curam.omega3.request.RequestUtils.escapeURL(legalActionID)
        + "&amp;description="
        + curam.omega3.request.RequestUtils.escapeURL(description);
        
      } else {
        url = context 
        + "LegalAction_createDecisionPage.do?legalActionID=" 
        + curam.omega3.request.RequestUtils.escapeURL(legalActionID)
        + "&amp;description="
        + curam.omega3.request.RequestUtils.escapeURL(description);
      }
      
      url += "&amp;" + rh.getSystemParameters(); 

      response.sendRedirect(response.encodeRedirectURL(url));
      
    
  </JSP_SCRIPTLET>
</PAGE>
