<!-- This Page allows users to create a new legal action -->
<PAGE
  PAGE_ID="LegalAction_selectLegalAction"
  WINDOW_OPTIONS="width=500"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="CuramUIMSchema"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Statement"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="caseID"/>


  <!-- BEGIN, CR00441076, KRK -->
  <SCRIPT
    ACTION="doCompletion('dtls$dtls$dtls$configLegalActionID','LegalAction_getLegalActionValues','caseID')"
    EVENT="ONLOAD"
    SCRIPT_FILE="AjaxCombo.js"
  />


  <SERVER_INTERFACE
    CLASS="LegalAction"
    NAME="ACTION"
    OPERATION="getLegalActionHomePageDetails"
    PHASE="ACTION"
  />


  <SERVER_INTERFACE
    CLASS="LegalAction"
    NAME="DISPLAY"
    OPERATION="listParticipantsLegalActionCategory"
    PHASE="DISPLAY"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="caseID"
    />
  </CONNECT>
  <!-- END, CR00441076 -->


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="caseID"
    />
  </CONNECT>
  <!-- Start CR00111580 AS -->
  <!-- BEGIN, CR00190255, MC -->
  <JSP_SCRIPTLET>
 
    curam.omega3.request.RequestHandler
       rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);


    String contextValue = rh.getSystemParameters();

          StringBuffer strBuffpcInd = new StringBuffer();
        strBuffpcInd.append("&lt;input type='hidden' id='hiddenPageContextPath_");
        strBuffpcInd.append(0);
        strBuffpcInd.append("' value='");
        strBuffpcInd.append(contextValue+"");
        strBuffpcInd.append("' /&gt;");
        
        
    out.println(strBuffpcInd);


    </JSP_SCRIPTLET>
  <!-- END, CR00190255, MC -->
  <!-- End CR00111580 AS -->
  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >
    <!-- BEGIN, CR00248724, SS -->
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="ActionControl.Label.Next"
      TYPE="SUBMIT"
    >
      <!-- BEGIN, CR00441076, KRK -->
      <LINK
        DISMISS_MODAL="false"
        OPEN_MODAL="true"
        PAGE_ID="LegalAction_resolvePageName"
        SAVE_LINK="false"
      >
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="configLegalActionCategoryID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="configLegalActionCategoryID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="ACTION"
            PROPERTY="configLegalActionID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="configLegalActionID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
      </LINK>
      <!-- END, CR00441076 -->
    </ACTION_CONTROL>


    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="ActionControl.Label.Cancel"
    />
  </ACTION_SET>


  <CLUSTER LABEL_WIDTH="40">
    <FIELD
      LABEL="Field.Label.LegalCategory"
      USE_BLANK="TRUE"
    >
      <SCRIPT
        ACTION="doCompletion('dtls$dtls$dtls$configLegalActionID','LegalAction_getLegalActionValues','caseID')"
        EVENT="ONCHANGE"
        SCRIPT_FILE="AjaxCombo.js"
      />
      <CONNECT>
        <INITIAL
          HIDDEN_PROPERTY="legalActionCategoryID"
          NAME="DISPLAY"
          PROPERTY="legalCategoryNameCode"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="configLegalActionCategoryID"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.LegalAction"
      USE_BLANK="TRUE"
    >


      <CONNECT>
        <INITIAL
          HIDDEN_PROPERTY="legalActionID"
          NAME="DISPLAY"
          PROPERTY="legalActionNameCode"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="configLegalActionID"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>
