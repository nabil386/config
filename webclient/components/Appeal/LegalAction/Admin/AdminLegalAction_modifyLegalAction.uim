<!-- BEGIN, CR00169111, SS -->
<PAGE
  PAGE_ID="AdminLegalAction_modifyLegalAction"
  WINDOW_OPTIONS="height=500"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file:\\Curam\CuramUIMSchema"
>
  <!-- END, CR00169111 -->


  <!-- The page title for this page -->
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title.StaticText"
      />
    </CONNECT>
  </PAGE_TITLE>


  <!-- Page parameter required for this page -->
  <PAGE_PARAMETER NAME="legalActionID"/>


  <!-- Declare the 'action' server bean -->
  <SERVER_INTERFACE
    CLASS="AdminLegalAction"
    NAME="ACTION"
    OPERATION="modifyAdminLegalAction"
    PHASE="ACTION"
  />


  <!-- Declare the 'display' server bean -->
  <SERVER_INTERFACE
    CLASS="AdminLegalAction"
    NAME="DISPLAY"
    OPERATION="getAdminLegalActionDetails"
    PHASE="DISPLAY"
  />


  <!-- connection parameters required for display and action bean -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="legalActionID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="legalActionDtls$legalActionID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="legalActionID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$legalActionID"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="DISPLAY"
      PROPERTY="legalActionDtls$creationDate"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="legalActionDtls$creationDate"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="DISPLAY"
      PROPERTY="legalActionDtls$startDate"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="legalActionDtls$startDate"
    />
  </CONNECT>
  <!--BEGIN, CR00278750, AC-->
  <CONNECT>
    <SOURCE
      NAME="DISPLAY"
      PROPERTY="legalActionDtls$recordStatusCode"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="legalActionDtls$recordStatusCode"
    />
  </CONNECT>
  <!--END, CR00278750-->


  <!-- Actionset contains Save and Canel link -->
  <ACTION_SET
    ALIGNMENT="CENTER"
    BOTTOM="true"
  >
    <ACTION_CONTROL
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL LABEL="ActionControl.Label.Cancel"/>
  </ACTION_SET>


  <!-- Cluster to get legalAction details -->
  <CLUSTER NUM_COLS="2">
    <FIELD
      LABEL="Field.Label.Name"
      USE_BLANK="true"
      USE_DEFAULT="false"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActionNameCode"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="legalActionNameCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.StartDate">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalActionDtls$startDate"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.CreatePage">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="createPage"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="createPage"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.ModifyPage">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="modifyPage"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="modifyPage"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.MultipleParticipant">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="multipleParticipantsInd"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="multipleParticipantsInd"
        />
      </CONNECT>
    </FIELD>
    <FIELD
      LABEL="Field.Label.EndDate"
      USE_DEFAULT="false"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$dtls$legalActionDtls$endDate"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="dtls$dtls$legalActionDtls$endDate"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.HomePage">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="homePage"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="homePage"
        />
      </CONNECT>
    </FIELD>


  </CLUSTER>


  <!-- Cluster to get workflow events -->
  <CLUSTER
    NUM_COLS="2"
    TITLE="Cluster.Titile.WorkflowEvents"
  >
    <FIELD LABEL="Field.Label.StartEvent">
      <CONNECT>
        <INITIAL
          NAME="DISPLAY"
          PROPERTY="startedEvent"
        />
      </CONNECT>
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="startedEvent"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="startedEvent"
        />
      </CONNECT>
    </FIELD>


    <!-- BEGIN, CR00169111, SS -->
    <FIELD
      LABEL="Field.Label.CompleteEvent"
      WIDTH="90"
    >
      <!-- END, CR00169111 -->
      <CONNECT>
        <INITIAL
          NAME="DISPLAY"
          PROPERTY="completedEvent"
        />
      </CONNECT>
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="completedEvent"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="completedEvent"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <!-- Cluster to get description -->
  <CLUSTER
    SHOW_LABELS="false"
    TITLE="Cluster.Titile.Description"
  >
    <!-- BEGIN, CR00169111, SS -->
    <FIELD>
      <!-- END, CR00169111 -->
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="comments"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="comments"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
</PAGE>
