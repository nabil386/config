<!-- This jsp redirects the user to associate the investigation cases to    -->
<!-- legal action passing the required parameters such as the case type     -->
<!-- code.                                                                  -->
<PAGE
  PAGE_ID="AdminLegalAction_resolveInvestigationCaseType"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_PARAMETER NAME="legalActionID"/>


  <JSP_SCRIPTLET>
        
        
        curam.omega3.request.RequestHandler 
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);
        
        String context = request.getContextPath() + "/";
        context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";
        
        String legalActionID = request.getParameter("legalActionID");
        String url = "";
        String caseTypeCode = "";
        
        if (null == legalActionID) {
        
        core.ScriptletMissingParamException e = new
        core.ScriptletMissingParamException(-20002, "legalActionID");
        System.out.println(e);
        throw e;
        }
        
        curam.interfaces.AdminLegalActionPkg.AdminLegalAction_listAssociatedInvestigationCase_TH 
        th = new curam.interfaces.AdminLegalActionPkg.AdminLegalAction_listAssociatedInvestigationCase_TH();
        
        th.setFieldValue(th.key$key$key$configLegalActionID_idx,legalActionID);
        th.callServer(); 
        caseTypeCode = th.getFieldValue(th.result$dtls$caseTypeCode_idx);
        
        if (null != caseTypeCode) {
        
        url = context + "AdminLegalAction_associateInvestigationCasesPage.do?configLegalActionID="
        + curam.omega3.request.RequestUtils.escapeURL(legalActionID) + 
        "&amp;caseTypeCode=" + curam.omega3.request.RequestUtils.escapeURL(caseTypeCode);
        
        }
        
        url += "&amp;" + rh.getSystemParameters();
        response.sendRedirect(response.encodeRedirectURL(url));
        
        
    </JSP_SCRIPTLET>
</PAGE>
