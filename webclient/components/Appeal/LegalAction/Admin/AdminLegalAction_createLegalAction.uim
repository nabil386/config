<!-- BEGIN, CR00237041, SS -->
<PAGE
  PAGE_ID="AdminLegalAction_createLegalAction"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file:\\Curam\CuramUIMSchema"
>


  <!-- The page title for this page -->
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title.StaticText"
      />
    </CONNECT>
  </PAGE_TITLE>


  <!-- Declare the 'action' server bean -->
  <SERVER_INTERFACE
    CLASS="AdminLegalAction"
    NAME="ACTION"
    OPERATION="createAdminLegalAction"
    PHASE="ACTION"
  />


  <!-- Actionset contains Save,SaveAndNew and Cancel link -->
  <ACTION_SET
    ALIGNMENT="CENTER"
    BOTTOM="true"
  >
    <ACTION_CONTROL
      LABEL="ActionControl.Label.Save"
      TYPE="SUBMIT"
    />
    <ACTION_CONTROL
      LABEL="ActionControl.Label.SaveAndNew"
      TYPE="SUBMIT"
    >
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="AdminLegalAction_createLegalAction"
        SAVE_LINK="false"
      />
    </ACTION_CONTROL>
    <ACTION_CONTROL LABEL="ActionControl.Label.Cancel">
    </ACTION_CONTROL>
  </ACTION_SET>


  <!-- Cluster for legal action details to create a new legal action -->
  <CLUSTER NUM_COLS="2">
    <FIELD
      LABEL="Field.Label.Name"
      USE_BLANK="true"
      USE_DEFAULT="false"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="legalActionNameCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.StartDate">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="legalActionDtls$startDate"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.CreatePage">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="createPage"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.MultipleParticipant">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="multipleParticipantsInd"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.HomePage">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="homePage"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.ModifyPage">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="modifyPage"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <!-- Cluster for workflow events -->
  <CLUSTER
    NUM_COLS="2"
    TITLE="Cluster.Titile.WorkflowEvents"
  >
    <!-- BEGIN, CR00169111, SS -->
    <FIELD LABEL="Field.Label.StartEvent">


      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="startedEvent"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.CompleteEvent">
      <!-- END, CR00169111 -->
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="completedEvent"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <!-- Cluster to get description -->
  <CLUSTER
    SHOW_LABELS="false"
    TITLE="Cluster.Titile.Description"
  >
    <FIELD>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="comments"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
  <!-- END, CR00237041 -->
</PAGE>
