<PAGE
  PAGE_ID="AdminLegalStatus_listAssoLegalStatuses"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file:\\Curam\CuramUIMSchema"
>


  <!-- The page title for this page -->
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title.StaticText"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="caseTypeCode"/>
  <PAGE_PARAMETER NAME="relatedID"/>


  <!-- Declare the 'display' server bean -->
  <SERVER_INTERFACE
    CLASS="AdminLegalStatus"
    NAME="DISPLAY"
    OPERATION="listAllSelectedLegalStatuses"
    PHASE="DISPLAY"
  />


  <!-- connection parameters required for display bean -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseTypeCode"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="associatedCaseTypeCode"
    />
  </CONNECT>
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="relatedID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="relatedID"
    />
  </CONNECT>


  <!-- Actionset contains New link to create legal action -->
  <ACTION_SET
    ALIGNMENT="LEFT"
    BOTTOM="false"
  >
    <ACTION_CONTROL LABEL="ActionControl.Label.New">
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="AdminLegalStatus_associateCaseType"
      >
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="relatedID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="relatedID"
          />
        </CONNECT>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="caseTypeCode"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseTypeCode"
          />
        </CONNECT>
      </LINK>
    </ACTION_CONTROL>
  </ACTION_SET>


  <!-- List fields on this page -->
  <LIST WIDTH="50">
    <FIELD LABEL="Field.Label.LegalStatus">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="legalStatusTypeCode"
        />
      </CONNECT>
    </FIELD>
  </LIST>


</PAGE>
