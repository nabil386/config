<!-- Screen for creating legal status for a participant from a case         -->
<PAGE PAGE_ID="LegalStatus_createLegalStatusFromCase">
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.Statement"
      />
    </CONNECT>
  </PAGE_TITLE>


  <PAGE_PARAMETER NAME="caseID"/>


  <SERVER_INTERFACE
    CLASS="LegalStatus"
    NAME="DISPLAY"
    OPERATION="listLegalStatusConfigForCaseType"
    PHASE="DISPLAY"
  />


  <!-- BEGIN, CR00236544, AK -->
  <!-- BEGIN, CR00440532, MP -->


  <SERVER_INTERFACE
    CLASS="IntegratedCase"
    NAME="CASEMEMBERS"
    OPERATION="listActiveCaseMembers"
  />
  <!-- END, CR00440532 -->
  <!-- END, CR00236544 -->


  <SERVER_INTERFACE
    CLASS="LegalStatus"
    NAME="ACTION"
    OPERATION="createLegalStatusFromCase"
    PHASE="ACTION"
  />


  <!-- BEGIN, CR00407985, SG -->
  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="ACTION"
      PROPERTY="caseIDOpt"
    />
  </CONNECT>
  <!-- END, CR00407985 -->


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="CASEMEMBERS"
      PROPERTY="key$caseID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="caseID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$caseID"
    />
  </CONNECT>


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="FALSE"
  >
    <ACTION_CONTROL
      IMAGE="SaveButton"
      LABEL="Control.Label.Save"
      TYPE="SUBMIT"
    />


    <ACTION_CONTROL
      IMAGE="CancelButton"
      LABEL="Control.Label.Cancel"
      TYPE="ACTION"
    />
  </ACTION_SET>


  <CLUSTER NUM_COLS="2">
    <FIELD
      LABEL="Field.Label.CaseMember"
      USE_BLANK="true"
      USE_DEFAULT="false"
    >
      <CONNECT>
        <INITIAL
          HIDDEN_PROPERTY="caseParticipantRoleID"
          NAME="CASEMEMBERS"
          PROPERTY="result$participantList$name"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="caseParticipantRoleID"
        />
      </CONNECT>
    </FIELD>


    <FIELD
      LABEL="Field.Label.LegalStatus"
      USE_BLANK="true"
      USE_DEFAULT="true"
    >
      <CONNECT>
        <INITIAL
          HIDDEN_PROPERTY="legalStatusID"
          NAME="DISPLAY"
          PROPERTY="legalStatusDesc"
        />
      </CONNECT>
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="legalStatusID"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.StartDate">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="startDate"
        />
      </CONNECT>
    </FIELD>
    <FIELD CONTROL="SKIP"/>
    <FIELD LABEL="Field.Label.LegalAction">
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="caseLegalActionID"
        />
      </CONNECT>
      <LINK>
        <CONNECT>
          <SOURCE
            NAME="PAGE"
            PROPERTY="caseID"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="caseID"
          />
        </CONNECT>
      </LINK>
    </FIELD>
    <FIELD
      LABEL="Field.Label.EndDate"
      USE_BLANK="true"
      USE_DEFAULT="false"
    >
      <CONNECT>
        <TARGET
          NAME="ACTION"
          PROPERTY="endDate"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>
</PAGE>
