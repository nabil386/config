<!-- Reads an Appeal hearings details.                                      -->
<PAGE
  PAGE_ID="Appeal_hearingReviewHearingHomeTabDetails"
  TYPE="DETAILS"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="contextDescription"
      />
    </CONNECT>
  </PAGE_TITLE>


  <TAB_NAME>
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="contextDescription"
      />
    </CONNECT>
  </TAB_NAME>


  <SERVER_INTERFACE
    CLASS="HearingTab"
    NAME="DISPLAY"
    OPERATION="readHearingTabDetail"
    PHASE="DISPLAY"
  />


  <PAGE_PARAMETER NAME="hearingID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="hearingID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="hearingID"
    />
  </CONNECT>


  <CLUSTER>
    <FIELD LABEL="Field.Label.HearingType">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="hearingTypeCode"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.HearingStatus">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="hearingStatusCode"
        />
      </CONNECT>
    </FIELD>
    <CONTAINER LABEL="Container.Label.Case">
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="caseTypeCode"
          />
        </CONNECT>
      </FIELD>
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="appealTypeCode"
          />
        </CONNECT>
      </FIELD>
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="caseReference"
          />
        </CONNECT>
      </FIELD>
    </CONTAINER>


    <FIELD LABEL="Field.Label.ScheduledDateTime">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="scheduledDateTime"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <LIST>
    <FIELD LABEL="Field.Label.HearingReviewer">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="hearingOfficialFullName"
        />
      </CONNECT>
      <LINK
        OPEN_MODAL="true"
        PAGE_ID="Organization_viewUserDetails"
      >
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="hearingOfficialUserName"
          />
          <TARGET
            NAME="PAGE"
            PROPERTY="userName"
          />
        </CONNECT>
      </LINK>
    </FIELD>
  </LIST>


</PAGE>
