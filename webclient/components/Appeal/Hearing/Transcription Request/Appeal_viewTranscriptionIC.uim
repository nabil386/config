<!-- Description -->
<!-- =========== -->
<!-- This page allows user to view transcription requests for an Integrated -->
<!-- Case.                                                                  -->
<PAGE
  PAGE_ID="Appeal_viewTranscriptionIC"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="Page.Title"
      />
    </CONNECT>
  </PAGE_TITLE>


  <SERVER_INTERFACE
    CLASS="HearingTranscription"
    NAME="DISPLAY"
    OPERATION="readRequest"
    PHASE="DISPLAY"
  />


  <PAGE_PARAMETER NAME="contextDescription"/>
  <PAGE_PARAMETER NAME="hearingTranscriptionRequestID"/>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="hearingTranscriptionRequestID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="hearingTranscriptionRequestID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="hearingTranscriptionRequestID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="hearingTranscriptionRequestID"
    />
  </CONNECT>


  <CLUSTER
    LABEL_WIDTH="45"
    NUM_COLS="2"
  >
    <FIELD LABEL="Field.Label.DocumentReference">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="fileReferenceNumber"
        />
      </CONNECT>
    </FIELD>


    <CONTAINER LABEL="Field.Label.AttachedFile">
      <FIELD>
        <CONNECT>
          <SOURCE
            NAME="DISPLAY"
            PROPERTY="attachmentName"
          />
        </CONNECT>
      </FIELD>


      <ACTION_CONTROL
        LABEL="ActionControl.Label.View"
        TYPE="FILE_DOWNLOAD"
      >
        <LINK>
          <CONNECT>
            <SOURCE
              NAME="DISPLAY"
              PROPERTY="attachmentID"
            />
            <TARGET
              NAME="PAGE"
              PROPERTY="attachmentID"
            />
          </CONNECT>
        </LINK>
      </ACTION_CONTROL>
    </CONTAINER>


    <FIELD LABEL="Field.Label.DateSentToTranscriber">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="dateSentToTranscriber"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.DateSentToRequester">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="dateSentToRequester"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.DateReceivedFromTranscriber">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="dateReceivedFromTranscriber"
        />
      </CONNECT>
    </FIELD>


    <FIELD LABEL="Field.Label.DocumentLocation">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="fileLocation"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


  <CLUSTER
    SHOW_LABELS="false"
    TITLE="Cluster.Title.Comments"
  >
    <FIELD
      HEIGHT="4"
      LABEL="Field.Label.Comments"
    >
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="comments"
        />
      </CONNECT>
    </FIELD>
  </CLUSTER>


</PAGE>
