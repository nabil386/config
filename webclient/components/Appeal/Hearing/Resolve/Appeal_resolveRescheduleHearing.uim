<!-- This script redirects the user to an appropriate reschedule hearing    -->
<!-- page.                                                                  -->
<PAGE
  PAGE_ID="Appeal_resolveRescheduleHearing"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>


    curam.omega3.request.RequestHandler rh = curam.omega3.request
        .RequestHandlerFactory.getRequestHandler(request);

   String context = request.getContextPath() + "/";
    context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/";

    String hearingID = request.getParameter("hearingID");

    curam.interfaces.HearingPkg.Hearing_getSummaryDetailsOnIC_TH
      th = new curam.interfaces.HearingPkg.Hearing_getSummaryDetailsOnIC_TH();
    
    th.setFieldValue(th.key$hearingKey_bo$hearingKey$hearingID_idx,hearingID);    
    th.callServer();
    String typeCode = th.getFieldValue(th.result$hearingSummaryDetails$typeCode_idx);
    String locationType = th.getFieldValue(th.result$hearingSummaryDetails$locationType_idx);
    String versionNo = th.getFieldValue(th.result$hearingSummaryDetails$versionNo_idx);
    String pageDescription = th.getFieldValue(th.result$appealContextDescription$description_idx);
    String scheduleType="reschedule";
    String url="";
    
    url =context + "Appeal_resolveHearingTypeForICPage.do?typeCode="+curam.omega3.request.RequestUtils.escapeURL(typeCode)
    +"&amp;locationType="+curam.omega3.request.RequestUtils.escapeURL(locationType)
    +"&amp;versionNo="+curam.omega3.request.RequestUtils.escapeURL(versionNo)
    +"&amp;scheduleType="+curam.omega3.request.RequestUtils.escapeURL(scheduleType)
    +"&amp;hearingID="+curam.omega3.request.RequestUtils.escapeURL(hearingID)
    +"&amp;pageDescription="+curam.omega3.request.RequestUtils.escapeURL(pageDescription);

    url += "&amp;" + rh.getSystemParameters();
    response.sendRedirect(response.encodeRedirectURL(url));


  </JSP_SCRIPTLET>
</PAGE>
