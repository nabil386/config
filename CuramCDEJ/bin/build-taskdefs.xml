<!-- =================== Custom Ant task definitions =================== -->
<!-- =================================================================== -->

<project name="build-taskdefs">

  <taskdef resource="net/sf/antcontrib/antlib.xml">
    <classpath>
      <pathelement location="${dir.cde.lib.ext}/jar/ant-contrib.jar"/>
    </classpath>
  </taskdef>

  <taskdef name="transform" 
           classname="curam.util.common.ant.Transform">
    <classpath>
      <pathelement location="${jar.jde.commons}"/>
    </classpath>
  </taskdef>
  
  <taskdef name="componentorder"
           classname="curam.omega3.xml.generator.GetComponentOrder"
           classpathref="taskdef.cp"/>

  <taskdef name="stage"
           classname="curam.omega3.xml.generator.StagingTask"
           classpathref="taskdef.cp"/>

  <taskdef name="processUim"
           classname="curam.omega3.xml.generator.GenerateDirTask"
           classpathref="taskdef.cp"/>
	
	<taskdef name="processJSProperties"
	           classname="curam.omega3.xml.generator.ProcessJSPropertiesTask"
	           classpathref="taskdef.cp"/>

  <taskdef name="generatethemes"
           classname="curam.omega3.anttasks.GenerateThemes"
           classpathref="taskdef.cp"/>

  <taskdef name="generatetexthelpers"
           classname="curam.util.client.generator.GenerateTextHelpersTask"
           classpathref="taskdef.cp"/>

  <taskdef name="updateBuildSettingsWithModulePaths"
           classname="curam.omega3.anttasks.UpdateBuildSettingsWithModulePaths"
           classpathref="taskdef.cp"/>
       
  <taskdef name="getLocalePreloadModule"
           classname="curam.omega3.anttasks.GetLocalePreloadModule"
           classpathref="taskdef.cp"/>
	
	<taskdef name="dojoLocalizationWorkaround"
	         classname="curam.omega3.anttasks.DojoLocalizationWorkaroundTask"
	         classpathref="taskdef.cp"/>
</project>
