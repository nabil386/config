<server description="Server endpoint configuration">

  <httpEndpoint id="defaultHttpEndpoint" enabled="false"/>
 
  <httpOptions id="defaultHttpOptions"
    keepAliveEnabled="${%curam.transportchain.http.keepalive.enabled%}"
    persistTimeout="${%curam.transportchain.http.keepalive.timeout%}"
  />

  <httpEndpoint id="clientEndpoint" httpsPort="${%curam.client.httpport%}" host="*"/>
  <httpEndpoint id="webservicesEndpoint" httpPort="${%curam.webservices.httpport%}" host="*"/>

  <virtualHost id="client_host">
    <hostAlias>*:${%curam.client.httpport%}</hostAlias>
    <hostAlias>*:443</hostAlias>
  </virtualHost>

  <virtualHost id="webservices_host">
    <hostAlias>*:${%curam.webservices.httpport%}</hostAlias>
    <hostAlias>*:80</hostAlias>
  </virtualHost>

  <pluginConfiguration httpEndpointRef="clientEndpoint" webserverName="${%curam.webserver.name%}" />
</server>
