<?xml version="1.0" encoding="UTF-8"?>
<wsdl:definitions targetNamespace="http://remote.externalservices.workspaceservices.curam"
    xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" 
    xmlns:ns="http://remote.externalservices.workspaceservices.curam" 
    xmlns:http="http://schemas.xmlsoap.org/wsdl/http/" 
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/" 
    xmlns:ns1="http://org.apache.axis2/xsd" 
    xmlns:soap12="http://schemas.xmlsoap.org/wsdl/soap12/" 
    xmlns:wsaw="http://www.w3.org/2006/05/addressing/wsdl" 
    xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
    xmlns:mime="http://schemas.xmlsoap.org/wsdl/mime/"
    xmlns:le="http://www.curamsoftware.com/WorkspaceServices/LifeEvent">

    <wsdl:types>
        <xsd:schema>
            <xsd:import schemaLocation="LifeEvent.xsd"
                namespace="http://www.curamsoftware.com/WorkspaceServices/LifeEvent"/>
        </xsd:schema>
    </wsdl:types>

    <wsdl:message name="receiveLifeEventRequest">
        <wsdl:part name="parameters"
            element="le:receiveLifeEvent"/>
    </wsdl:message>           

    <wsdl:message name="receiveLifeEventResponse">
        <wsdl:part name="parameters" 
            element="le:receiveLifeEventResponse" />
    </wsdl:message>   
    
    <wsdl:message name="receiveLifeEventFault">
        <wsdl:part name="parameters"
            element="le:receiveLifeEventFault"/>
    </wsdl:message>

    <wsdl:portType name="LifeEventPortType">
        
        <wsdl:operation name="receiveLifeEvent">
            <wsdl:input message="ns:receiveLifeEventRequest" wsaw:Action="urn:receiveLifeEvent"/>
            <wsdl:output message="ns:receiveLifeEventResponse" wsaw:Action="urn:receiveLifeEventResponse"/>
            <wsdl:fault message="ns:receiveLifeEventFault" name="receiveLifeEventFault" wsaw:Action="urn:receiveLifeEventFault"/>
        </wsdl:operation>
        
    </wsdl:portType>

    <wsdl:binding name="LifeEventSoap11Binding" type="ns:LifeEventPortType">
        
        <soap:binding transport="http://schemas.xmlsoap.org/soap/http" style="document"/>
        
        <wsdl:operation name="receiveLifeEvent">
            <soap:operation soapAction="urn:receiveLifeEvent" style="document"/>
            <wsdl:input>
                <soap:body use="literal"/>
            </wsdl:input>
            <wsdl:output>
                <soap:body use="literal"/>
            </wsdl:output>
            <wsdl:fault name="receiveLifeEventFault">
                <soap:fault use="literal" name="receiveLifeEventFault"/>
            </wsdl:fault>
        </wsdl:operation>  
    </wsdl:binding>

    <wsdl:binding name="LifeEventSoap12Binding" type="ns:LifeEventPortType">
        <soap12:binding transport="http://schemas.xmlsoap.org/soap/http" style="document"/>
        
        <wsdl:operation name="receiveLifeEvent">
            <soap12:operation soapAction="urn:receiveLifeEvent" style="document"/>
            <wsdl:input>
                <soap12:body use="literal"/>
            </wsdl:input>
            <wsdl:output>
                <soap12:body use="literal"/>
            </wsdl:output>
            <wsdl:fault name="receiveLifeEventFault">
                <soap12:fault use="literal" name="receiveLifeEventFault"/>
            </wsdl:fault>
        </wsdl:operation>
    </wsdl:binding>        

    <wsdl:binding name="LifeEventHttpBinding" type="ns:LifeEventPortType">
        <http:binding verb="POST"/>
        
        <wsdl:operation name="receiveLifeEvent">
            <http:operation location="LifeEvent/receiveLifeEvent"/>
            <wsdl:input>
                <mime:content type="text/xml" part="receiveLifeEvent"/>
            </wsdl:input>
            <wsdl:output>
                <mime:content type="text/xml" part="receiveLifeEvent"/>
            </wsdl:output>
        </wsdl:operation>
    </wsdl:binding>    

    <!-- the location of the web service is read from the TargetSystem configuration 
        entity, not from the WSDL  -->
    <wsdl:service name="LifeEvent">
        
        <wsdl:port name="LifeEventHttpSoap11Endpoint" 
            binding="ns:LifeEventSoap11Binding">
            <soap:address location="http://www.ValueSpecifiedInConfiguration.com"/>
        </wsdl:port>
        
        <wsdl:port name="LifeEventHttpSoap12Endpoint" 
            binding="ns:LifeEventSoap12Binding">
            <soap12:address location="http://www.ValueSpecifiedInConfiguration.com"/>
        </wsdl:port>      
        
        <wsdl:port name="LifeEventHttpEndpoint" binding="ns:LifeEventHttpBinding">
            <http:address location="http://www.ValueSpecifiedInConfiguration.com"/>
        </wsdl:port>                
        
    </wsdl:service>
</wsdl:definitions>
