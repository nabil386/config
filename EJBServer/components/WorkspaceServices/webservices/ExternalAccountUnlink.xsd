<!-- Webservice to unlink an account in the Citizen Workspace from a client on a remote (source) system -->
<xs:schema targetNamespace="http://www.curamsoftware.com/WorkspaceServices/ExternalAccountUnlink"
    xmlns:tns="http://www.curamsoftware.com/WorkspaceServices/ExternalAccountUnlink"
    xmlns:xs="http://www.w3.org/2001/XMLSchema">
    
    <xs:element name="AccountUnlink">
        <xs:complexType>
            <xs:all>
                
                <!-- The source system -->
                <xs:element name="sourceSystem" type="tns:nonEmptyString"/>
                
                <!-- The unique id of the citizen account to be unlinked -->
                <xs:element name="citizenWorkspaceAccountID" type="xs:long" />
                
            </xs:all>
        </xs:complexType>
    </xs:element> 
    
    <xs:simpleType name="nonEmptyString">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
        </xs:restriction>
    </xs:simpleType>
    
</xs:schema> 

