<?xml version="1.0" encoding="UTF-8"?>
<RuleSet name="PDCContactPreferencesDataRuleSet">
  <Class
    extends="ActiveSuccessionSet"
    extendsRuleSet="PropagatorRuleSet"
    name="PDCContactPreferences"
  >
    <Annotations>
      <SuccessionSetPopulation/>
    </Annotations>
    <Attribute name="preferredCommunication">
      <Annotations/>
      <type>
        <javaclass name="curam.creole.value.Timeline">
          <codetableentry table="CommunicationMethod"/>
        </javaclass>
      </type>
      <derivation>
        <specified/>
      </derivation>
    </Attribute>
    <!-- ADO-14023:Start added new communication method   -->
    <Attribute name="preferredCommunicationMethod">
      <Annotations/>
      <type>
      <javaclass name="curam.creole.value.Timeline">
        <codetableentry table="BDMCorrespondanceDelivery"/>
        </javaclass>
      </type>
      <derivation>
        <null/>
      </derivation>
    </Attribute>
    <!-- ADO-14023:End added new communication method   -->
    <Attribute name="preferredLanguage">
      <Annotations/>
      <type>
        <javaclass name="curam.creole.value.Timeline">
          <codetableentry table="Language"/>
        </javaclass>
      </type>
      <derivation>
        <specified/>
      </derivation>
    </Attribute>
     <!--ADA-9375, Start  -->
    <Attribute name="preferredOralLanguage">
      <Annotations/>
      <type>
      <javaclass name="curam.creole.value.Timeline">
        <codetableentry table="BDMLanguage"/>
        </javaclass>
      </type>
      <derivation>
        <null/>
      </derivation>
    </Attribute>
     <Attribute name="preferredWrittenLanguage">
      <Annotations/>
      <type>
      <javaclass name="curam.creole.value.Timeline">
        <codetableentry table="BDMLanguage"/>
        </javaclass>
      </type>
      <derivation>
        <null/>
      </derivation>
    </Attribute>
    <Attribute name="description">
      <type>
        <javaclass name="curam.creole.value.Message"/>
      </type>
      <derivation>
        <ResourceMessage
          key="DynamicEvidenceSuccessionSet.description"
          resourceBundle="curam.dynamicevidence.cer.rules.InfrastructureRules"
        >
          <reference attribute="successionID"/>
        </ResourceMessage>
      </derivation>
    </Attribute>
    <Attribute name="participant">
      <Annotations/>
      <type>
        <javaclass name="java.lang.Number"/>
      </type>
      <derivation>
        <specified/>
      </derivation>
    </Attribute>
    <Attribute name="related_participant">
      <Annotations/>
      <type>
        <ruleclass
          name="CaseParticipantRole"
          ruleset="CaseEntitiesRuleSet"
        />
      </type>
      <derivation>
        <reference attribute="caseParticipantRoleRecord">
          <create
            ruleclass="CaseParticipantRoleCalculator"
            ruleset="DynamicEvidenceRuleSet"
          >
            <reference attribute="participant"/>
          </create>
        </reference>
      </derivation>
    </Attribute>
  </Class>
</RuleSet>
