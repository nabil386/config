<RuleSet name="BDMAttestationRuleSet">
	<Class extends="DynamicEvidence" extendsRuleSet="DynamicEvidenceRuleSet" name="BDMAttestation">
        <Attribute name="attestationPeriodStartDate">
            <Annotations><Label label-id="attestationPeriodStartDate" name="The start of the period covered." /></Annotations>
            <type>
                <javaclass name="curam.util.type.Date" />
            </type>
            <derivation>
                <specified />
            </derivation>
        </Attribute>
        <Attribute name="isEligible">
            <Annotations><Label label-id="isEligible" name="True if the attestee has recorded that they are eligible for the period." /></Annotations>
            <type>
                <javaclass name="java.lang.Boolean" />
            </type>
            <derivation>
                <specified />
            </derivation>
        </Attribute>
        <Attribute name="attestationType">
			<Annotations />
			<type>
				<codetableentry table="BDMAttestationType" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>
        <Attribute name="attestee">
            <Annotations><Label label-id="attestee" name="The person attesting to their qualifying answers being truthful." /></Annotations>
            <type>
                <javaclass name="java.lang.Number" />
            </type>
            <derivation>
                <specified />
            </derivation>
        </Attribute>
        <Attribute name="related_attestee">
            <Annotations><Label label-id="attestee" name="The person attesting to their qualifying answers being truthful." /></Annotations>
            <type>
                <ruleclass name="CaseParticipantRole" ruleset="CaseEntitiesRuleSet" />
            </type>
            <derivation>
                <reference attribute="caseParticipantRoleRecord">
                    <create ruleclass="CaseParticipantRoleCalculator" ruleset="DynamicEvidenceRuleSet">
                        <reference attribute="attestee" />
                    </create>
                </reference>
            </derivation>
        </Attribute>
    </Class>
</RuleSet>