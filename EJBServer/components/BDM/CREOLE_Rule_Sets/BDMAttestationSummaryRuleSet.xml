<?xml version="1.0" encoding="UTF-8"?><RuleSet xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="BDMAttestationSummaryRuleSet" xsi:noNamespaceSchemaLocation="http://www.curamsoftware.com/CreoleRulesSchema.xsd">
	<Class extends="DefaultEvidenceSummary" extendsRuleSet="EvidenceSummaryRuleSet" name="BDMAttestationSummary">
		
		<!-- Evidence Information -->
		<Attribute name="evidence">
			<type>
				<ruleclass name="BDMAttestation" ruleset="BDMAttestationRuleSet"/>
			</type>
			<derivation>
				<specified/>
			</derivation>
		</Attribute>

		<!-- Message Preparation -->
		<Attribute name="summary">
			<type>
				<javaclass name="curam.creole.value.Message"/>
			</type>
			<derivation>
				<choose>
					<type>
						<javaclass name="curam.creole.value.Message"/>
					</type>
					
					<!-- Message: Attestation Type value is Client Submitted Stimulus Application -->
					<when>
						<condition>
							<reference attribute="hasAttestationTypeClientSubmittedStimulusApplication"/>
						</condition>
						<value>
							<ResourceMessage key="summaryMessage1" resourceBundle="curam.bdm.pdc.rules.BDMAttestationSummary">
							</ResourceMessage>
						</value>
					</when>
					
					<otherwise>
						<value>
							<ResourceMessage key="summaryMessage2" resourceBundle="curam.bdm.pdc.rules.BDMAttestationSummary">
									<reference attribute="attestationType">
										  <reference attribute="evidence"/>
									</reference>
							</ResourceMessage>
						</value>
					</otherwise>
				</choose>
			</derivation>
		</Attribute>
		
		<!-- Confirm Attestation Type value is Client Submitted Stimulus Application -->
		<Attribute name="hasAttestationTypeClientSubmittedStimulusApplication">
			<type>
				<javaclass name="Boolean"/>
			</type>
			<derivation>
				<all>
					<fixedlist>
						<listof>
							<javaclass name="Boolean"/>
						</listof>
						<members>
							<equals>
								<reference attribute="attestationType">
									<reference attribute="evidence"/>
								</reference>
								<Code table="BDMAttestationType">
									<String value="BDMAT80000"/>
								</Code>
	
							</equals>
						</members>
					</fixedlist>
				</all>
			</derivation>
		</Attribute>
		
		

	</Class>
</RuleSet>