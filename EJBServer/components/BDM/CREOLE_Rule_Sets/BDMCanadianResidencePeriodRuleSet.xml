<?xml version="1.0" encoding="UTF-8"?>
<!-- 90018 DEV: Evidence- creditable residency period in Canada -->
<RuleSet name="BDMCanadianResidencePeriodRuleSet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.curamsoftware.com/CreoleRulesSchema.xsd">

	<Class name="BDMCanadianResidencePeriod" extends="DynamicEvidence"
		extendsRuleSet="DynamicEvidenceRuleSet">

		<Attribute name="caseParticipantRole">
			<type>
				<javaclass name="java.lang.Number" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

        <Attribute name="residenceType">
            <type>
                <codetableentry table="BDMResidenceType" />
            </type>
            <derivation>
                <specified />
            </derivation>
        </Attribute>

		<Attribute name="startDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="endDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>
        
        <Attribute name="resolution">
            <type>
                <codetableentry table="BDMIssueResolution" />
            </type>
            <derivation>
                <specified />
            </derivation>
        </Attribute>
        
		<Attribute name="related_caseParticipantRole">
			<type>
				<ruleclass name="CaseParticipantRole"
					ruleset="CaseEntitiesRuleSet" />
			</type>
			<derivation>
				<reference attribute="caseParticipantRoleRecord">
					<create ruleclass="CaseParticipantRoleCalculator"
						ruleset="DynamicEvidenceRuleSet">
						<reference attribute="caseParticipantRole" />
					</create>
				</reference>
			</derivation>
		</Attribute>

	</Class>

</RuleSet>