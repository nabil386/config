<RuleSet name="BDMAttestationDataRuleSet">
	<Class extends="ActiveSuccessionSet" extendsRuleSet="PropagatorRuleSet" name="BDMAttestation">
        <Annotations>
            <SuccessionSetPopulation startDateAttribute="attestationPeriodStartDate" />
        </Annotations>
        <Attribute name="attestationPeriodStartDate">
            <Annotations><Label label-id="attestationPeriodStartDate" name="The start date time of the period covered." /></Annotations>
            <type>
                <javaclass name="curam.util.type.Date" />
            </type>
            <derivation>
                <specified />
            </derivation>
        </Attribute>
        <Attribute name="isEligible">
            <Annotations><Label label-id="isEligible" name="True if the attestee has recorded that they are eligible for the period." /></Annotations>
            <type>
            	<javaclass name="java.lang.Boolean" />
            </type>
            <derivation>
                <specified />
            </derivation>
        </Attribute>
        <Attribute name="attestationType">
			<Annotations />
			<type>
				<codetableentry table="BDMAttestationType" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>
        <Attribute name="description">
            <type>
                <javaclass name="curam.creole.value.Message" />
            </type>
            <derivation>
                <ResourceMessage key="DynamicEvidenceSuccessionSet.description" resourceBundle="curam.dynamicevidence.cer.rules.InfrastructureRules">
                    <reference attribute="successionID" />
                </ResourceMessage>
            </derivation>
        </Attribute>
        <Attribute name="attestee">
            <Annotations><Label label-id="attestee" name="The person attesting to their qualifying answers being truthful." /></Annotations>
            <type>
                <javaclass name="java.lang.Number" />
            </type>
            <derivation>
                <specified />
            </derivation>
        </Attribute>
        <Attribute name="related_attestee">
            <Annotations><Label label-id="attestee" name="The person attesting to their qualifying answers being truthful." /></Annotations>
            <type>
                <ruleclass name="CaseParticipantRole" ruleset="CaseEntitiesRuleSet" />
            </type>
            <derivation>
                <reference attribute="caseParticipantRoleRecord">
                    <create ruleclass="CaseParticipantRoleCalculator" ruleset="DynamicEvidenceRuleSet">
                        <reference attribute="attestee" />
                    </create>
                </reference>
            </derivation>
        </Attribute>
    </Class>
</RuleSet>