<?xml version="1.0" encoding="UTF-8"?>

<project name="bdm_release" default="bdm.dbscripts.release">

  <!--  ***********************  -->
  <!--  ***  R E L E A S E  ***  -->
  <!--  ***********************  -->
  <target name="bdm.dbscripts.release" description="Include DBScripts folder">
    <antcall target="dispmsg"><param name="prm.msg" value="Including DBScripts in release"/></antcall>
    <property name="dir.base.dbscripts" value="${base.dir}/DBScripts"/>

    <!-- Copy DBScripts into release folder -->
    <copy todir="${dir.release}/DBScripts" includeEmptyDirs="false" >
      <fileset dir="${dir.base.dbscripts}" >
      </fileset>
    </copy>

    <!-- Copy component level changelog files -->
    <copy todir="${dir.release}/components" includeEmptyDirs="false">
      <fileset dir="${dir.base.components}" >
        <include name="*/dbscripts/**" />
        <include name="BDM/script/**"/>
      </fileset>
    </copy>
  </target>

   <!-- Copy BDMDeploy.xml into release folder -->
  <target name="bdm.deployxml.release" description="Include BDMDeploy.xml">
    <antcall target="dispmsg"><param name="prm.msg" value="Including BDMDeploy.xml in release"/></antcall>
     <copy todir="${dir.release}" >
       <fileset dir="${base.dir}" >
          <include name="BDMDeploy.xml" />
       </fileset>
     </copy>
  </target>

</project>

