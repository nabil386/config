<?xml version="1.0" encoding="UTF-8"?>

<api>
  <version
    number="v1"
  >

    <!-- BDM configuration for the Universal Access. -->

    <!-- BEGIN - USER STORY 999 - PN - provide more detal for submitted applications -->
    <resource path="/ua/bdm_submitted_applications" >
      <method verb="GET">
        <facade
          class="BDMUAApplicationCardAPI"
          method="listSubmittedApplications"
        />
        <tags>
          <tag>Universal Access</tag>
        </tags>
      </method>
    </resource>
    <!-- END - USER STORY 999 - PN - provide more detal for submitted applications -->
    
    <!-- BEGIN - TASK 9862 - Expose BDMWSAddressAPI for Client portal -->
    <resource path="/ua/bdm/address/search" >
      <method verb="GET">
        <facade
          class="BDMWSAddressAPI"
          method="searchAddress"
        />
        <tags>
          <tag>Universal Access</tag>
        </tags>
      </method>
    </resource>
    <!-- END - TASK 9862 - Expose BDMWSAddressAPI for Client portal -->

    
    <!-- BEGIN - TASK 10101 - Correspondance is notice read -->
    <resource path="/ua/bdm/communications/">
      <!-- Search for a list of communication records -->
      <method verb="GET">
        <facade
          class="BDMUACommunicationAPI"
          method="listCommunications"
        />
        <tags>
          <tag>Universal Access - Communication Record list </tag>
        </tags>
      </method>
    </resource>

    <resource path="/ua/bdm/communications/{communication_id}">
      <!-- Retrieve a communication record-->
      <method verb="GET">
        <facade
          class="BDMUACommunicationAPI"
          method="getCommunication"
        />
        <tags>
          <tag>Universal Access - Communication Details</tag>
        </tags>
      </method>
    </resource>
    <!-- END - TASK 10101 - Correspondance is notice read -->
    
    
       <!-- BEGIN - TASK 10104 - Search  Correspondance  -->
    <resource path="/ua/bdm/communications/searchCommunication" >
      <method verb="GET">
        <facade
          class="BDMUACommunicationAPI"
          method="searchCommunication"
        />

        <tags>
          <tag>Universal Access - Search Communications</tag>
        </tags>
      </method>
    </resource>

    <!-- END - TASK 10104 - Search Correspondance -->
    
    <!-- Start: Bug: 122434 - Added new rest API to download correspondences via CCT -->
    <resource path="/ua/bdm/communications/{communicationID}/attachments/{trackingNumber}">
      <!-- Retrieve a communication attachment record-->
      <method verb="GET">
         <produces>
          <type>application/octet-stream</type>
        </produces>
        <facade class="BDMUACommunicationAPI" method="downloadCommunicationAttachment"/>
        <tags>
          <tag>Universal Access - download communication attachment</tag>
        </tags>
      </method>
    </resource>
    <!--  End: Bug: 122434-->
    
    
	<!-- BEGIN - Task 12797 - ExposeRESTForDECD -->
    <resource path="/interface/bdm/submitted_applications" >
      <method verb="GET">
        <facade
          class="BDMDECDApplicationAPI"
          method="listSubmittedApplications"
        />
        <tags>
          <tag>DECD Interface - List Submitted Applications</tag>
        </tags>
      </method>
    </resource>
	
	<resource path="/interface/bdm/payments" >
    <method verb="GET">
        <facade
          class="BDMDECDPaymentsAPI"
          method="listPayments"
        />
        <tags>
          <tag>DECD Interface - List Payments </tag>
        </tags>
      </method>
    </resource>
	
	<resource path="/interface/bdm/payment_messages" >
      <method verb="GET">
