    </mapping>
    <mapping>
      <source-attribute
        name="caseReference"
        struct-name="curam.core.struct.CaseReference"
      />
      <target-attribute
        name="caseReference"
        wdo-name="IdenticalEvidenceSharingWDO"
      />
    </mapping>
    <mapping>
      <source-attribute
        name="evidenceDescriptorID"
        struct-name="curam.core.sl.infrastructure.entity.struct.EvidenceDescriptorKey"
      />
      <target-attribute
        name="evidenceDescriptorID"
        wdo-name="IdenticalEvidenceSharingWDO"
      />
