        <transition-id idref="1"/>
      </split>
    </start-process-activity>
    <end-process-activity id="2">
      <name>
        <localized-text>
          <locale language="en">End Process Activity</locale>
        </localized-text>
      </name>
      <description>
        <localized-text>
          <locale language="en">The end process activity</locale>
        </localized-text>
      </description>
      <join type="none"/>
    </end-process-activity>
    <manual-activity
      category="AC1"
      id="4"
    >
      <name>
        <localized-text>
          <locale language="en">Identical Evidence Sharing Synchronization</locale>
        </localized-text>
      </name>
      <description>
        <localized-text>
          <locale language="en">Notification issued following identical evidence sharing as a result of evidence update.</locale>
        </localized-text>
      </description>
      <join type="none"/>
      <split type="and">
        <transition-id idref="5"/>
        <transition-id idref="7"/>
      </split>
      <task>
        <message>
          <message-text>
            <localized-text>
              <!--  BEGIN, CR00236468, GYH -->
              <locale language="en">An update received to shared identical evidence %1s on Case %2s.</locale>
              <!--  END, CR00236468 -->
            </localized-text>
          </message-text>
          <message-parameters>
            <wdo-attribute
              name="evidenceType"
              wdo-name="IdenticalEvidenceSharingWDO"
            />
            <wdo-attribute
              name="caseReference"
              wdo-name="IdenticalEvidenceSharingWDO"
            />
          </message-parameters>
        </message>
        <actions>
          <action
            open-modal="true"
            page-id="WorkflowEvents_identicalEvidenceSynchronizationComplete"
            principal-action="true"
          >
            <message>
              <message-text>
                <localized-text>
                  <locale language="en">I have completed all work on this task.</locale>
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="evidenceDescriptorID">
              <wdo-attribute
                name="evidenceDescriptorID"
                wdo-name="IdenticalEvidenceSharingWDO"
              />
            </link-parameter>
          </action>
          <action
            open-modal="true"
            page-id="WorkflowEvents_cannotCompleteIdenticalEvidenceSynchronization"
            principal-action="true"
          >
            <message>
              <message-text>
                <localized-text>
                  <locale language="en">There are outstanding issues on this task.  Escalate to supervisor.</locale>
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="evidenceDescriptorID">
              <wdo-attribute
                name="evidenceDescriptorID"
                wdo-name="IdenticalEvidenceSharingWDO"
              />
            </link-parameter>
          </action>
          <!--  BEGIN, CR00236468, GYH -->
          <action
            page-id="EvidenceBroker_resolveInEditEvidence"
            principal-action="false"
          >
            <message>
              <message-text>
                <localized-text>
                  <locale language="en">Review In-Edit Evidence</locale>
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="caseID">
              <wdo-attribute
                name="caseID"
                wdo-name="IdenticalEvidenceSharingWDO"
              />
            </link-parameter>
          </action>
          <!--  END, CR00236468 -->
        </actions>
        <allow-deadline-override>true</allow-deadline-override>
        <allow-task-forwarding>true</allow-task-forwarding>
      </task>
      <allocation-strategy
        identifier="curam.core.sl.intf.WorkflowAllocationFunction.caseOwnerAllocationStrategy"
        type="function"
      >
        <function-mappings>
          <formal-parameters>
            <formal-parameter index="0">
              <struct type="curam.core.sl.struct.CaseIDKey">
                <field name="caseID">
                  <base-type type="INT64">
                    <wdo-attribute
                      name="caseID"
                      wdo-name="IdenticalEvidenceSharingWDO"
                    />
                  </base-type>
                </field>
              </struct>
            </formal-parameter>
          </formal-parameters>
        </function-mappings>
      </allocation-strategy>
      <event-wait wait-on-all-events="false">
        <events>
          <event
            event-class="EvidenceBroker"
            event-type="IdenticalEvidenceSynchronized"
            identifier="1"
          >
            <event-match-attribute
              name="evidenceDescriptorID"
              wdo-name="IdenticalEvidenceSharingWDO"
            />
          </event>
          <event
            event-class="EvidenceBroker"
            event-type="IdenticalEvidenceNotSynchronized"
            identifier="2"
          >
            <event-match-attribute
              name="evidenceDescriptorID"
              wdo-name="IdenticalEvidenceSharingWDO"
            />
          </event>
          <event
            event-class="TASK"
            event-type="CLOSED"
            identifier="3"
          >
            <event-match-attribute
              name="taskID"
              wdo-name="Context_Task"
            />
          </event>
        </events>
      </event-wait>
      <biz-object-associations>
        <biz-object-association biz-object-type="BOT1">
          <wdo-attribute
            name="caseID"
            wdo-name="IdenticalEvidenceSharingWDO"
          />
        </biz-object-association>
      </biz-object-associations>
    </manual-activity>
    <manual-activity id="7">
      <name>
        <localized-text>
          <locale language="en">Synchronization could not be completed</locale>
        </localized-text>
      </name>
      <join type="none"/>
      <split type="none">
        <transition-id idref="8"/>
      </split>
      <task>
        <message>
          <message-text>
            <localized-text>
              <locale language="en">Failed to create incoming evidence %1s on Case %2s.</locale>
            </localized-text>
          </message-text>
          <message-parameters>
            <wdo-attribute
              name="evidenceType"
              wdo-name="IdenticalEvidenceSharingWDO"
            />
            <wdo-attribute
              name="caseReference"
              wdo-name="IdenticalEvidenceSharingWDO"
            />
          </message-parameters>
        </message>
        <actions>
          <action
            open-modal="true"
            page-id="WorkflowEvents_supervisorEvidenceSynchronizationComplete"
            principal-action="true"
          >
            <message>
              <message-text>
                <localized-text>
                  <locale language="en">I have resolved all issues associated with this task</locale>
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="evidenceDescriptorID">
              <wdo-attribute
                name="evidenceDescriptorID"
                wdo-name="IdenticalEvidenceSharingWDO"
              />
            </link-parameter>
          </action>
        </actions>
        <allow-deadline-override>true</allow-deadline-override>
        <allow-task-forwarding>true</allow-task-forwarding>
      </task>
      <allocation-strategy
        identifier="curam.core.sl.intf.NotificationAllocationFunction.caseSupervisorStrategy"
        type="function"
      >
        <function-mappings>
          <formal-parameters>
            <formal-parameter index="0">
              <base-type type="INT64">
                <wdo-attribute
                  name="caseID"
                  wdo-name="IdenticalEvidenceSharingWDO"
                />
              </base-type>
            </formal-parameter>
          </formal-parameters>
        </function-mappings>
      </allocation-strategy>
      <event-wait wait-on-all-events="false">
        <events>
          <event
            event-class="EvidenceBroker"
            event-type="IdenticalEvidenceSynchronized"
            identifier="1"
          >
            <event-match-attribute
              name="evidenceDescriptorID"
              wdo-name="IdenticalEvidenceSharingWDO"
            />
          </event>
          <event
            event-class="EvidenceBroker"
            event-type="SupervisorSynchronizeTaskComplete"
            identifier="2"
          >
            <event-match-attribute
              name="evidenceDescriptorID"
              wdo-name="IdenticalEvidenceSharingWDO"
            />
          </event>
          <event
            event-class="TASK"
            event-type="CLOSED"
            identifier="3"
          >
            <event-match-attribute
              name="taskID"
              wdo-name="Context_Task"
            />
          </event>
        </events>
      </event-wait>
      <biz-object-associations>
        <biz-object-association biz-object-type="BOT1">
          <wdo-attribute
            name="caseID"
            wdo-name="IdenticalEvidenceSharingWDO"
          />
        </biz-object-association>
      </biz-object-associations>
    </manual-activity>
    <route-activity id="6">
      <name>
        <localized-text>
