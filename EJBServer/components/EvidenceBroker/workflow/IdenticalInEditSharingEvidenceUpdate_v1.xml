    />
    <transition
      from-activity-idref="4"
      id="5"
      to-activity-idref="6"
    />
    <transition
      from-activity-idref="6"
      id="6"
      to-activity-idref="2"
    />
    <transition
      from-activity-idref="4"
      id="7"
      to-activity-idref="7"
    >
      <condition>
        <expression
          conjunction="and"
          data-item-lhs="Context_Event.fullyQualifiedEventType"
          data-item-rhs="&quot;EvidenceBroker.IdenticalEvidenceNotSynchronized&quot;"
          id="1"
          operation="=="
        />
      </condition>
    </transition>
    <transition
