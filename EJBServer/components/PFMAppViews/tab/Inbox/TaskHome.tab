<tc:tab-config 
  xmlns:tc="http://www.curamsoftware.com/curam/util/client/tab-config"
  id="TaskHome">
  
  <tc:page-param name="taskID"/>
  
  <tc:menu id="TaskHomeMenu" />
	
  <tc:context page-id="TaskManagement_viewTaskHomeTabDetails" height="180"/>

  <!-- See TaskHome.nav for details of the tree meta-data. --> 
  <tc:navigation id="TaskHome"/>
  
  <tc:tab-refresh>
    <tc:onsubmit page-id="TaskManagement_ReserveTask" context="true"/>
    <tc:onsubmit page-id="TaskManagement_modifyTimeWorked" context="true"/>
    <tc:onsubmit page-id="TaskManagement_modifyPriority" context="true"/>
    <tc:onsubmit page-id="TaskManagement_modifyDeadline" context="true"/>    
    <tc:onsubmit page-id="TaskManagement_UnReserveTask" context="true"/>
    <tc:onsubmit page-id="TaskManagement_forward" context="true"/>
    <tc:onsubmit page-id="TaskManagement_reallocate" context="true"/>
    <tc:onsubmit page-id="TaskManagement_DeferTask" context="true"/>
    <tc:onsubmit page-id="TaskManagement_RestartTask" context="true"/>
    <tc:onsubmit page-id="TaskManagement_closeTask" context="true"/>    
  </tc:tab-refresh>  
  
</tc:tab-config>






  
  
