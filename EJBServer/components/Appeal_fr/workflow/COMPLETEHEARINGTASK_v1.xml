  <name>COMPLETEHEARINGTASK</name>  
  <process-display-name> 
    <localized-text> 
      <locale language="fr">Exécution d'une tâche d'audience</locale>  
      <locale language="en">Complete Hearing Task</locale>
    </localized-text> 
  </process-display-name>  
  <description> 
    <localized-text> 
      <locale language="fr">
        <!-- BEGIN, CR00306765, AKr -->
        <!-- END, CR00306765 -->Crée une tâche pour le responsable affecté à une audience lorsque celle-ci est
        terminée afin d'indiquer qu'une décision doit être prise pour le dossier examiné à l'audience.
      </locale>  
      <locale language="en">Creates a task for the hearing official assigned to a hearing when it is
        completed, to indicate that a decision needs to be made for the hearing case.</locale>
    </localized-text> 
  </description>  
  <documentation>COMPLETEHEARINGTASK</documentation>  
  <enactment-mappings> 
    <mapping> 
      <source-attribute name="hearingID" struct-name="curam.appeal.sl.entity.struct.HearingDtls"/>  
      <target-attribute name="HearingID" wdo-name="COMPLETEHEARINGTASK"/> 
    </mapping> 
  </enactment-mappings>  
  <wdos> 
    <wdo> 
      <wdo-name>COMPLETEHEARINGTASK</wdo-name>  
      <display-name> 
        <localized-text> 
          <locale language="fr">COMPLETEHEARINGTASK</locale>  
          <locale language="en">COMPLETEHEARINGTASK</locale>
        </localized-text> 
      </display-name>  
      <attributes> 
        <attribute> 
          <attribute-name>HearingID</attribute-name>  
          <display-name> 
            <localized-text> 
              <locale language="fr">Identifiant de l'audience</locale>  
              <locale language="en">HearingID</locale>
            </localized-text> 
          </display-name>  
          <type>INT64</type>  
          <required-at-enactment>true</required-at-enactment> 
        </attribute> 
      </attributes> 
    </wdo> 
  </wdos>  
  <activities> 
    <start-process-activity id="29697"> 
      <name> 
