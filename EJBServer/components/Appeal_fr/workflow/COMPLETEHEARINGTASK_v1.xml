        </localized-text> 
      </description>  
      <join type="none"/>  
      <split type="none"> 
        <transition-id idref="29702"/> 
      </split>  
      <task> 
        <message> 
          <message-text> 
            <localized-text> 
              <locale language="fr">Audience terminée pour le dossier %1n</locale>  
              <locale language="en">Complete Hearing for case %1n</locale>
            </localized-text> 
