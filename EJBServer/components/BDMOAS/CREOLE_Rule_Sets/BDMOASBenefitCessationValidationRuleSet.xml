<RuleSet name="BDMOASBenefitCessationValidationRuleSet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../build/svr/creole.gen/schema/RuleSet.xsd">
	<Class extends="DefaultEvidenceValidationResult"
		extendsRuleSet="EvidenceValidationRuleSet" name="ValidationResult">
		<Attribute name="evidence">
			<type>
				<ruleclass name="BDMOASBenefitCessation"
					ruleset="BDMOASBenefitCessationRuleSet" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>
		<Attribute name="standardValidations">
			<type>
				<javaclass name="java.util.List">
					<ruleclass name="Validation"
						ruleset="EvidenceValidationRuleSet" />
				</javaclass>
			</type>
			<derivation>
				<fixedlist>
					<listof>
						<ruleclass name="Validation"
							ruleset="EvidenceValidationRuleSet" />
					</listof>
					<members>
						<reference attribute="nonOASValidation" />
					</members>
				</fixedlist>
			</derivation>
		</Attribute>
		<Attribute name="nonOASValidation">
			<type>
				<ruleclass name="Validation"
					ruleset="EvidenceValidationRuleSet" />
			</type>
			<derivation>
				<create ruleclass="Validation"
					ruleset="EvidenceValidationRuleSet">
					<reference attribute="nonOASFailure" />
					<reference attribute="nonOASFailureMessage" />
				</create>
			</derivation>
		</Attribute>
		<Attribute name="nonOASFailure">
			<type>
				<javaclass name="java.lang.Boolean" />
			</type>
			<derivation>
				<all>
					<fixedlist>
						<listof>
							<javaclass name="Boolean" />
						</listof>
						<members>
							<not>
								<equals>
									<reference attribute="benefitType">
										<reference attribute="applicationDetails">
											<reference attribute="evidence" />
										</reference>
									</reference>
									<Code table="BDMOASBenefitType">
										<String value="BT1" />
									</Code>
								</equals>
							</not>
							<not>
								<equals>
									<null />
									<reference attribute="reinstatementDate">
										<reference attribute="evidence" />
									</reference>
								</equals>
							</not>
						</members>
					</fixedlist>
				</all>
			</derivation>
		</Attribute>
		<Attribute name="nonOASFailureMessage">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<ResourceMessage key="ERR_NON_OAS_REINSTATEMENT"
					resourceBundle="curam.ca.gc.bdmoas.evidence.BDMOASBenefitCessationValidationRuleSet" />
			</derivation>
		</Attribute>
	</Class>
</RuleSet>