<RuleSet name="BDMOASDeemedDateSummaryRuleSet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../build/svr/creole.gen/schema/RuleSet.xsd">
	<Class extends="DefaultEvidenceSummary"
		extendsRuleSet="EvidenceSummaryRuleSet" name="SummaryInformation">
		<Attribute name="evidence">
			<type>
				<ruleclass name="BDMOASDeemedDate"
					ruleset="BDMOASDeemedDateRuleSet" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>
		<Attribute name="summary">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<choose>
					<type>
						<javaclass name="curam.creole.value.Message" />
					</type>
					<when>
						<condition>
							<equals>
								<Code table="BDMOASDeemedDateReason">
									<String value="DDR4" />
								</Code>
								<reference attribute="deemedDateReason">
									<reference attribute="evidence" />
								</reference>
							</equals>
						</condition>
						<value>
							<reference attribute="protectiveSummary" />
						</value>
					</when>
					<otherwise>
						<value>
							<reference attribute="reasonSummary" />
						</value>
					</otherwise>
				</choose>
			</derivation>
		</Attribute>
		<Attribute name="protectiveSummary">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<ResourceMessage key="ProtectiveSummaryMessage"
					resourceBundle="curam.ca.gc.bdmoas.evidence.BDMOASDeemedDateSummaryRuleSet">
					<reference attribute="deemedDateReason">
						<reference attribute="evidence" />
					</reference>
					<reference attribute="country">
						<reference attribute="evidence" />
					</reference>
				</ResourceMessage>
			</derivation>
		</Attribute>
		<Attribute name="reasonSummary">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<ResourceMessage key="ReasonSummaryMessage"
					resourceBundle="curam.ca.gc.bdmoas.evidence.BDMOASDeemedDateSummaryRuleSet">
					<reference attribute="deemedDateReason">
						<reference attribute="evidence" />
					</reference>
				</ResourceMessage>
			</derivation>
		</Attribute>
	</Class>
</RuleSet>