<?xml version="1.0" encoding="UTF-8"?>
<!-- Task 61872 DEV: Implement Sponsorship Evidence -->
<RuleSet name="BDMOASSponsorshipAgreementDataRuleSet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../build/svr/creole.gen/schema/RuleSet.xsd">

	<Class name="BDMOASSponsorshipAgreement" extends="ActiveSuccessionSet"
		extendsRuleSet="PropagatorRuleSet">

		<Annotations>
			<SuccessionSetPopulation
				startDateAttribute="startDate" />
		</Annotations>

		<Attribute name="startDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="endDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="sponsorName">
			<type>
				<javaclass name="java.lang.String" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="breakdownReason">
			<type>
				<codetableentry table="BDMOASBreakdownReason" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="breakdownDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>
		
		<Attribute name="description">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<ResourceMessage
					key="DynamicEvidenceSuccessionSet.description"
					resourceBundle="curam.dynamicevidence.cer.rules.InfrastructureRules">
					<reference attribute="successionID" />
				</ResourceMessage>
			</derivation>
		</Attribute>
		
		<Attribute name="sponsorship">
			<Annotations>
				<relatedSuccessionSet relationship="parent" />
				<Label label-id="sponsorship" name="" />
			</Annotations>
			<type>
				<ruleclass name="BDMOASSponsorship"
					ruleset="BDMOASSponsorshipDataRuleSet" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

	</Class>

</RuleSet>