<?xml version="1.0" encoding="UTF-8"?>
<!-- Task 61872 DEV: Implement Sponsorship Evidence -->
<RuleSet name="BDMOASSponsorshipAgreementRuleSet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../build/svr/creole.gen/schema/RuleSet.xsd">

	<Class name="BDMOASSponsorshipAgreement" extends="DynamicEvidence"
		extendsRuleSet="DynamicEvidenceRuleSet">

		<Attribute name="startDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="endDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="sponsorName">
			<type>
				<javaclass name="java.lang.String" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="breakdownReason">
			<type>
				<codetableentry table="BDMOASBreakdownReason" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="breakdownDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>
		
		<Attribute name="sponsorship">
			<type>
				<ruleclass name="BDMOASSponsorship"
					ruleset="BDMOASSponsorshipRuleSet" />
			</type>
			<derivation>
				<call
					class="curam.dynamicevidence.cer.impl.DynamicEvidenceStatics"
					method="getParent">
					<type>
						<ruleclass name="BDMOASSponsorship"
							ruleset="BDMOASSponsorshipRuleSet" />
					</type>
					<arguments>
						<this />
						<String value="BDMOASSponsorship" />
					</arguments>
				</call>
			</derivation>
		</Attribute>

	</Class>

</RuleSet>