<?xml version="1.0" encoding="UTF-8"?>
<RuleSet name="BDMOASSponsorshipSummaryRuleSet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.curamsoftware.com/CreoleRulesSchema.xsd">

	<Class name="BDMOASSponsorshipSummary"
		extends="DefaultEvidenceSummary"
		extendsRuleSet="EvidenceSummaryRuleSet">

		<Attribute name="evidence">
			<type>
				<ruleclass name="BDMOASSponsorship"
					ruleset="BDMOASSponsorshipRuleSet" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="summary">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<choose>
					<type>
						<javaclass name="curam.creole.value.Message" />
					</type>
					<when>
						<condition>
							<equals>
								<reference attribute="isSponsored">
									<reference attribute="evidence" />
								</reference>
								<Code table="BDMYesNo">
									<String value="BOASYN001" />
								</Code>
							</equals>
						</condition>
						<value>
							<ResourceMessage key="SponsoredSummary"
								resourceBundle="curam.ca.gc.bdmoas.evidence.BDMOASSponsorshipSummaryRuleSet" />
						</value>
					</when>
					<otherwise>
						<value>
							<ResourceMessage key="NotSponsoredSummary"
								resourceBundle="curam.ca.gc.bdmoas.evidence.BDMOASSponsorshipSummaryRuleSet" />
						</value>
					</otherwise>
				</choose>
			</derivation>
		</Attribute>

	</Class>

</RuleSet>