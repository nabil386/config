<RuleSet name="BDMOASBenefitCessationSummaryRuleSet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../build/svr/creole.gen/schema/RuleSet.xsd">
	<Class extends="DefaultEvidenceSummary"
		extendsRuleSet="EvidenceSummaryRuleSet" name="SummaryInformation">
		<Attribute name="evidence">
			<type>
				<ruleclass name="BDMOASBenefitCessation"
					ruleset="BDMOASBenefitCessationRuleSet" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>
		<Attribute name="applicationDetails">
			<type>
				<ruleclass name="BDMOASApplicationDetails"
					ruleset="BDMOASApplicationDetailsRuleSet" />
			</type>
			<derivation>
				<reference attribute="applicationDetails">
					<reference attribute="evidence" />
				</reference>
			</derivation>
		</Attribute>
		<Attribute name="summary">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<choose>
					<type>
						<javaclass name="curam.creole.value.Message" />
					</type>
					<when>
						<condition>
							<equals>
								<null />
								<reference attribute="reinstatementDate">
									<reference attribute="evidence" />
								</reference>
							</equals>
						</condition>
						<value>
							<reference attribute="ceasedSummary" />
						</value>
					</when>
					<otherwise>
						<value>
							<reference attribute="reinstatedSummary" />
						</value>
					</otherwise>
				</choose>
			</derivation>
		</Attribute>
		<Attribute name="ceasedSummary">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<ResourceMessage key="CeasedSummary"
					resourceBundle="curam.ca.gc.bdmoas.evidence.BDMOASBenefitCessationSummaryRuleSet">
					<reference attribute="benefitType">
						<reference attribute="applicationDetails" />
					</reference>
				</ResourceMessage>
			</derivation>
		</Attribute>
		<Attribute name="reinstatedSummary">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<ResourceMessage key="ReinstatedSummary"
					resourceBundle="curam.ca.gc.bdmoas.evidence.BDMOASBenefitCessationSummaryRuleSet">
					<reference attribute="benefitType">
						<reference attribute="applicationDetails" />
					</reference>
				</ResourceMessage>
			</derivation>
		</Attribute>
	</Class>
</RuleSet>