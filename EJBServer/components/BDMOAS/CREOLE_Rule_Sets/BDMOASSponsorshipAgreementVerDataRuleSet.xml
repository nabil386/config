<?xml version="1.0" encoding="UTF-8"?>
<!-- Task 61872 DEV: Implement Sponsorship Evidence -->
<RuleSet name="BDMOASSponsorshipAgreementVerDataRuleSet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.curamsoftware.com/CreoleRulesSchema.xsd">

	<Class name="BDMOASSponsorshipAgreement" extends="ActiveInEditEvidenceRow"
		extendsRuleSet="PropagatorRuleSet">

		<Attribute name="startDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="endDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="sponsorName">
			<type>
				<javaclass name="java.lang.String" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="breakdownReason">
			<type>
				<codetableentry table="BDMOASBreakdownReason" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>

		<Attribute name="breakdownDate">
			<type>
				<javaclass name="curam.util.type.Date" />
			</type>
			<derivation>
				<specified />
			</derivation>
		</Attribute>
		
		<Attribute name="description">
			<type>
				<javaclass name="curam.creole.value.Message" />
			</type>
			<derivation>
				<ResourceMessage
					key="DynamicEvidenceSuccessionSet.description"
					resourceBundle="curam.dynamicevidence.cer.rules.InfrastructureRules">
					<reference attribute="successionID" />
				</ResourceMessage>
			</derivation>
		</Attribute>
		
		<Attribute name="sponsorship">
			<type>
				<ruleclass name="BDMOASSponsorship"
					ruleset="BDMOASSponsorshipRuleSet" />
			</type>
			<derivation>
				<call
					class="curam.dynamicevidence.cer.impl.DynamicEvidenceStatics"
					method="getParent">
					<type>
						<ruleclass name="BDMOASSponsorship"
							ruleset="BDMOASSponsorshipRuleSet" />
					</type>
					<arguments>
						<this />
						<String value="BDMOASSponsorship" />
					</arguments>
				</call>
			</derivation>
		</Attribute>

	</Class>

</RuleSet>