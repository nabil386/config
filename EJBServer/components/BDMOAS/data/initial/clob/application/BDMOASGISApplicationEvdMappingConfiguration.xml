
<application-builder-config xmlns="http://www.curamsoftware.com/schemas/GUMBO/ApplicationBuilderConfig">
	
	<evidence-config package="curam.evidence">
		<!-- Phone evidence -->
		<entity name="PDCPhoneNumber" ev-type-code="PDC0000256" dyn-evidence-primary-cpr-field-name="participant"/>
		<!-- Email evidence -->
		<entity name="PDCEmailAddress" ev-type-code="PDC0000260" dyn-evidence-primary-cpr-field-name="participant"/>
		<!-- Address evidence -->

		<entity name="Relationship"
			ev-type-code="PDC0000265" 
			dyn-evidence-primary-cpr-field-name="relatedParticipant">
				<ev-field
					is-reference-attribute="true"
					referenced-as="participant"
					target-name="participant"
				/>
		</entity>
		
		<entity name="VoluntaryTaxWithhold"
			ev-type-code="BDMDET0007" 
			dyn-evidence-primary-cpr-field-name="caseParticipantRoleID">
				<ev-field
					is-reference-attribute="true"
					referenced-as="nominee"
					target-name="nominee"
				/>
		</entity>

		<entity name="Attestation" ev-type-code="DETBDM8006" dyn-evidence-primary-cpr-field-name="attestee"/>

	</evidence-config>
</application-builder-config>
