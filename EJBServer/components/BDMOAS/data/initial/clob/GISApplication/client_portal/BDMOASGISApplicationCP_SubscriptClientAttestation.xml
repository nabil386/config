<?xml version="1.0" encoding="UTF-8"?>
 
<ieg-script xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ieg-schema.xsd"
finish-page="CommonIntake_finishInternalIntakeScript" 
	quit-page="CommonIntake_quitInternalIntakeScript"		
	show-sections="true"
	show-progress-bar="true"
	validate-save-and-exit="false"
	highlight-validation="true"
	>
		
	<identifier id="BDMOASGISApplicationCP" scriptversionnumber="V1" type="Intake" />

	<section>
		<title id="Section.Title.ClientAttestation">
			<![CDATA[Client Attestation]]>
		</title>
		<icon enabled-image="sample_about_you"
			current-image="sample_about_you" />

		<question-page 
			id="Attestation" 
			progress="0" 
			show-back-button="true" 
			show-next-button="true" 
			show-exit-button="true"			
			show-save-exit-button="true"
			>
			
			<title id="QuestionPage.Title.Attestation">
				<![CDATA[Attestation]]>
			</title>
			
			<description id="QuestionPage.Description.MandatoryFields">
				<![CDATA[All the fields marked * are mandatory.]]>
			</description>			

			<cluster entity="Attestation">
				<title id="Cluster.Title.Attestation">
					<![CDATA[Attestation]]>
				</title>
				<description id="Cluster.Description.Attestation">
					<![CDATA[If you make a false or misleading statement, you may be subject to an administrative monetary penalty and interest,]]>
				</description>					

					<question id="applicantAttestationInd" mandatory="true">
						<label id="Question.Label.ApplicantAttestation">
							<![CDATA[By clicking this box, I declare that the information on this application is true and complete. I realize that..]]>
						</label>					
					</question>							
			</cluster>

			<cluster entity="Attestation">
				<title id="Cluster.Title.SpouseOrCLPConsent">
					<![CDATA[Spouse or common-law partner consent and declaration]]>
				</title>		

				<question id="spouseOrCLPConsentInd" mandatory="true">
					<label id="Question.Label.SpouseOrCLPConsent">
						<![CDATA[spouse or common-law partner consent and declaration<br>I also declare that my spouse or common-law partner is aware...]]>
					</label>					
				</question>							
			</cluster>
			
			<cluster>
				<title id="Cluster.Title.PrivacyNotice">
					<![CDATA[Privacy Notice Statement]]>
				</title>
				<description id="Cluster.Description.PrivacyNotice">
					<![CDATA[The information you provide is collected under the authority of the Old Age Security Act to determine your eligibility for benefits.]]>
				</description>
				<!--<condition expression="Person.isPrimaryParticipant==false">	
				  <question id="applicantAttestationInd">
						<label id="Question.Label.PrivacyNotice">
							<![CDATA[Privacy Notice Statement and Spouse or common-law partner consent and declaration.]]>
						</label>					
				</question> 
				</condition>-->														
			</cluster>			
		</question-page>
	</section>
</ieg-script>
