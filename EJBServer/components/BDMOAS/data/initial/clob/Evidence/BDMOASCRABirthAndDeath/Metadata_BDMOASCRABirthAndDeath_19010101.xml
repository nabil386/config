<?xml version="1.0" encoding="UTF-8"?>
<EvidenceTypeVersion
  correctionOnly="true"
  modifiable="true"
  readOnly="true"
  relatedParticipant="person"
>
  <Model>
    <Attributes>
      <Attribute>
        <RelatedCPAttribute
          cpRoleType="MEM"
          name="person"
          participantType="Person"
        >
          <CPSearchType code="PRI"/>
          <CPSearchType code="MEM"/>
        </RelatedCPAttribute>
      </Attribute>
	<!-- BEGIN CRA Birth and Death Details -->
      <Attribute>
        <DataAttribute name="dateOfBirth" mandatory="true">
          <DomainType dataType="Date"/>
        </DataAttribute>
      </Attribute>
      <Attribute>
        <DataAttribute name="dateOfDeath">
          <DomainType dataType="Date">
            <DateOptions currentDate="LessThanOrEqualTo"/>
          </DomainType>
        </DataAttribute>
      </Attribute>  
    </Attributes>
  </Model> 
	<Validations>
		<PatternValidations>
			<Validator>
				<DuplicateValidator>
					<DuplicateAttributes>
						<DuplicateAttribute
							name="person" />
						<ValidationMessageInformation>
							<ValidationMessageMapping>
								<ValidationMessage>
									<ValidationMessageResource
										id="ERR_ONLY_ONE_RECORD" />
								</ValidationMessage>
							</ValidationMessageMapping>
						</ValidationMessageInformation>
					</DuplicateAttributes>
				</DuplicateValidator>
			</Validator>
		</PatternValidations>
	</Validations>  	
	<SummaryInformation>
        <SummaryRuleset
            ruleSetName="BDMOASCRABirthAndDeathSummaryRuleSet" />
    </SummaryInformation>
  <UserInterface
    createDialogWidth="700"
    modifyDialogWidth="700"
  >
    <Cluster>
      <RelCPCluster
        defaultToBlank="true"
        enableMultiMemberUpdates="false"
        fullCreateParticipant="false"
        isOnCreatePage="false"
        isOnModifyPage="false"
        isOnViewPage="true"
        modifyOption="no"
        showParticipantTypeFilter="true"
        useSingleName="false"
      >
        <StandardField source="person"/>
        <ClusterName id="Participant"/>
        <LabelName id="Participant.Description.ID3"/>
      </RelCPCluster>
    </Cluster>
     
    <Cluster>
      <StandardCluster
        isOnCreatePage="false"
        isOnModifyPage="false"
        isOnViewPage="true"
        labelWidth="60"
        numberOfColumns="2"
      >
        <Title id="Cluster.Title.BirthAndDeath"/>
          
        <StandardClusterField>
          <StandardField
            modifiable="false"
            source="dateOfBirth"
            useDefault="false"
          >
            <Label id="Field.Label.DateOfBirth"/>
          </StandardField>
        </StandardClusterField>
 
        <StandardClusterField>
          <StandardField
            modifiable="false"
            source="dateOfDeath"
            useDefault="false"
          >
            <Label id="Field.Label.DateOfDeath"/>
          </StandardField>
        </StandardClusterField>
      </StandardCluster>
    </Cluster>
    
  </UserInterface>
</EvidenceTypeVersion>
