<?xml version="1.0" encoding="UTF-8"?>
<!-- Feature 81673: Manage Nature of Absences Evidence -->
<EvidenceTypeVersion modifiable="true" correctionOnly="true"
	relatedParticipant="participant"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../../../../../../../DynamicEvidenceMetadata.xsd">
	<Model>
		<Attributes>
			<Attribute>
				<RelatedCPAttribute cpRoleType="MEM" name="participant"
					participantType="Person">
					<CPSearchType code="PRI" />
				</RelatedCPAttribute>
			</Attribute>
			<Attribute>
				<DataAttribute name="absenceDetails">
					<DomainType dataType="String">
						<StringOptions maxSize="1200" trimLeadingSpaces="true"
							trimTrailingSpaces="true" />
					</DomainType>
				</DataAttribute>
			</Attribute>
			<Attribute>
				<CommentsAttribute name="comments" />
			</Attribute>
		</Attributes>
		<Relationships />
	</Model>
	<Validations>
		<PatternValidations>
			<Validator>
				<!-- Use dependent validator so that message does not include asterisk from the 
					cluster title. -->
				<DependentAttributeValidator
					dependency="MustEnter" source="participant" target="absenceDetails">
					<ValidationMessageInformation>
						<ValidationMessageMapping>
							<ValidationMessage>
								<ValidationMessageResource
									id="ERR_ABSENCE_DETAILS_MANDATORY" />
							</ValidationMessage>
						</ValidationMessageMapping>
					</ValidationMessageInformation>
				</DependentAttributeValidator>
			</Validator>
		</PatternValidations>
	</Validations>
	<SummaryInformation>
		<SummaryRuleset
			ruleSetName="BDMOASNatureOfAbsencesSummaryRuleSet" />
	</SummaryInformation>
	<UserInterface>
		<Cluster>
			<RelCPCluster defaultToBlank="false"
				enableMultiMemberUpdates="false" fullCreateParticipant="false"
				isOnCreatePage="true" isOnModifyPage="true" isOnViewPage="true"
				modifyOption="no" showParticipantTypeFilter="true" useSingleName="false">
				<StandardField source="participant" />
				<ClusterName id="Related.Participant.Cluster.ID2" />
				<LabelName id="Name.Label.ID2" />
				<FirstName id="First.Name.Label.ID2" />
				<SecondName id="Second.Name.Label.ID2" />
			</RelCPCluster>
		</Cluster>
		<Cluster>
			<CommentsCluster isOnCreatePage="true" isOnModifyPage="true"
				isOnViewPage="true">
				<Title id="AbsenceDetails.Cluster.Title" />
				<StandardField source="absenceDetails" />
			</CommentsCluster>
		</Cluster>
		<Cluster>
			<CommentsCluster isOnCreatePage="true" isOnModifyPage="true"
				isOnViewPage="true">
				<Title id="Comments.Cluster.Title.ID3" />
				<StandardField source="comments" />
			</CommentsCluster>
		</Cluster>
	</UserInterface>
</EvidenceTypeVersion>