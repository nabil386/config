<!--
  Download the Dynamic Evidence Metadata.
-->
<project
  default="download.dynamic.evidence.metadata"
  name="app_downloadDynamicEvidenceMetadata"
>
  <property environment="sysenv."/>
  <property
    name="location"
    value=""
  />
  <property
    name="evidenceType"
    value=""
  />
  <property
    name="effectiveDate"
    value=""
  />


  <!--  ***************************  -->
  <!--  ***  Import Properties  ***  -->
  <!--  ***************************  -->
  <import file="${sysenv.CURAMSDEJ}/bin/app_properties.xml"/>


  <!--  ***********************************************************  -->
  <!--  ***      DOWNLOAD DYNAMICEVIDENCE METADATA              ***  -->
  <!--  ***********************************************************  -->
  <target
    description="Download Dynamic Evidence Metadata artefacts"
    name="download.dynamic.evidence.metadata"
  >


    <!-- Call app_batchlauncher.xml to launch the Batch Launcher -->
    <ant
      antfile="${dir.sde.bin}/app_batchlauncher.xml"
      inheritall="false"
      target="main"
    >


      <property
        name="batch.program"
        value="curam.dynamicevidence.sl.util.metadataloader.intf.DynamicEvidenceMetadataDownloader.downloadMetadata"
      />
      <property
        name="batch.parameters"
        value="location=${location},evidenceType=${evidenceType},effectiveDate=${effectiveDate}"
      />
    </ant>


  </target>


</project>
