              <locale language="fr">adminUser</locale>  
              <locale language="en">adminUser</locale>
            </localized-text> 
          </display-name>  
          <type>STRING</type>  
          <required-at-enactment>false</required-at-enactment>  
          <process-output>false</process-output>  
