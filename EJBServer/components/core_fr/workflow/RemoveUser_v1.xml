<workflow-process category="PC1" createdBy="admin" creationDate="20090310T101425" id="28520" language-version="1.0" process-version="1" released="true"> 
  <name>RemoveUser</name>  
  <!--BEGIN, CR00361282, CL -->  
  <process-display-name> 
    <localized-text> 
      <locale language="fr">Retirer un utilisateur</locale>  
      <locale language="en">Remove User</locale>
    </localized-text> 
  </process-display-name>  
  <!--END, CR00361282 -->  
  <!-- BEGIN, CR00306684, AKr -->  
  <description> 
    <localized-text> 
      <locale language="fr">Ce processus de flux de travaux assure le traitement lorsqu'un administrateur choisit de supprimer un utilisateur de la structure d'organisation.
        Si des tâches ou des dossiers sont affectés à l'utilisateur supprimé, une tâche est créée pour l'utilisateur principal de l'organisation afin de demander que la charge de travail soit réaffectée. Notez que ce processus de flux de travaux n'est pas appelé par
        un processus prêt à l'emploi.</locale>  
      <locale language="en">This workflow process handles processing when an administrator chooses 
        to delete a user from the organisation structure.
        If there are tasks or cases assigned to the deleted user, then a task is
        created for the organisation's lead user to request the workload be 
        reassigned. Note that this workflow process is not being called by any 
        out of the box processing.</locale>
    </localized-text> 
  </description>  
  <!-- END, CR00306684 -->  
  <enactment-mappings> 
    <mapping> 
      <source-attribute name="userName" struct-name="curam.core.struct.CancelUserKeyStruct"/>  
      <target-attribute name="userName" wdo-name="RemoveUserWDO"/> 
    </mapping>  
    <mapping> 
      <source-attribute name="fullname" struct-name="curam.core.struct.UserFullname"/>  
      <target-attribute name="userFullName" wdo-name="RemoveUserWDO"/> 
    </mapping> 
  </enactment-mappings>  
