            <Label highlightonfailure="true" legislationlink=""> 
              <RuleName> 
                <Text locale="fr" value="L'indicateur d'enfant doit être VRAI"/> 
              </RuleName>  
              <SuccessText> 
                <Text locale="fr" value="L'indicateur d'enfant est Vrai"/> 
              </SuccessText>  
              <FailureText> 
                <Text locale="fr" value="L'indicateur d'enfant est Faux"/> 
              </FailureText> 
            </Label>  
            <Condition dataitemlhs="SimpleProductRulesEvidence.childIndicator" dataitemrhs="true" id="19" operation="=="/> 
          </Rule> 
