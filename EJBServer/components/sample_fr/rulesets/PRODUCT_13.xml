            <Text locale="fr" value="Exemple de taux de l'échantillon du produit maximum"/> 
          </RuleName>  
          <SuccessText> 
            <Text locale="fr" value="Réussite du taux de l'échantillon du produit max"/> 
          </SuccessText>  
          <FailureText> 
            <Text locale="fr" value="Echec du taux de l'échantillon du produit max"/> 
          </FailureText> 
        </Label>  
