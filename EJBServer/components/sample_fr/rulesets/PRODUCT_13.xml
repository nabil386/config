          <Label highlightonfailure="true" legislationlink=""> 
            <RuleName> 
              <Text locale="fr" value="Règles pour le taux d'enfant à charge maximal"/> 
            </RuleName>  
            <SuccessText> 
              <Text locale="fr" value="Réussite du taux d'enfant à charge maximal"/> 
            </SuccessText>  
            <FailureText> 
              <Text locale="fr" value="Echec du taux maximal d'enfant à charge"/> 
            </FailureText> 
          </Label>  
