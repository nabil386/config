          <Label highlightonfailure="true" legislationlink=""> 
            <RuleName> 
              <Text locale="fr" value="Règles pour le taux de l'échantillon du produit max"/> 
            </RuleName>  
            <SuccessText> 
              <Text locale="fr" value="Règles pour la réussite du taux de l'échantillon du produit maximum"/> 
            </SuccessText>  
            <FailureText> 
              <Text locale="fr" value="Règles pour l'échec de l'échantillon du produit maximum"/> 
            </FailureText> 
          </Label>  
          <Rule id="12" rulemode="all" summaryitem="true"> 
            <Label highlightonfailure="true" legislationlink=""> 
              <RuleName> 
                <Text locale="fr" value="L'indicateur d'éligibilité doit être Vrai"/> 
              </RuleName>  
              <SuccessText> 
                <Text locale="fr" value="L'indicateur d'éligibilité est Vrai"/> 
              </SuccessText>  
              <FailureText> 
                <Text locale="fr" value="L'indicateur d'éligibilité est Faux"/> 
              </FailureText> 
            </Label>  
            <Condition dataitemlhs="SimpleProductRulesEvidence.eligibleInd" dataitemrhs="true" id="13" operation="=="/> 
          </Rule> 
        </RuleGroup> 
      </Objective>  
      <Objective comment="Max Child Rate for Sample Benefit." deductionallowable="true" description="" id="14" priority="1" ratefctype="CT1" ratetarget="RC1" ratetype="PC8" recordid="13" targetid="0"> 
        <Label highlightonfailure="true" legislationlink=""> 
          <RuleName> 
            <Text locale="fr" value="Objectif de maximum d'enfant à charge"/> 
          </RuleName>  
          <SuccessText> 
            <Text locale="fr" value="Réussite de l'objectif du maximum d'enfant à charge"/> 
          </SuccessText>  
          <FailureText> 
            <Text locale="fr" value="Echec de l'objectif du maximum d'enfant à charge"/> 
          </FailureText> 
        </Label>  
        <ObjectiveTag comment="" id="15" name="Personal Child Daily Allowance" pattern="000100000" recordid="16" type="RTT3" value="SimpleProductRulesEvidence.dailyRate*(0.1)"/>  
        <ObjectiveTag comment="" id="16" name="Personal Child Monthly Allowance" pattern="200100000" recordid="17" type="RTT3" value="SimpleProductRulesEvidence.dailyRate*(0.1)*30"/>  
