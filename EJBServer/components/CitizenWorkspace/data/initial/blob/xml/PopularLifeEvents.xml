<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="page-schema.xsd">
  <identifier name="PopularLifeEvents" />
  
  <server alias="DISPLAY" class="CitizenLifeEvents"
    method="listPopularLifeEventTypesForCA">
  </server>
  <header>
    <title id="Page.Title" />
    <description source="/DISPLAY/xmlData/description" />
    <icon id="icon_am_i_eligible" />
  </header>
  <content>
    
    <container>
      <title id="LifeEvents.Title" />
      <help id="LifeEvents.Help" />
      
      <list>
        <container style="cw-text-pluggable" source="/DISPLAY/xmlData/life-events/life-event[]" width="30">
          <title source="/DISPLAY/xmlData/life-events/life-event[]/name" />
          <description source="/DISPLAY/xmlData/life-events/life-event[]/description" />

          <field type="CW_HYPERLINKS" source="/DISPLAY/xmlData/life-events/life-event[]/context-id">
                <title id="Page.Launch" />
                <param name="in-description" value="true" />
                <param name="uri-prefix" value="PlayerPage.do?page=LaunchLifeEvent%26lifeEvent=" />
          </field>
          
        </container>
      </list>
    </container>
    
  </content>  

</page>
