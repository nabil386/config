  <name>RemoveJob</name>
  <!--BEGIN, CR00361282, CL -->
  <process-display-name>
    <localized-text>
      <locale language="en">Remove Job</locale>
    </localized-text>
  </process-display-name>
  <!--END, CR00361282 -->
  <!-- BEGIN, CR00306684, AKr -->
  <description>
    <localized-text>
      <locale language="en">
        This workflow process handles processing when an administrator chooses
        to delete a job from the organisation structure.  If there are tasks
        assigned to the deleted job, then a task is created for the
        organisation's lead user to request the workload be reassigned.
      </locale>
    </localized-text>
  </description>
  <!-- END, CR00306684 -->
